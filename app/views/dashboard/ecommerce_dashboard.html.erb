                        'rgba(102, 126, 234, 0.8)',
                        'rgba(67, 233, 123, 0.8)',
                        'rgba(74, 172, 254, 0.8)',
                        'rgba(239, 68, 68, 0.8)'
                    ],
                    borderColor: [
                        'rgb(102, 126, 234)',
                        'rgb(67, 233, 123)',
                        'rgb(74, 172, 254)',
                        'rgb(239, 68, 68)'
                    ],
