                        'rgba(247, 144, 251, 0.8)',
                        'rgba(254, 225, 64, 0.8)',
                        'rgba(74, 172, 254, 0.8)'
                    ],
                    borderColor: [
                        'rgb(102, 126, 234)',
                        'rgb(67, 233, 123)',
                        'rgb(247, 144, 251)',
                        'rgb(254, 225, 64)',
                        'rgb(74, 172, 254)'
                    ],
                    borderWidth: 2,
                    borderRadius: 8,
                    borderSkipped: false,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0,0,0,0.1)'
                        },
                        ticks: {
                            callback: function(value) {
