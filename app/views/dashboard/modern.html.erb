        },

        updateOrderStatusChart() {
            if (this.charts.orderStatus) {
                this.charts.orderStatus.data.datasets[0].data = this.orderStatusData.map(item => item.value);
                this.charts.orderStatus.update();
            }
        },

        updateRevenueChart(data) {
            if (data.monthly_revenue_trend && this.charts.revenue) {
                const months = Object.keys(data.monthly_revenue_trend);
                const revenues = Object.values(data.monthly_revenue_trend);

                this.charts.revenue.data.labels = months;
                this.charts.revenue.data.datasets[0].data = revenues;
                this.charts.revenue.update();
            }
        },

        updateCategoryChart(data) {
            if (data.category_performance && this.charts.category) {
                const categories = Object.keys(data.category_performance);
                const revenues = Object.values(data.category_performance);

                this.charts.category.data.labels = categories;
                this.charts.category.data.datasets[0].data = revenues;
                this.charts.category.update();
            }
        },

        // Utility functions
        formatNumber(num) {
            if (!num) return '0';
            return new Intl.NumberFormat('en-IN').format(num);
        },

        formatDate(date) {
            return new Date(date).toLocaleDateString('en-IN', {
                day: '2-digit',
                month: 'short',
                year: 'numeric'
            });
        },

        formatTimeAgo(date) {
            const now = new Date();
            const diff = now - new Date(date);
            const minutes = Math.floor(diff / 60000);

            if (minutes < 1) return 'Just now';
            if (minutes < 60) return `${minutes}m ago`;

            const hours = Math.floor(minutes / 60);
            if (hours < 24) return `${hours}h ago`;

            const days = Math.floor(hours / 24);
            return `${days}d ago`;
        },

        getStatusBadgeClass(status) {
            const statusClasses = {
                'Completed': 'bg-success',
                'Processing': 'bg-warning text-dark',
                'Shipped': 'bg-primary',
                'Cancelled': 'bg-danger',
                'Pending': 'bg-secondary'
            };
            return statusClasses[status] || 'bg-secondary';
        },

        getActivityIconClass(type) {
            const iconClasses = {
                'order': 'bg-primary text-white',
                'customer': 'bg-success text-white',
                'payment': 'bg-warning text-dark',
                'inventory': 'bg-danger text-white',
                'delivery': 'bg-info text-white'
            };
            return iconClasses[type] || 'bg-secondary text-white';
        },

        getActivityIcon(type) {
            const icons = {
                'order': 'bi-cart-plus',
                'customer': 'bi-person-plus',
                'payment': 'bi-credit-card',
                'inventory': 'bi-exclamation-triangle',
                'delivery': 'bi-truck'
            };
            return icons[type] || 'bi-info-circle';
        }
    }
