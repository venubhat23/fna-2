<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= content_for(:title) || "Dhanvantri Naturals - Customer Portal" %></title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= javascript_importmap_tags %>

  <!-- Enhanced Bootstrap & Fonts -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

</head>

<body class="customer-app">
  <!-- Enhanced Customer Header -->
  <header class="customer-header">
    <div class="container-fluid h-100">
      <div class="d-flex align-items-center justify-content-between h-100 px-3">
        <!-- Mobile Toggle -->
        <button class="mobile-toggle d-lg-none" type="button" onclick="toggleCustomerSidebar()">
          <i class="fas fa-bars"></i>
        </button>

        <!-- Header Brand -->
        <div class="d-flex align-items-center">
          <div class="brand-icon-customer">
            <i class="fas fa-leaf"></i>
          </div>
          <h1 class="brand-text-customer ms-3 mb-0 d-none d-md-block">Dhanvantri Naturals</h1>
        </div>

        <!-- Header Actions -->
        <div class="d-flex align-items-center gap-3">
          <!-- Search -->
          <div class="d-none d-md-flex me-3">
            <%= form_with url: search_customer_products_path, method: :get, local: true, class: "d-flex search-form" do |f| %>
              <%= f.text_field :q, placeholder: "Search products...", class: "form-control search-input" %>
              <%= f.submit "Search", class: "btn btn-search" %>
            <% end %>
          </div>

          <!-- Cart -->
          <button type="button" class="btn btn-cart position-relative" onclick="toggleCartSidebar()">
            <i class="fas fa-shopping-cart"></i>
            <span class="cart-badge" id="cart-count" style="display: none;">0</span>
          </button>

          <!-- User Menu -->
          <% if current_customer %>
          <div class="dropdown">
            <button class="btn btn-user dropdown-toggle" type="button" data-bs-toggle="dropdown">
              <i class="fas fa-user-circle me-2"></i>
              <span class="d-none d-sm-inline"><%= current_customer.first_name %></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><%= link_to customer_profile_path, class: "dropdown-item" do %>
                <i class="fas fa-user me-2"></i>My Profile
              <% end %></li>
              <li><%= link_to customer_orders_path, class: "dropdown-item" do %>
                <i class="fas fa-shopping-bag me-2"></i>My Orders
              <% end %></li>
              <li><%= link_to customer_addresses_path, class: "dropdown-item" do %>
                <i class="fas fa-map-marker-alt me-2"></i>My Addresses
              <% end %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to customer_logout_path, method: :delete, class: "dropdown-item text-danger" do %>
                <i class="fas fa-sign-out-alt me-2"></i>Logout
              <% end %></li>
            </ul>
          </div>
          <% else %>
          <!-- Show login link when not signed in -->
          <%= link_to customer_login_path, class: "btn btn-outline-light" do %>
            <i class="fas fa-sign-in-alt me-2"></i>Login
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Enhanced Customer Sidebar -->
  <% if current_customer %>
  <%= render 'layouts/customer_sidebar' %>
  <% end %>

  <!-- Main Application Layout -->
  <main class="<%= current_customer ? 'customer-main-content' : 'customer-main-content-no-sidebar' %>">
    <div class="container-fluid">
      <!-- Flash Messages -->
      <% if notice %>
        <div id="toast-notification" class="toast-notification toast-success">
          <div class="toast-notification-content">
            <div class="d-flex align-items-center">
              <i class="fas fa-check-circle me-2"></i>
              <span><%= notice %></span>
            </div>
            <button type="button" class="btn-close ms-3" onclick="closeToast()">&times;</button>
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div id="toast-notification" class="toast-notification toast-danger">
          <div class="toast-notification-content">
            <div class="d-flex align-items-center">
              <i class="fas fa-exclamation-triangle me-2"></i>
              <span><%= alert %></span>
            </div>
            <button type="button" class="btn-close ms-3" onclick="closeToast()">&times;</button>
          </div>
        </div>
      <% end %>

      <!-- Main Content Area -->
      <div class="content-area">
        <%= yield %>
      </div>
    </div>
  </main>

  <!-- Cart Sidebar -->
  <div id="cart-sidebar" class="cart-sidebar">
    <div class="cart-sidebar-header">
      <h4 class="cart-title">
        <i class="fas fa-shopping-cart me-2"></i>
        Shopping Cart
      </h4>
      <button type="button" class="cart-close" onclick="toggleCartSidebar()">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <div class="cart-sidebar-body">
      <div id="cart-items" class="cart-items">
        <!-- Cart items will be populated here -->
      </div>

      <div id="empty-cart" class="empty-cart">
        <div class="empty-cart-icon">
          <i class="fas fa-shopping-cart"></i>
        </div>
        <p class="empty-cart-text">Your cart is empty</p>
        <p class="empty-cart-subtitle">Add some products to get started</p>
      </div>
    </div>

    <div class="cart-sidebar-footer">
      <div class="cart-summary">
        <div class="cart-total">
          <span class="total-label">Total:</span>
          <span class="total-amount" id="cart-total">₹0</span>
        </div>
        <button type="button" class="btn btn-checkout w-100" id="checkout-btn" onclick="proceedToCheckout()">
          <i class="fas fa-credit-card me-2"></i>
          Proceed to Checkout
        </button>
      </div>
    </div>
  </div>

  <!-- Cart Sidebar Overlay -->
  <div id="cart-overlay" class="cart-overlay" onclick="toggleCartSidebar()"></div>

  <!-- Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Customer App Scripts -->
  <script>
    // Customer Sidebar Toggle
    function toggleCustomerSidebar() {
      const sidebar = document.querySelector('.customer-sidebar');
      if (sidebar) {
        sidebar.classList.toggle('sidebar-open');
      }
    }

    // Toast notification functions
    function initToastNotifications() {
      const toast = document.getElementById('toast-notification');
      if (toast) {
        setTimeout(function() {
          toast.style.transform = 'translateX(0)';
        }, 100);
        setTimeout(function() {
          closeToast();
        }, 5000);
      }
    }

    function closeToast() {
      const toast = document.getElementById('toast-notification');
      if (toast) {
        toast.style.transform = 'translateX(100%)';
        setTimeout(function() {
          if (toast.parentNode) {
            toast.parentNode.removeChild(toast);
          }
        }, 300);
      }
    }

    document.addEventListener('DOMContentLoaded', function() {
      initToastNotifications();
      initCartSystem();
    });

    document.addEventListener('turbo:load', function() {
      initToastNotifications();
      initCartSystem();
    });

    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape') {
        closeToast();
        closeCartSidebar();
      }
    });

    // Cart System Functions
    function initCartSystem() {
      updateCartDisplay();
      updateCartCounter();
    }

    function toggleCartSidebar() {
      const sidebar = document.getElementById('cart-sidebar');
      const overlay = document.getElementById('cart-overlay');

      sidebar.classList.toggle('active');
      overlay.classList.toggle('active');

      if (sidebar.classList.contains('active')) {
        document.body.style.overflow = 'hidden';
        updateCartDisplay();
      } else {
        document.body.style.overflow = '';
      }
    }

    function closeCartSidebar() {
      const sidebar = document.getElementById('cart-sidebar');
      const overlay = document.getElementById('cart-overlay');

      sidebar.classList.remove('active');
      overlay.classList.remove('active');
      document.body.style.overflow = '';
    }

    function updateCartCounter() {
      const cart = JSON.parse(localStorage.getItem('customerCart') || '[]');
      const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);

      const cartBadge = document.getElementById('cart-count');
      if (cartBadge) {
        cartBadge.textContent = totalItems;
        cartBadge.style.display = totalItems > 0 ? 'flex' : 'none';
      }

      // Update any other cart counters
      const cartCounters = document.querySelectorAll('.cart-counter');
      cartCounters.forEach(counter => {
        counter.textContent = totalItems;
        counter.style.display = totalItems > 0 ? 'inline' : 'none';
      });
    }

    function updateCartDisplay() {
      const cart = JSON.parse(localStorage.getItem('customerCart') || '[]');
      const cartItemsContainer = document.getElementById('cart-items');
      const emptyCartContainer = document.getElementById('empty-cart');
      const cartTotal = document.getElementById('cart-total');
      const checkoutBtn = document.getElementById('checkout-btn');

      if (cart.length === 0) {
        cartItemsContainer.style.display = 'none';
        emptyCartContainer.style.display = 'block';
        checkoutBtn.disabled = true;
        cartTotal.textContent = '₹0';
        return;
      }

      cartItemsContainer.style.display = 'block';
      emptyCartContainer.style.display = 'none';
      checkoutBtn.disabled = false;

      let total = 0;
      cartItemsContainer.innerHTML = '';

      cart.forEach((item, index) => {
        const itemTotal = item.price * item.quantity;
        total += itemTotal;

        const cartItemHTML = `
          <div class="cart-item" data-item-index="${index}">
            <div class="cart-item-image">
              <img src="${item.image || '/assets/placeholder-product.png'}" alt="${item.name}" onerror="this.src='/assets/placeholder-product.png'">
            </div>
            <div class="cart-item-details">
              <h6 class="cart-item-name">${item.name}</h6>
              <div class="cart-item-price">₹${item.price.toLocaleString()}</div>
              <div class="cart-item-controls">
                <button type="button" class="quantity-btn" onclick="updateItemQuantity(${index}, ${item.quantity - 1})">
                  <i class="fas fa-minus"></i>
                </button>
                <span class="quantity-display">${item.quantity}</span>
                <button type="button" class="quantity-btn" onclick="updateItemQuantity(${index}, ${item.quantity + 1})">
                  <i class="fas fa-plus"></i>
                </button>
              </div>
            </div>
            <div class="cart-item-total">
              <div class="item-total-price">₹${itemTotal.toLocaleString()}</div>
              <button type="button" class="remove-item-btn" onclick="removeFromCart(${index})">
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </div>
        `;

        cartItemsContainer.innerHTML += cartItemHTML;
      });

      cartTotal.textContent = `₹${total.toLocaleString()}`;
    }

    function updateItemQuantity(index, newQuantity) {
      if (newQuantity < 1) {
        removeFromCart(index);
        return;
      }

      const cart = JSON.parse(localStorage.getItem('customerCart') || '[]');
      if (cart[index]) {
        cart[index].quantity = newQuantity;
        localStorage.setItem('customerCart', JSON.stringify(cart));
        updateCartDisplay();
        updateCartCounter();
      }
    }

    function removeFromCart(index) {
      const cart = JSON.parse(localStorage.getItem('customerCart') || '[]');
      cart.splice(index, 1);
      localStorage.setItem('customerCart', JSON.stringify(cart));
      updateCartDisplay();
      updateCartCounter();

      // Show notification
      showCartNotification('Product removed from cart');
    }

    function clearCart() {
      localStorage.removeItem('customerCart');
      updateCartDisplay();
      updateCartCounter();
      showCartNotification('Cart cleared successfully');
    }

    function proceedToCheckout() {
      const cart = JSON.parse(localStorage.getItem('customerCart') || '[]');
      if (cart.length === 0) {
        alert('Your cart is empty!');
        return;
      }

      // For now, show alert - you can implement actual checkout
      alert('Checkout functionality coming soon! Cart total: ' + document.getElementById('cart-total').textContent);
    }

    function showCartNotification(message) {
      // Create or update notification element
      let notification = document.getElementById('cart-notification');
      if (!notification) {
        notification = document.createElement('div');
        notification.id = 'cart-notification';
        notification.className = 'toast-notification toast-success';
        document.body.appendChild(notification);
      }

      notification.innerHTML = `
        <div class="toast-notification-content">
          <div class="d-flex align-items-center">
            <i class="fas fa-check-circle me-2"></i>
            <span>${message}</span>
          </div>
          <button type="button" class="btn-close ms-3" onclick="this.parentElement.parentElement.remove()">&times;</button>
        </div>
      `;

      // Show notification
      setTimeout(() => {
        notification.style.transform = 'translateX(0)';
      }, 100);

      // Auto-hide after 3 seconds
      setTimeout(() => {
        if (notification) {
          notification.style.transform = 'translateX(100%)';
          setTimeout(() => {
            if (notification) {
              notification.remove();
            }
          }, 300);
        }
      }, 3000);
    }

    // Global cart functions for use in other pages
    window.addToCartFromButton = function(productId, productName, productPrice, productImage) {
      const cart = JSON.parse(localStorage.getItem('customerCart') || '[]');

      const existingIndex = cart.findIndex(item => item.id == productId);

      if (existingIndex > -1) {
        cart[existingIndex].quantity += 1;
      } else {
        cart.push({
          id: productId,
          name: productName,
          price: productPrice,
          quantity: 1,
          image: productImage
        });
      }

      localStorage.setItem('customerCart', JSON.stringify(cart));
      updateCartCounter();
      showCartNotification('Product added to cart successfully!');
    };
  </script>

