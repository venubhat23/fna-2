<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Affiliate Management</h2>
  </div>
  <div class="d-flex gap-2">
    <%= link_to new_admin_sub_agent_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Create Affiliate
    <% end %>
  </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Affiliates</h6>
            <h3 class="mb-0 text-primary"><%= number_with_delimiter(@total_sub_agents) %></h3>
          </div>
          <div class="bg-primary bg-opacity-10 rounded p-3">
            <i class="bi bi-people text-primary fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Active Affiliates</h6>
            <h3 class="mb-0 text-success"><%= number_with_delimiter(@active_sub_agents) %></h3>
          </div>
          <div class="bg-success bg-opacity-10 rounded p-3">
            <i class="bi bi-person-check text-success fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Inactive Affiliates</h6>
            <h3 class="mb-0 text-warning"><%= number_with_delimiter(@inactive_sub_agents) %></h3>
          </div>
          <div class="bg-warning bg-opacity-10 rounded p-3">
            <i class="bi bi-person-x text-warning fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filters and Search -->
<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: admin_sub_agents_path, method: :get, local: true, class: "d-flex flex-wrap gap-3 align-items-end", id: "search_form" do |form| %>
      <!-- Search -->
      <div class="flex-grow-1 min-width-250">
        <%= form.text_field :search, placeholder: "Search by name, mobile, or email... (min 4 characters)",
                           value: params[:search],
                           class: "form-control",
                           id: "search_input",
                           data: { min_length: 4 } %>
      </div>

      <!-- Status Filter -->
      <div>
        <%= form.select :status,
                       options_for_select([
                         ['All Statuses', ''],
                         ['Active', 'active'],
                         ['Inactive', 'inactive']
                       ], params[:status]),
                       {},
                       { class: "form-select", id: "status_filter" } %>
      </div>

      <!-- Actions -->
      <div class="d-flex gap-2">
        <%= link_to "Clear", admin_sub_agents_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Affiliates Table -->
<div class="card shadow-sm">
  <div class="card-body" style="overflow: visible;">
    <% if @sub_agents.any? %>
      <div class="table-responsive" style="overflow: visible;">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Name</th>
              <th>Mobile</th>
              <th>Email & Login</th>
              <th>Role</th>
              <th>Assigned Ambassador</th>
              <th>Status</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @sub_agents.each do |sub_agent| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-person text-primary"></i>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= sub_agent.display_name %></h6>
                      <small class="text-muted"><%= sub_agent.full_name %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="badge bg-light text-dark border">
                    <i class="bi bi-telephone me-1"></i>
                    <%= sub_agent.formatted_mobile %>
                  </span>
                </td>
                <td>
                  <div>
                    <span class="badge bg-light text-dark border mb-1 d-block">
                      <i class="bi bi-envelope me-1"></i>
                      <%= sub_agent.formatted_email %>
                    </span>
                    <% if sub_agent.email.present? %>
                      <small class="text-success d-block">
                        <i class="bi bi-person-check me-1"></i>Username: <%= sub_agent.email %>
                      </small>
                      <% if sub_agent.plain_password.present? %>
                        <small class="text-info d-block">
                          <i class="bi bi-key me-1"></i>Password: <%= sub_agent.plain_password %>
                        </small>
                      <% elsif sub_agent.original_password.present? %>
                        <small class="text-info d-block">
                          <i class="bi bi-key me-1"></i>Password: <%= sub_agent.original_password %>
                        </small>
                      <% else %>
                        <small class="text-muted d-block">
                          <i class="bi bi-lock me-1"></i>Password: Not available
                        </small>
                      <% end %>
                    <% else %>
                      <small class="text-muted d-block">
                        <i class="bi bi-person-dash me-1"></i>No login credentials
                      </small>
                    <% end %>
                  </div>
                </td>
                <td>
                  <span class="badge bg-info">Role <%= sub_agent.role_id %></span>
                </td>
                <td>
                  <% if sub_agent.assigned_distributor.present? %>
                    <div class="d-flex align-items-center">
                      <div class="avatar-xs bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2">
                        <i class="bi bi-building text-success"></i>
                      </div>
                      <div>
                        <small class="fw-medium text-success">
                          <%= sub_agent.assigned_distributor.display_name %>
                        </small>
                        <br>
                        <small class="text-muted">
                          Assigned <%= time_ago_in_words(sub_agent.distributor_assignment.assigned_at) %> ago
                        </small>
                      </div>
                    </div>
                  <% else %>
                    <span class="badge bg-warning bg-opacity-10 text-warning">
                      <i class="bi bi-exclamation-triangle me-1"></i>
                      Unassigned
                    </span>
                  <% end %>
                </td>
                <td>
                  <% if sub_agent.active? %>
                    <span class="badge bg-success">Active</span>
                  <% else %>
                    <span class="badge bg-secondary">Inactive</span>
                  <% end %>
                </td>
                <td>
                  <small class="text-muted">
                    <%= time_ago_in_words(sub_agent.created_at) %> ago
                  </small>
                </td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                      <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li><%= link_to "View", admin_sub_agent_path(sub_agent), class: "dropdown-item" %></li>
                      <li><%= link_to "Edit", edit_admin_sub_agent_path(sub_agent), class: "dropdown-item" %></li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to "#",
                                   class: "dropdown-item text-danger delete-sub-agent-btn",
                                   data: {
                                     "sub-agent-id": sub_agent.id,
                                     "sub-agent-name": sub_agent.display_name,
                                     "delete-url": admin_sub_agent_path(sub_agent)
                                   } do %>
                          <i class="bi bi-trash text-danger me-2"></i>Delete
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Conditional Pagination -->
      <div class="card-footer bg-transparent border-0">
        <%= render 'shared/pagination', records: @sub_agents %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-people display-1 text-muted"></i>
        </div>
        <h5 class="mb-3">No Affiliates Found</h5>
        <p class="text-muted mb-4">
          <% if params[:search].present? || params[:status].present? %>
            No affiliates match your current filters. Try adjusting your search criteria.
          <% else %>
            Start building your affiliate network by adding your first affiliate.
          <% end %>
        </p>
        <% unless params[:search].present? || params[:status].present? %>
          <%= link_to new_admin_sub_agent_path, class: "btn btn-primary" do %>
            <i class="bi bi-plus-lg me-1"></i>
            Create First Affiliate
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
.min-width-250 {
  min-width: 250px;
}

.avatar-sm {
  width: 38px;
  height: 38px;
}

/* Fix dropdown overflow in table */
.table-responsive {
  overflow: visible !important;
}

.card-body {
  overflow: visible !important;
}

/* Ensure dropdown appears above table content */
.dropdown-menu {
  z-index: 1050 !important;
  position: absolute !important;
}

/* Fix Bootstrap table responsive overflow issue */
.table-responsive .dropdown {
  position: static !important;
}

.table-responsive .dropdown-menu {
  position: fixed !important;
  z-index: 9999 !important;
}

/* Alternative approach - remove horizontal scroll when dropdown is open */
.table-responsive:has(.dropdown-menu.show) {
  overflow: visible !important;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('search_input');
  const statusFilter = document.getElementById('status_filter');
  const searchForm = document.getElementById('search_form');
  let searchTimeout;

  // Auto-search on typing after 4 characters
  searchInput.addEventListener('input', function() {
    clearTimeout(searchTimeout);
    const searchValue = this.value;

    searchTimeout = setTimeout(() => {
      if (searchValue.length >= 4 || searchValue.length === 0) {
        searchForm.submit();
      }
    }, 500); // 500ms delay after typing stops
  });

  // Auto-submit on status filter change
  statusFilter.addEventListener('change', function() {
    searchForm.submit();
  });

  // Delete confirmation functionality
  const deleteButtons = document.querySelectorAll('.delete-sub-agent-btn');
  deleteButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();

      const subAgentId = this.dataset.subAgentId;
      const subAgentName = this.dataset.subAgentName;
      const deleteUrl = this.dataset.deleteUrl;

      showDeleteConfirmation(subAgentName, deleteUrl);
    });
  });

  function showDeleteConfirmation(subAgentName, deleteUrl) {
    // Create modal HTML
    const modalHtml = `
      <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header border-bottom-0">
              <h5 class="modal-title text-danger" id="deleteConfirmationModalLabel">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Delete Affiliate
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
              <div class="mb-4">
                <i class="bi bi-trash text-danger" style="font-size: 3rem;"></i>
              </div>
              <h6 class="mb-3">Are you sure you want to delete this affiliate?</h6>
              <p class="text-muted mb-0">
                <strong>${subAgentName}</strong> will be permanently removed from the system.
              </p>
              <p class="text-danger small mt-2 mb-0">
                <i class="bi bi-exclamation-circle me-1"></i>
                This action cannot be undone.
              </p>
            </div>
            <div class="modal-footer border-top-0 justify-content-center">
              <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                <i class="bi bi-x-lg me-1"></i>Cancel
              </button>
              <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                <i class="bi bi-trash me-1"></i>Delete Affiliate
              </button>
            </div>
          </div>
        </div>
      </div>
    `;

    // Remove any existing modal
    const existingModal = document.getElementById('deleteConfirmationModal');
    if (existingModal) {
      existingModal.remove();
    }

    // Add modal to body
    document.body.insertAdjacentHTML('beforeend', modalHtml);

    // Show modal
    const modal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
    modal.show();

    // Handle confirmation
    document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
      // Create and submit delete form
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = deleteUrl;

      // Add CSRF token
      const csrfToken = document.querySelector('meta[name="csrf-token"]');
      if (csrfToken) {
        const csrfInput = document.createElement('input');
        csrfInput.type = 'hidden';
        csrfInput.name = 'authenticity_token';
        csrfInput.value = csrfToken.getAttribute('content');
        form.appendChild(csrfInput);
      }

      // Add method override for DELETE
      const methodInput = document.createElement('input');
      methodInput.type = 'hidden';
      methodInput.name = '_method';
      methodInput.value = 'DELETE';
      form.appendChild(methodInput);

      document.body.appendChild(form);
      form.submit();

      modal.hide();
    });

    // Clean up modal when hidden
    document.getElementById('deleteConfirmationModal').addEventListener('hidden.bs.modal', function () {
      this.remove();
    });
  }

  // Fix dropdown positioning for table responsive containers
  const dropdownButtons = document.querySelectorAll('.table .dropdown-toggle');
  dropdownButtons.forEach(button => {
    button.addEventListener('show.bs.dropdown', function() {
      // Remove overflow hidden from table-responsive when dropdown opens
      const tableResponsive = this.closest('.table-responsive');
      if (tableResponsive) {
        tableResponsive.style.overflow = 'visible';
        tableResponsive.style.overflowX = 'visible';
        tableResponsive.style.overflowY = 'visible';
      }
    });

    button.addEventListener('hide.bs.dropdown', function() {
      // Restore overflow auto when dropdown closes
      const tableResponsive = this.closest('.table-responsive');
      if (tableResponsive) {
        tableResponsive.style.overflow = 'auto';
        tableResponsive.style.overflowX = 'auto';
        tableResponsive.style.overflowY = 'visible';
      }
    });
  });
});
</script>