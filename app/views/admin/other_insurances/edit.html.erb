<div class="container-fluid">
  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to "Home", root_path, class: "text-primary text-decoration-none" %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "General Insurance", admin_other_insurances_path, class: "text-primary text-decoration-none" %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "Policy Details", admin_other_insurance_path(@other_insurance), class: "text-primary text-decoration-none" %>
      </li>
      <li class="breadcrumb-item active">Edit Policy</li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 text-gray-800 mb-1">Edit General Insurance Policy</h1>
          <p class="text-muted mb-0">Policy #<%= @other_insurance.policy_number %></p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to admin_other_insurance_path(@other_insurance), class: "btn btn-outline-info" do %>
            <i class="bi bi-eye me-1"></i>View Policy
          <% end %>
          <%= link_to admin_other_insurances_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-arrow-left me-1"></i>Back to List
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%= form_with model: [:admin, @other_insurance], local: true, multipart: true, id: "otherInsuranceForm" do |form| %>
    <div class="row">
      <div class="col-lg-8">
        <!-- Error Display -->
        <% if @other_insurance.errors.any? %>
          <div class="alert alert-danger alert-dismissible fade show mb-4">
            <h6><i class="bi bi-exclamation-triangle me-2"></i>Please correct the following errors:</h6>
            <ul class="mb-0">
              <% @other_insurance.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>

        <!-- 1. Client Details Section -->
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i>1. Client Details</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :customer_id, "Client Name", class: "form-label required" %>
                <%= form.select :customer_id,
                    options_for_select([['Select Client', '']] + @customers.map { |c| [c.display_name, c.id] }, @other_insurance.customer_id),
                    { prompt: 'Select Client' },
                    { class: "form-select", required: true, id: "customer_select" } %>
                <div class="invalid-feedback">Please select a client</div>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Add Client</label>
                <%= link_to new_admin_customer_path, class: "btn btn-outline-primary w-100", target: "_blank" do %>
                  <i class="bi bi-plus-circle me-1"></i>Add New Client
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- 2. Insurance Details Section -->
        <div class="card mb-4">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-shield-check me-2"></i>2. Insurance Details</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :insurance_company_id, "Insurance Company", class: "form-label required" %>
                <%= form.select :insurance_company_id,
                    options_for_select([['Select Company', '']] + InsuranceCompany.pluck(:name, :id), @other_insurance.insurance_company_id),
                    { prompt: 'Select Company' },
                    { class: "form-select", required: true } %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :policy_type, "Policy Type", class: "form-label required" %>
                <%= form.select :policy_type,
                    options_for_select([
                      ['Travel Insurance', 'travel'],
                      ['Property Insurance', 'property'],
                      ['Cyber Insurance', 'cyber'],
                      ['Professional Indemnity', 'professional'],
                      ['Directors & Officers', 'directors_officers'],
                      ['Marine Insurance', 'marine'],
                      ['Credit Insurance', 'credit'],
                      ['Other', 'other']
                    ], @other_insurance.policy_type),
                    { prompt: 'Select Policy Type' },
                    { class: "form-select", required: true } %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :policy_number, "Policy Number", class: "form-label required" %>
                <%= form.text_field :policy_number, class: "form-control", placeholder: "Enter policy number", required: true %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :sum_insured, "Sum Insured", class: "form-label required" %>
                <%= form.number_field :sum_insured, class: "form-control", placeholder: "Enter sum insured", step: 0.01, required: true %>
              </div>

              <div class="col-md-4 mb-3">
                <%= form.label :policy_start_date, "Policy Start Date", class: "form-label required" %>
                <%= form.date_field :policy_start_date, class: "form-control", required: true, id: "policy_start_date" %>
              </div>

              <div class="col-md-4 mb-3">
                <%= form.label :policy_end_date, "Policy End Date", class: "form-label required" %>
                <%= form.date_field :policy_end_date, class: "form-control", required: true, id: "policy_end_date" %>
              </div>

              <div class="col-md-4 mb-3">
                <%= form.label :payment_mode, "Payment Mode", class: "form-label required" %>
                <%= form.select :payment_mode,
                    options_for_select([
                      ['Yearly', 'yearly'],
                      ['Half Yearly', 'half_yearly'],
                      ['Quarterly', 'quarterly'],
                      ['Monthly', 'monthly'],
                      ['Single Premium', 'single']
                    ], @other_insurance.payment_mode),
                    { prompt: 'Select Payment Mode' },
                    { class: "form-select", required: true } %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :net_premium, "Net Premium", class: "form-label required" %>
                <%= form.number_field :net_premium, class: "form-control", placeholder: "Enter net premium", step: 0.01, required: true, id: "net_premium" %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :total_premium, "Total Premium", class: "form-label required" %>
                <%= form.number_field :total_premium, class: "form-control", step: 0.01, required: true, id: "total_premium" %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :gst_percentage, "GST %", class: "form-label" %>
                <%= form.number_field :gst_percentage, class: "form-control", step: 0.01, id: "gst_percentage" %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :policy_booking_date, "Policy Booking Date", class: "form-label" %>
                <%= form.date_field :policy_booking_date, class: "form-control" %>
              </div>

              <div class="col-12 mb-3">
                <%= form.label :note, "Additional Notes", class: "form-label" %>
                <%= form.text_area :note, class: "form-control", rows: 3, placeholder: "Enter any additional notes about the policy..." %>
              </div>
            </div>
          </div>
        </div>

        <!-- 3. Status Section -->
        <div class="card mb-4">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-check-circle me-2"></i>3. Policy Status</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :status, "Policy Status", class: "form-label" %>
                <%= form.select :status,
                    options_for_select([
                      ['Active', 'active'],
                      ['Expired', 'expired'],
                      ['Pending', 'pending'],
                      ['Cancelled', 'cancelled']
                    ], @other_insurance.status),
                    {},
                    { class: "form-select" } %>
              </div>
            </div>
          </div>
        </div>

        <!-- 4. Document Upload Section -->
        <div class="card mb-4">
          <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-file-earmark-pdf me-2"></i>4. Document Upload</h5>
          </div>
          <div class="card-body">
            <!-- Existing Documents -->
            <% if @other_insurance.documents.attached? %>
              <div class="mb-4">
                <h6 class="mb-3">Existing Documents</h6>
                <div class="row">
                  <% @other_insurance.documents.each do |document| %>
                    <div class="col-md-6 mb-3">
                      <div class="d-flex align-items-center p-3 border rounded">
                        <i class="bi bi-file-pdf fs-4 text-danger me-3"></i>
                        <div class="flex-grow-1">
                          <h6 class="mb-1"><%= document.filename %></h6>
                          <small class="text-muted"><%= number_to_human_size(document.byte_size) %></small>
                        </div>
                        <div class="d-flex gap-1">
                          <%= link_to document, class: "btn btn-sm btn-outline-primary", target: "_blank" do %>
                            <i class="bi bi-download"></i>
                          <% end %>
                          <%= link_to admin_other_insurance_path(@other_insurance, document_id: document.id),
                              method: :delete,
                              class: "btn btn-sm btn-outline-danger",
                              data: {
                                confirm: "Are you sure you want to delete this document?",
                                turbo_method: :delete
                              } do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Upload New Documents -->
            <div class="mb-3">
              <h6 class="mb-3">Upload New Documents</h6>
              <div class="upload-area" id="document_upload_area">
                <div class="upload-content text-center p-4">
                  <i class="bi bi-file-earmark-text display-1 text-muted mb-3"></i>
                  <p class="mb-2 text-muted">Click to upload or drag and drop</p>
                  <button type="button" class="btn btn-primary" onclick="document.getElementById('document_file_input').click()">Choose Files</button>
                  <%= form.file_field :documents, class: "d-none", accept: ".pdf,.jpg,.jpeg,.png,.doc,.docx", multiple: true, id: "document_file_input" %>
                </div>
              </div>
              <div class="form-text mt-2">Upload policy documents (PDF, Images, Word documents)</div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <%= link_to admin_other_insurance_path(@other_insurance), class: "btn btn-outline-secondary" do %>
                <i class="bi bi-x-lg me-1"></i>Cancel
              <% end %>
              <%= form.submit "Update General Insurance", class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="col-lg-4">
        <!-- Summary Card -->
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h6 class="mb-0"><i class="bi bi-calculator me-2"></i>Premium Summary</h6>
          </div>
          <div class="card-body">
            <div class="row text-center">
              <div class="col-6 border-end">
                <h5 class="text-primary mb-1">₹<span id="summary_premium"><%= number_with_delimiter(@other_insurance.net_premium) %></span></h5>
                <small class="text-muted">Net Premium</small>
              </div>
              <div class="col-6">
                <h5 class="text-success mb-1">₹<span id="summary_total"><%= number_with_delimiter(@other_insurance.total_premium) %></span></h5>
                <small class="text-muted">Total Premium</small>
              </div>
            </div>
            <hr>
            <div class="row text-center">
              <div class="col-12">
                <h6 class="text-info mb-1">₹<span id="summary_coverage"><%= number_with_delimiter(@other_insurance.sum_insured) %></span></h6>
                <small class="text-muted">Sum Insured</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Current Status -->
        <div class="card mb-4">
          <div class="card-header bg-info text-white">
            <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Current Status</h6>
          </div>
          <div class="card-body">
            <div class="text-center">
              <% if @other_insurance.status == 'active' %>
                <i class="bi bi-check-circle-fill text-success display-4 mb-3"></i>
                <h6 class="text-success">Active Policy</h6>
              <% elsif @other_insurance.status == 'expired' %>
                <i class="bi bi-x-circle-fill text-danger display-4 mb-3"></i>
                <h6 class="text-danger">Expired Policy</h6>
              <% else %>
                <i class="bi bi-clock-fill text-warning display-4 mb-3"></i>
                <h6 class="text-warning"><%= @other_insurance.status&.humanize || 'Pending' %></h6>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Help Card -->
        <div class="card">
          <div class="card-header bg-warning text-dark">
            <h6 class="mb-0"><i class="bi bi-question-circle me-2"></i>Editing Tips</h6>
          </div>
          <div class="card-body">
            <div class="help-step">
              <strong>Tip 1:</strong> Update client details if needed
            </div>
            <div class="help-step">
              <strong>Tip 2:</strong> Modify policy terms and coverage amounts
            </div>
            <div class="help-step">
              <strong>Tip 3:</strong> Change policy status as required
            </div>
            <div class="help-step">
              <strong>Tip 4:</strong> Upload additional documents
            </div>
            <div class="help-step">
              <strong>Tip 5:</strong> Save changes to update the policy
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
.required::after {
  content: " *";
  color: red;
}

.help-step {
  padding: 8px 0;
  border-bottom: 1px solid #eee;
}

.help-step:last-child {
  border-bottom: none;
}

.upload-area {
  border: 2px dashed #dee2e6;
  border-radius: 8px;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
  min-height: 120px;
}

.upload-area:hover {
  border-color: #007bff;
  background-color: #e3f2fd;
}

.upload-area.dragover {
  border-color: #007bff;
  background-color: #e3f2fd;
  border-style: solid;
}

.upload-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Auto-calculation functions
  function calculateTotalPremium() {
    const netPremium = parseFloat(document.getElementById('net_premium').value) || 0;
    const gstPercentage = parseFloat(document.getElementById('gst_percentage').value) || 0;

    const gstAmount = netPremium * (gstPercentage / 100);
    const totalPremium = netPremium + gstAmount;

    document.getElementById('total_premium').value = totalPremium.toFixed(2);
    updateSummary();
  }

  function updateSummary() {
    const netPremium = parseFloat(document.getElementById('net_premium')?.value) || 0;
    const totalPremium = parseFloat(document.getElementById('total_premium')?.value) || 0;
    const sumInsured = parseFloat(document.querySelector('[name="policy[sum_insured]"]')?.value) || 0;

    document.getElementById('summary_premium').textContent = netPremium.toLocaleString();
    document.getElementById('summary_total').textContent = totalPremium.toLocaleString();
    document.getElementById('summary_coverage').textContent = sumInsured.toLocaleString();
  }

  // Event listeners for real-time updates
  document.getElementById('net_premium')?.addEventListener('input', calculateTotalPremium);
  document.getElementById('gst_percentage')?.addEventListener('input', calculateTotalPremium);

  document.querySelector('[name="policy[sum_insured]"]')?.addEventListener('input', updateSummary);

  // File upload drag and drop functionality
  const uploadArea = document.getElementById('document_upload_area');
  const fileInput = document.getElementById('document_file_input');

  if (uploadArea && fileInput) {
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
      uploadArea.addEventListener(eventName, preventDefaults, false);
    });

    function preventDefaults(e) {
      e.preventDefault();
      e.stopPropagation();
    }

    ['dragenter', 'dragover'].forEach(eventName => {
      uploadArea.addEventListener(eventName, () => uploadArea.classList.add('dragover'), false);
    });

    ['dragleave', 'drop'].forEach(eventName => {
      uploadArea.addEventListener(eventName, () => uploadArea.classList.remove('dragover'), false);
    });

    uploadArea.addEventListener('drop', function(e) {
      const files = e.dataTransfer.files;
      fileInput.files = files;
      updateUploadText(files.length);
    });

    fileInput.addEventListener('change', function() {
      updateUploadText(this.files.length);
    });

    function updateUploadText(fileCount) {
      const uploadContent = uploadArea.querySelector('.upload-content p');
      if (fileCount > 0) {
        uploadContent.textContent = `${fileCount} file(s) selected`;
      } else {
        uploadContent.textContent = 'Click to upload or drag and drop';
      }
    }
  }

  // Initial calculation
  updateSummary();
});
</script>