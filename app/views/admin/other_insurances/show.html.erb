<div class="container-fluid">
  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to "Home", root_path, class: "text-primary text-decoration-none" %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "General Insurance", admin_other_insurances_path, class: "text-primary text-decoration-none" %>
      </li>
      <li class="breadcrumb-item active">Policy Details</li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 text-gray-800 mb-1">General Insurance Policy</h1>
          <p class="text-muted mb-0">Policy #<%= @other_insurance.policy_number %></p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to edit_admin_other_insurance_path(@other_insurance), class: "btn btn-warning" do %>
            <i class="bi bi-pencil me-1"></i>Edit Policy
          <% end %>
          <%= link_to admin_other_insurances_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-arrow-left me-1"></i>Back to List
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <!-- Policy Overview -->
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Policy Overview</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <table class="table table-borderless">
                <tr>
                  <th width="40%">Policy Number:</th>
                  <td><strong><%= @other_insurance.policy_number %></strong></td>
                </tr>
                <tr>
                  <th>Policy Type:</th>
                  <td><%= @other_insurance.policy_type&.humanize %></td>
                </tr>
                <tr>
                  <th>Insurance Company:</th>
                  <td><%= @other_insurance.insurance_company&.name %></td>
                </tr>
                <tr>
                  <th>Policy Status:</th>
                  <td>
                    <% if @other_insurance.status == 'active' %>
                      <span class="badge bg-success">Active</span>
                    <% elsif @other_insurance.status == 'expired' %>
                      <span class="badge bg-danger">Expired</span>
                    <% else %>
                      <span class="badge bg-warning"><%= @other_insurance.status&.humanize || 'Pending' %></span>
                    <% end %>
                  </td>
                </tr>
              </table>
            </div>
            <div class="col-md-6">
              <table class="table table-borderless">
                <tr>
                  <th width="40%">Sum Insured:</th>
                  <td><strong>₹<%= number_with_delimiter(@other_insurance.sum_insured) %></strong></td>
                </tr>
                <tr>
                  <th>Net Premium:</th>
                  <td>₹<%= number_with_delimiter(@other_insurance.net_premium) %></td>
                </tr>
                <tr>
                  <th>Total Premium:</th>
                  <td><strong>₹<%= number_with_delimiter(@other_insurance.total_premium) %></strong></td>
                </tr>
                <tr>
                  <th>Payment Mode:</th>
                  <td><%= @other_insurance.payment_mode&.humanize %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Customer Information -->
      <div class="card mb-4">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i>Customer Information</h5>
        </div>
        <div class="card-body">
          <% if @other_insurance.customer %>
            <div class="row">
              <div class="col-md-6">
                <table class="table table-borderless">
                  <tr>
                    <th width="40%">Customer Name:</th>
                    <td><%= @other_insurance.customer.display_name %></td>
                  </tr>
                  <tr>
                    <th>Email:</th>
                    <td><%= @other_insurance.customer.email %></td>
                  </tr>
                  <tr>
                    <th>Mobile:</th>
                    <td><%= @other_insurance.customer.mobile %></td>
                  </tr>
                </table>
              </div>
              <div class="col-md-6">
                <table class="table table-borderless">
                  <tr>
                    <th width="40%">Date of Birth:</th>
                    <td><%= @other_insurance.customer.date_of_birth&.strftime("%B %d, %Y") %></td>
                  </tr>
                  <tr>
                    <th>Gender:</th>
                    <td><%= @other_insurance.customer.gender&.humanize %></td>
                  </tr>
                  <tr>
                    <th>Customer Type:</th>
                    <td><%= @other_insurance.customer.customer_type&.humanize %></td>
                  </tr>
                </table>
              </div>
            </div>
          <% else %>
            <p class="text-muted mb-0">No customer information available.</p>
          <% end %>
        </div>
      </div>

      <!-- Policy Dates -->
      <div class="card mb-4">
        <div class="card-header bg-info text-white">
          <h5 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Policy Dates</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <h6 class="text-muted mb-1">Start Date</h6>
              <p class="mb-0"><%= @other_insurance.policy_start_date&.strftime("%B %d, %Y") %></p>
            </div>
            <div class="col-md-4">
              <h6 class="text-muted mb-1">End Date</h6>
              <p class="mb-0"><%= @other_insurance.policy_end_date&.strftime("%B %d, %Y") %></p>
            </div>
            <div class="col-md-4">
              <h6 class="text-muted mb-1">Days Until Expiry</h6>
              <% days_left = (@other_insurance.policy_end_date - Date.current).to_i if @other_insurance.policy_end_date %>
              <p class="mb-0">
                <% if days_left && days_left > 0 %>
                  <span class="badge bg-<%= days_left <= 30 ? 'warning' : 'success' %>"><%= days_left %> days</span>
                <% else %>
                  <span class="badge bg-danger">Expired</span>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Policy Notes -->
      <% if @other_insurance.note.present? %>
        <div class="card mb-4">
          <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Policy Notes</h5>
          </div>
          <div class="card-body">
            <p class="mb-0"><%= simple_format(@other_insurance.note) %></p>
          </div>
        </div>
      <% end %>

      <!-- Documents -->
      <% if @other_insurance.documents.attached? %>
        <div class="card mb-4">
          <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-files me-2"></i>Documents</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <% @other_insurance.documents.each do |document| %>
                <div class="col-md-6 mb-3">
                  <div class="d-flex align-items-center p-3 border rounded">
                    <i class="bi bi-file-pdf fs-4 text-danger me-3"></i>
                    <div class="flex-grow-1">
                      <h6 class="mb-1"><%= document.filename %></h6>
                      <small class="text-muted"><%= number_to_human_size(document.byte_size) %></small>
                    </div>
                    <%= link_to document, class: "btn btn-sm btn-outline-primary", target: "_blank" do %>
                      <i class="bi bi-download"></i>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <!-- Quick Actions -->
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h6 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h6>
        </div>
        <div class="card-body d-grid gap-2">
          <%= link_to edit_admin_other_insurance_path(@other_insurance), class: "btn btn-warning" do %>
            <i class="bi bi-pencil me-1"></i>Edit Policy
          <% end %>
          <%= link_to "#", class: "btn btn-success", onclick: "window.print(); return false;" do %>
            <i class="bi bi-printer me-1"></i>Print Policy
          <% end %>
          <%= link_to admin_other_insurance_path(@other_insurance),
              method: :delete,
              class: "btn btn-danger",
              data: {
                confirm: "Are you sure you want to delete this policy?",
                turbo_method: :delete
              } do %>
            <i class="bi bi-trash me-1"></i>Delete Policy
          <% end %>
        </div>
      </div>

      <!-- Policy Status Card -->
      <div class="card mb-4">
        <div class="card-header bg-info text-white">
          <h6 class="mb-0"><i class="bi bi-shield-check me-2"></i>Policy Status</h6>
        </div>
        <div class="card-body text-center">
          <% if @other_insurance.status == 'active' %>
            <i class="bi bi-check-circle-fill text-success display-1 mb-3"></i>
            <h5 class="text-success">Active Policy</h5>
            <p class="text-muted">This policy is currently active and providing coverage.</p>
          <% elsif @other_insurance.status == 'expired' %>
            <i class="bi bi-x-circle-fill text-danger display-1 mb-3"></i>
            <h5 class="text-danger">Expired Policy</h5>
            <p class="text-muted">This policy has expired and needs renewal.</p>
          <% else %>
            <i class="bi bi-clock-fill text-warning display-1 mb-3"></i>
            <h5 class="text-warning">Pending Policy</h5>
            <p class="text-muted">This policy is pending and may need attention.</p>
          <% end %>
        </div>
      </div>

      <!-- Coverage Summary -->
      <div class="card">
        <div class="card-header bg-success text-white">
          <h6 class="mb-0"><i class="bi bi-calculator me-2"></i>Coverage Summary</h6>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Sum Insured:</span>
            <strong>₹<%= number_with_delimiter(@other_insurance.sum_insured) %></strong>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Net Premium:</span>
            <span>₹<%= number_with_delimiter(@other_insurance.net_premium) %></span>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Total Premium:</span>
            <strong class="text-success">₹<%= number_with_delimiter(@other_insurance.total_premium) %></strong>
          </div>
          <hr>
          <div class="d-flex justify-content-between">
            <span class="text-muted">Coverage Ratio:</span>
            <span class="badge bg-primary">
              <%= number_to_percentage((@other_insurance.sum_insured.to_f / @other_insurance.total_premium.to_f) * 0.01, precision: 1) if @other_insurance.total_premium > 0 %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
@media print {
  .btn, .card-header, nav, .sidebar {
    display: none !important;
  }

  .card {
    border: none !important;
    box-shadow: none !important;
  }

  .card-body {
    padding: 0 !important;
  }
}
</style>