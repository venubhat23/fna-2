<div class="container-fluid">
  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to "Home", root_path, class: "text-primary text-decoration-none" %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "General Insurance", admin_other_insurances_path, class: "text-primary text-decoration-none" %>
      </li>
      <li class="breadcrumb-item active">Add General Insurance</li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="h3 text-gray-800">Add General Insurance</h1>
        <%= link_to admin_other_insurances_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left me-1"></i>Back to List
        <% end %>
      </div>
    </div>
  </div>

  <%= form_with model: [:admin, @other_insurance], local: true, multipart: true, id: "otherInsuranceForm" do |form| %>
    <div class="row">
      <div class="col-lg-8">
        <!-- Error Display -->
        <% if @other_insurance.errors.any? %>
          <div class="alert alert-danger alert-dismissible fade show mb-4">
            <h6><i class="bi bi-exclamation-triangle me-2"></i>Please correct the following errors:</h6>
            <ul class="mb-0">
              <% @other_insurance.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>

        <!-- 1. Client Details Section -->
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i>1. Client Details</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :customer_id, "Client Name", class: "form-label required" %>
                <%= form.select :customer_id,
                    options_for_select([['Select Client', '']] + @customers.map { |c| [c.display_name, c.id] }),
                    { prompt: 'Select Client' },
                    { class: "form-select", required: true, id: "customer_select" } %>
                <div class="invalid-feedback">Please select a client</div>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Add Client</label>
                <%= link_to new_admin_customer_path, class: "btn btn-outline-primary w-100", target: "_blank" do %>
                  <i class="bi bi-plus-circle me-1"></i>Add New Client
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- 2. Insurance Details Section -->
        <div class="card mb-4">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-shield-check me-2"></i>2. Insurance Details</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :insurance_company_id, "Insurance Company", class: "form-label required" %>
                <%= form.select :insurance_company_id,
                    options_for_select([['Select Company', '']] + InsuranceCompany.pluck(:name, :id)),
                    { prompt: 'Select Company' },
                    { class: "form-select", required: true } %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :policy_type, "Policy Type", class: "form-label required" %>
                <%= form.select :policy_type,
                    options_for_select([
                      ['Travel Insurance', 'travel'],
                      ['Property Insurance', 'property'],
                      ['Cyber Insurance', 'cyber'],
                      ['Professional Indemnity', 'professional'],
                      ['Directors & Officers', 'directors_officers'],
                      ['Marine Insurance', 'marine'],
                      ['Credit Insurance', 'credit'],
                      ['Other', 'other']
                    ]),
                    { prompt: 'Select Policy Type' },
                    { class: "form-select", required: true } %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :policy_number, "Policy Number", class: "form-label required" %>
                <%= form.text_field :policy_number, class: "form-control", placeholder: "Enter policy number", required: true %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :sum_insured, "Sum Insured", class: "form-label required" %>
                <%= form.number_field :sum_insured, class: "form-control", placeholder: "Enter sum insured", step: 0.01, required: true %>
              </div>

              <div class="col-md-4 mb-3">
                <%= form.label :policy_start_date, "Policy Start Date", class: "form-label required" %>
                <%= form.date_field :policy_start_date, class: "form-control", required: true, id: "policy_start_date" %>
              </div>

              <div class="col-md-4 mb-3">
                <%= form.label :policy_end_date, "Policy End Date", class: "form-label required" %>
                <%= form.date_field :policy_end_date, class: "form-control", required: true, id: "policy_end_date" %>
              </div>

              <div class="col-md-4 mb-3">
                <%= form.label :payment_mode, "Payment Mode", class: "form-label required" %>
                <%= form.select :payment_mode,
                    options_for_select([
                      ['Yearly', 'yearly'],
                      ['Half Yearly', 'half_yearly'],
                      ['Quarterly', 'quarterly'],
                      ['Monthly', 'monthly'],
                      ['Single Premium', 'single']
                    ]),
                    { prompt: 'Select Payment Mode' },
                    { class: "form-select", required: true } %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :net_premium, "Net Premium", class: "form-label required" %>
                <%= form.number_field :net_premium, class: "form-control", placeholder: "Enter net premium", step: 0.01, required: true, id: "net_premium" %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :total_premium, "Total Premium", class: "form-label required" %>
                <%= form.number_field :total_premium, class: "form-control", step: 0.01, required: true, id: "total_premium" %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :gst_percentage, "GST %", class: "form-label" %>
                <%= form.number_field :gst_percentage, class: "form-control", value: 18, step: 0.01, id: "gst_percentage" %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :policy_booking_date, "Policy Booking Date", class: "form-label" %>
                <%= form.date_field :policy_booking_date, class: "form-control", value: Date.current %>
              </div>

              <div class="col-12 mb-3">
                <%= form.label :note, "Additional Notes", class: "form-label" %>
                <%= form.text_area :note, class: "form-control", rows: 3, placeholder: "Enter any additional notes about the policy..." %>
              </div>
            </div>
          </div>
        </div>

        <!-- 3. Status Section -->
        <div class="card mb-4">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-check-circle me-2"></i>3. Policy Status</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :status, "Policy Status", class: "form-label" %>
                <%= form.select :status,
                    options_for_select([
                      ['Active', 'active'],
                      ['Expired', 'expired'],
                      ['Pending', 'pending'],
                      ['Cancelled', 'cancelled']
                    ]),
                    { selected: 'active' },
                    { class: "form-select" } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <%= link_to admin_other_insurances_path, class: "btn btn-outline-secondary" do %>
                <i class="bi bi-x-lg me-1"></i>Cancel
              <% end %>
              <%= form.submit "Create General Insurance", class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="col-lg-4">
        <!-- Summary Card -->
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h6 class="mb-0"><i class="bi bi-calculator me-2"></i>Premium Summary</h6>
          </div>
          <div class="card-body">
            <div class="row text-center">
              <div class="col-6 border-end">
                <h5 class="text-primary mb-1">₹<span id="summary_premium">0</span></h5>
                <small class="text-muted">Premium Amount</small>
              </div>
              <div class="col-6">
                <h5 class="text-success mb-1">₹<span id="summary_total">0</span></h5>
                <small class="text-muted">Total Premium</small>
              </div>
            </div>
            <hr>
            <div class="row text-center">
              <div class="col-12">
                <h6 class="text-info mb-1">₹<span id="summary_coverage">0</span></h6>
                <small class="text-muted">Sum Insured</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Help Card -->
        <div class="card">
          <div class="card-header bg-info text-white">
            <h6 class="mb-0"><i class="bi bi-question-circle me-2"></i>Quick Guide</h6>
          </div>
          <div class="card-body">
            <div class="help-step">
              <strong>Step 1:</strong> Select client and policy details
            </div>
            <div class="help-step">
              <strong>Step 2:</strong> Choose insurance company and policy type
            </div>
            <div class="help-step">
              <strong>Step 3:</strong> Enter coverage and premium information
            </div>
            <div class="help-step">
              <strong>Step 4:</strong> Add nominee details (optional)
            </div>
            <div class="help-step">
              <strong>Step 5:</strong> Set policy status and save
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
.required::after {
  content: " *";
  color: red;
}

.help-step {
  padding: 8px 0;
  border-bottom: 1px solid #eee;
}

.help-step:last-child {
  border-bottom: none;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Auto-calculation functions
  function calculateTotalPremium() {
    const netPremium = parseFloat(document.getElementById('net_premium').value) || 0;
    const gstPercentage = parseFloat(document.getElementById('gst_percentage').value) || 0;

    const gstAmount = netPremium * (gstPercentage / 100);
    const totalPremium = netPremium + gstAmount;

    document.getElementById('total_premium').value = totalPremium.toFixed(2);
    updateSummary();
  }

  function updateSummary() {
    const netPremium = parseFloat(document.getElementById('net_premium')?.value) || 0;
    const totalPremium = parseFloat(document.getElementById('total_premium')?.value) || 0;
    const sumInsured = parseFloat(document.querySelector('[name="policy[sum_insured]"]')?.value) || 0;

    document.getElementById('summary_premium').textContent = netPremium.toLocaleString();
    document.getElementById('summary_total').textContent = totalPremium.toLocaleString();
    document.getElementById('summary_coverage').textContent = sumInsured.toLocaleString();
  }

  // Event listeners for real-time updates
  document.getElementById('net_premium')?.addEventListener('input', calculateTotalPremium);
  document.getElementById('gst_percentage')?.addEventListener('input', calculateTotalPremium);

  document.querySelector('[name="policy[sum_insured]"]')?.addEventListener('input', updateSummary);

  // Auto-set policy end date based on start date (default 1 year)
  document.getElementById('policy_start_date')?.addEventListener('change', function() {
    const startDate = new Date(this.value);
    const endDate = new Date(startDate);
    endDate.setFullYear(endDate.getFullYear() + 1);
    endDate.setDate(endDate.getDate() - 1); // End date is one day before renewal

    document.getElementById('policy_end_date').value = endDate.toISOString().split('T')[0];
  });

  // Initial calculation
  updateSummary();
});
</script>