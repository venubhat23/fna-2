<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">General Insurance Policies</h2>
    <p class="text-muted mb-0">Manage travel, property, and other insurance types</p>
  </div>
  <div class="d-flex gap-2">
    <div class="dropdown">
      <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
        <i class="bi bi-download me-1"></i>
        Export
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to "Export as CSV", admin_other_insurances_path(format: :csv), class: "dropdown-item" %></li>
      </ul>
    </div>
    <%= link_to new_admin_other_insurance_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Add New Policy
    <% end %>
  </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Other Policies</h6>
            <h3 class="mb-0 text-primary"><%= number_with_delimiter(@other_insurances.count) %></h3>
          </div>
          <div class="bg-primary bg-opacity-10 rounded p-3">
            <i class="bi bi-grid text-primary fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Premium</h6>
            <h3 class="mb-0 text-success">₹<%= number_with_delimiter(@other_insurances.sum(&:total_premium).to_i) %></h3>
          </div>
          <div class="bg-success bg-opacity-10 rounded p-3">
            <i class="bi bi-currency-rupee text-success fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Coverage</h6>
            <h3 class="mb-0 text-info">₹<%= number_with_delimiter(@other_insurances.sum(&:sum_insured).to_i) %></h3>
          </div>
          <div class="bg-info bg-opacity-10 rounded p-3">
            <i class="bi bi-shield-check text-info fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Active Policies</h6>
            <h3 class="mb-0 text-warning"><%= number_with_delimiter(@other_insurances.where(status: 'active').count) %></h3>
          </div>
          <div class="bg-warning bg-opacity-10 rounded p-3">
            <i class="bi bi-bookmark text-warning fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Search and Filters -->
<div class="card border-0 shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: admin_other_insurances_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-4">
        <%= form.text_field :search, placeholder: "Search policies...", value: params[:search], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= form.select :policy_type, options_for_select([
          ['All Types', ''],
          ['Travel Insurance', 'travel'],
          ['Property Insurance', 'property'],
          ['Cyber Insurance', 'cyber'],
          ['Professional Indemnity', 'professional']
        ], params[:policy_type]), {}, { class: "form-select" } %>
      </div>
      <div class="col-md-3">
        <%= form.select :status, options_for_select([
          ['All Status', ''],
          ['Active', 'active'],
          ['Expired', 'expired'],
          ['Pending', 'pending']
        ], params[:status]), {}, { class: "form-select" } %>
      </div>
      <div class="col-md-2">
        <%= form.submit "Filter", class: "btn btn-outline-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<!-- General Insurance Policies List -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <h5 class="mb-0">General Insurance Policies</h5>
  </div>
  <div class="card-body p-0">
    <% if @other_insurances.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="bg-light">
            <tr>
              <th class="border-0">Policy</th>
              <th class="border-0">Customer</th>
              <th class="border-0">Company</th>
              <th class="border-0">Coverage</th>
              <th class="border-0">Premium</th>
              <th class="border-0">Status</th>
              <th class="border-0">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @other_insurances.each do |policy| %>
              <tr>
                <td>
                  <div>
                    <h6 class="mb-1"><%= policy.policy_number %></h6>
                    <small class="text-muted"><%= policy.policy_type&.humanize %></small>
                  </div>
                </td>
                <td>
                  <div>
                    <h6 class="mb-1"><%= policy.customer&.display_name %></h6>
                    <small class="text-muted"><%= policy.customer&.email %></small>
                  </div>
                </td>
                <td>
                  <div>
                    <h6 class="mb-1"><%= policy.insurance_company&.name %></h6>
                    <small class="text-muted">General Insurance</small>
                  </div>
                </td>
                <td>
                  <div>
                    <div class="fw-bold">₹<%= number_with_delimiter(policy.sum_insured) %></div>
                    <small class="text-muted">Sum Insured</small>
                  </div>
                </td>
                <td>
                  <div>
                    <div class="fw-bold">₹<%= number_with_delimiter(policy.total_premium) %></div>
                    <small class="text-muted"><%= policy.premium_frequency&.humanize %></small>
                  </div>
                </td>
                <td>
                  <% if policy.status == 'active' %>
                    <span class="badge bg-success">Active</span>
                  <% elsif policy.status == 'expired' %>
                    <span class="badge bg-danger">Expired</span>
                  <% else %>
                    <span class="badge bg-warning"><%= policy.status&.humanize || 'Pending' %></span>
                  <% end %>
                </td>
                <td>
                  <div class="d-flex gap-1">
                    <%= link_to admin_other_insurance_path(policy), class: "btn btn-sm btn-outline-primary", title: "View" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_other_insurance_path(policy), class: "btn btn-sm btn-outline-warning", title: "Edit" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= link_to admin_other_insurance_path(policy), method: :delete,
                        class: "btn btn-sm btn-outline-danger",
                        title: "Delete",
                        data: {
                          confirm: "Are you sure you want to delete this insurance policy?",
                          turbo_method: :delete
                        } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) && @other_insurances.respond_to?(:current_page) %>
        <div class="card-footer bg-transparent border-0">
          <%= paginate @other_insurances %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-5">
        <i class="bi bi-grid fs-1 text-muted d-block mb-3"></i>
        <h5 class="text-muted">No other insurance policies found</h5>
        <p class="text-muted mb-3">
          <% if params[:search].present? || params[:policy_type].present? || params[:status].present? %>
            Try adjusting your search criteria or
            <%= link_to "view all policies", admin_other_insurances_path, class: "text-decoration-none" %>.
          <% else %>
            Start by adding your first insurance policy to the system.
          <% end %>
        </p>
        <%= link_to new_admin_other_insurance_path, class: "btn btn-primary" do %>
          <i class="bi bi-plus-lg me-1"></i>
          Add First Policy
        <% end %>
      </div>
    <% end %>
  </div>
</div>