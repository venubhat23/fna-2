        </div>
    </div>
</div>

<!-- Invoice Title and Meta Information -->
<div class="invoice-title-section">
    <h2 class="invoice-title">INVOICE</h2>
    <div class="invoice-meta">
        <div class="meta-group">
            <h6>Invoice Number</h6>
            <p><%= @booking.invoice_number || @booking.booking_number %></p>
        </div>
        <div class="meta-group">
            <h6>Booking Number</h6>
            <p><%= @booking.booking_number %></p>
        </div>
        <div class="meta-group">
            <h6>Invoice Date</h6>
            <p><%= Date.current.strftime("%d %B, %Y") %></p>
        </div>
        <div class="meta-group">
            <h6>Due Date</h6>
            <p><%= (Date.current + 30.days).strftime("%d %B, %Y") %></p>
        </div>
    </div>
</div>

<!-- Customer Information -->
<div class="customer-section">
    <h3 class="section-title">
        <i class="fas fa-user"></i>
        Bill To
    </h3>
    <div class="customer-details">
        <div class="row">
            <div class="col-md-6">
                <h5 style="color: #2d3748; margin-bottom: 10px;">
                    <%= @booking.customer_name || @booking.customer&.display_name %>
                </h5>
                <% if @booking.customer_email.present? %>
                    <div class="mb-2">
                        <i class="fas fa-envelope me-2" style="color: #667eea;"></i>
                        <%= @booking.customer_email %>
                    </div>
                <% end %>
                <% if @booking.customer_phone.present? %>
                    <div class="mb-2">
                        <i class="fas fa-phone me-2" style="color: #667eea;"></i>
                        <%= @booking.customer_phone %>
                    </div>
                <% end %>
            </div>
            <div class="col-md-6">
                <% if @booking.delivery_address.present? %>
                    <h6 style="color: #4a5568; margin-bottom: 8px;">Delivery Address:</h6>
                    <p style="color: #718096; line-height: 1.5; margin: 0;">
                        <%= simple_format(@booking.delivery_address) %>
                    </p>
                <% end %>
            </div>
        </div>
    </div>
</div>

<!-- Items Section -->
<div class="items-section">
    <h3 class="section-title">
        <i class="fas fa-list"></i>
        Order Items
    </h3>

    <table class="items-table">
        <thead>
            <tr>
                <th style="width: 5%;">#</th>
                <th style="width: 45%;">Product Details</th>
                <th style="width: 15%;" class="text-center">Quantity</th>
                <th style="width: 15%;" class="text-right">Unit Price</th>
                <th style="width: 20%;" class="text-right">Total</th>
            </tr>
        </thead>
        <tbody>
            <% @booking.booking_items.each_with_index do |item, index| %>
                <tr>
                    <td class="text-center" style="font-weight: 600; color: #667eea;">
                        <%= index + 1 %>
                    </td>
                    <td>
                        <div class="item-name">
                            <%= item.product&.name || 'Product' %>
                        </div>
                        <div class="item-description">
                            <% if item.product&.category %>
                                Category: <%= item.product.category.name %>
                            <% end %>
                            <% if item.product&.sku %>
                                | SKU: <%= item.product.sku %>
                            <% end %>
                        </div>
                    </td>
                    <td class="text-center" style="font-weight: 500;">
                        <%= item.quantity %>
                        <span style="color: #718096; font-size: 12px;">
                            pcs
                        </span>
                    </td>
                    <td class="text-right" style="font-weight: 500;">
                        ‚Çπ<%= number_with_delimiter(item.price&.to_f || 0, delimiter: ',') %>
                    </td>
                    <td class="text-right" style="font-weight: 600; color: #2d3748;">
                        ‚Çπ<%= number_with_delimiter((item.quantity * item.price)&.to_f || 0, delimiter: ',') %>
                    </td>
                </tr>
            <% end %>

            <% if @booking.booking_items.empty? %>
                <tr>
                    <td colspan="5" class="text-center" style="color: #a0aec0; font-style: italic; padding: 40px;">
                        No items found in this booking
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<!-- Totals Section -->
<div class="totals-section">
    <div class="totals-container">
        <div class="total-row subtotal">
            <span>Subtotal:</span>
            <span style="font-weight: 500;">‚Çπ<%= number_with_delimiter(@booking.calculated_subtotal, delimiter: ',') %></span>
        </div>

        <% discount_amount = @booking.discount_amount.to_f %>
        <% if discount_amount > 0 %>
            <div class="total-row subtotal">
                <span>Discount:</span>
                <span style="font-weight: 500; color: #38a169;">
                    -‚Çπ<%= number_with_delimiter(discount_amount, delimiter: ',') %>
                </span>
            </div>
        <% end %>

        <div class="total-row tax">
            <span>GST (<%= @booking.calculated_gst_percentage %>%):</span>
            <span style="font-weight: 500;">‚Çπ<%= number_with_delimiter(@booking.calculated_tax_amount, delimiter: ',') %></span>
        </div>

        <% if discount_amount > 0 %>
            <% original_total = @booking.calculated_subtotal + @booking.calculated_tax_amount %>
            <div class="total-row subtotal">
                <span style="text-decoration: line-through; opacity: 0.7;">Original Total:</span>
                <span style="font-weight: 500; text-decoration: line-through; opacity: 0.7;">‚Çπ<%= number_with_delimiter(original_total, delimiter: ',') %></span>
            </div>
            <div class="total-row final-total">
                <span>Final Amount After Discount:</span>
                <span>‚Çπ<%= number_with_delimiter(original_total - discount_amount, delimiter: ',') %></span>
            </div>
        <% else %>
            <div class="total-row final-total">
                <span>Total Amount:</span>
                <span>‚Çπ<%= number_with_delimiter(@booking.calculated_total_amount, delimiter: ',') %></span>
            </div>
        <% end %>

        <% if @booking.payment_status_paid? %>
            <div style="margin-top: 15px; text-align: center;">
                <span class="badge" style="background: linear-gradient(135deg, #38a169 0%, #48bb78 100%); color: white; padding: 8px 16px; border-radius: 20px; font-size: 14px;">
                    <i class="fas fa-check-circle me-1"></i>
                    PAID
                </span>
            </div>
        <% elsif @booking.payment_status_partially_paid? %>
            <div style="margin-top: 15px; text-align: center;">
                <span class="badge" style="background: linear-gradient(135deg, #ed8936 0%, #f6ad55 100%); color: white; padding: 8px 16px; border-radius: 20px; font-size: 14px;">
                    <i class="fas fa-exclamation-circle me-1"></i>
                    PARTIALLY PAID
                </span>
            </div>
        <% else %>
            <div style="margin-top: 15px; text-align: center;">
                <span class="badge" style="background: linear-gradient(135deg, #e53e3e 0%, #fc8181 100%); color: white; padding: 8px 16px; border-radius: 20px; font-size: 14px;">
                    <i class="fas fa-clock me-1"></i>
                    UNPAID
                </span>
            </div>
        <% end %>
    </div>
</div>

<!-- Notes Section (if applicable) -->
<% if @booking.notes.present? %>
    <div style="padding: 30px 40px; background: white; border-top: 1px solid #e2e8f0;">
        <h3 class="section-title">
            <i class="fas fa-sticky-note"></i>
