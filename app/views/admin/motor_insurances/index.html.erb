<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Motor Insurance Policies</h2>
    <p class="text-muted mb-0">Manage vehicle insurance policies and view policy details</p>
  </div>
  <div class="d-flex gap-2">
    <div class="dropdown">
      <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
        <i class="bi bi-download me-1"></i>
        Export
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to "Export as CSV", admin_motor_insurances_path(format: :csv), class: "dropdown-item" %></li>
      </ul>
    </div>
    <%= link_to new_admin_motor_insurance_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Add New Motor Policy
    <% end %>
  </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Motor Policies</h6>
            <h3 class="mb-0 text-primary"><%= number_with_delimiter(@motor_insurances.count) %></h3>
          </div>
          <div class="bg-primary bg-opacity-10 rounded p-3">
            <i class="bi bi-car-front text-primary fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Premium</h6>
            <h3 class="mb-0 text-success">₹<%= number_with_delimiter(@motor_insurances.sum { |m| m.total_premium.to_f }.to_i) %></h3>
          </div>
          <div class="bg-success bg-opacity-10 rounded p-3">
            <i class="bi bi-currency-rupee text-success fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Coverage</h6>
            <h3 class="mb-0 text-info">₹<%= number_with_delimiter(@motor_insurances.sum { |m| m.sum_insured.to_f }.to_i) %></h3>
          </div>
          <div class="bg-info bg-opacity-10 rounded p-3">
            <i class="bi bi-shield-check text-info fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Active Vehicles</h6>
            <h3 class="mb-0 text-warning"><%= number_with_delimiter(@motor_insurances.where(status: true).count) %></h3>
          </div>
          <div class="bg-warning bg-opacity-10 rounded p-3">
            <i class="bi bi-car-front-fill text-warning fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Search and Filters -->
<div class="card border-0 shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: admin_motor_insurances_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-4">
        <%= form.text_field :search, placeholder: "Search policies, registration numbers...", value: params[:search], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= form.select :status, options_for_select([
          ['All Status', ''],
          ['Active', 'active'],
          ['Expired', 'expired'],
          ['Expiring Soon', 'expiring_soon']
        ], params[:status]), {}, { class: "form-select" } %>
      </div>
      <div class="col-md-3">
        <%= form.select :insurance_type, options_for_select([
          ['All Types', ''],
          ['Comprehensive', 'Comprehensive'],
          ['Third Party', 'Third Party'],
          ['Own Damage', 'Own Damage']
        ], params[:insurance_type]), {}, { class: "form-select" } %>
      </div>
      <div class="col-md-2">
        <%= form.submit "Filter", class: "btn btn-outline-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Motor Insurance Policies List -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <h5 class="mb-0">Motor Insurance Policies</h5>
  </div>
  <div class="card-body p-0">
    <% if @motor_insurances.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="bg-light">
            <tr>
              <th class="border-0">Policy</th>
              <th class="border-0">Vehicle</th>
              <th class="border-0">Customer</th>
              <th class="border-0">Company</th>
              <th class="border-0">Coverage</th>
              <th class="border-0">Premium</th>
              <th class="border-0">Status</th>
              <th class="border-0">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @motor_insurances.each_with_index do |policy, index| %>
              <tr>
                <td>
                  <div>
                    <h6 class="mb-1">
                      <%= link_to policy.policy_number, admin_motor_insurance_path(policy), class: "text-decoration-none fw-bold" %>
                    </h6>
                    <small class="text-muted">
                      <%= policy.policy_type&.humanize %>
                      <span class="mx-1">•</span>
                      <%= policy.policy_start_date.strftime("%b %d, %Y") if policy.policy_start_date %>
                    </small>
                  </div>
                </td>
                <td>
                  <div>
                    <h6 class="mb-1"><%= policy.registration_number %></h6>
                    <small class="text-muted">
                      <%= policy.class_of_vehicle %>
                      <% if policy.make.present? %>
                        <br><%= "#{policy.make} #{policy.model}".strip %>
                      <% end %>
                    </small>
                  </div>
                </td>
                <td>
                  <div>
                    <h6 class="mb-1"><%= policy.customer&.display_name %></h6>
                    <small class="text-muted"><%= policy.customer&.email %></small>
                  </div>
                </td>
                <td>
                  <div>
                    <h6 class="mb-1"><%= policy.insurance_company_name || 'N/A' %></h6>
                    <small class="text-muted">
                      <i class="bi bi-building me-1"></i>
                      Motor Insurance
                    </small>
                  </div>
                </td>
                <td>
                  <div>
                    <h6 class="mb-1 text-warning">₹<%= number_with_delimiter(policy.sum_insured.to_f.to_i) %></h6>
                    <small class="text-muted">Sum Insured</small>
                    <% if policy.policy_end_date %>
                      <br><small class="text-muted">
                        <i class="bi bi-calendar me-1"></i>
                        Expires: <%= policy.policy_end_date.strftime("%b %d, %Y") %>
                      </small>
                    <% end %>
                  </div>
                </td>
                <td>
                  <div>
                    <h6 class="mb-1 text-success">₹<%= number_with_delimiter(policy.total_premium.to_f.to_i) %></h6>
                    <small class="text-muted">
                      Annual
                    </small>
                  </div>
                </td>
                <td>
                  <% if policy.active? %>
                    <span class="badge bg-success">Active</span>
                  <% elsif policy.expired? %>
                    <span class="badge bg-danger">Expired</span>
                  <% elsif policy.expiring_soon? %>
                    <span class="badge bg-warning">Expiring Soon</span>
                  <% else %>
                    <span class="badge bg-secondary">Unknown</span>
                  <% end %>
                </td>
                <td>
                  <div class="d-flex gap-1">
                    <%= link_to admin_motor_insurance_path(policy), class: "btn btn-sm btn-outline-primary", title: "View" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_motor_insurance_path(policy), class: "btn btn-sm btn-outline-warning", title: "Edit" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= link_to admin_motor_insurance_path(policy), method: :delete,
                        class: "btn btn-sm btn-outline-danger",
                        title: "Delete",
                        data: {
                          confirm: "Are you sure you want to delete this motor insurance policy?",
                          turbo_method: :delete
                        } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) && @motor_insurances.respond_to?(:current_page) %>
        <div class="card-footer bg-transparent border-0">
          <%= paginate @motor_insurances %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-5">
        <i class="bi bi-car-front fs-1 text-muted d-block mb-3"></i>
        <h5 class="text-muted">No motor insurance policies found</h5>
        <p class="text-muted mb-3">
          <% if params[:search].present? || params[:status].present? || params[:insurance_type].present? %>
            Try adjusting your search criteria or
            <%= link_to "view all policies", admin_motor_insurances_path, class: "text-decoration-none" %>.
          <% else %>
            Start by adding your first motor insurance policy to the system.
          <% end %>
        </p>
        <%= link_to new_admin_motor_insurance_path, class: "btn btn-primary" do %>
          <i class="bi bi-plus-lg me-1"></i>
          Add First Motor Policy
        <% end %>
      </div>
    <% end %>
  </div>
</div>