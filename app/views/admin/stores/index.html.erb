<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Store Management</h2>
    <p class="text-muted mb-0">Manage all retail stores and outlets</p>
  </div>
  <div class="d-flex gap-2 align-items-center">
    <%= link_to new_admin_store_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Add New Store
    <% end %>
  </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-3">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Total Stores</h6>
            <h5 class="mb-0"><%= @stores.count %></h5>
          </div>
          <div class="text-primary">
            <i class="bi bi-shop fs-3"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-3">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Active Stores</h6>
            <h5 class="mb-0"><%= @stores.where(status: true).count %></h5>
          </div>
          <div class="text-success">
            <i class="bi bi-check-circle fs-3"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-3">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Inactive Stores</h6>
            <h5 class="mb-0"><%= @stores.where(status: false).count %></h5>
          </div>
          <div class="text-danger">
            <i class="bi bi-x-circle fs-3"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-3">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">States Covered</h6>
            <h5 class="mb-0"><%= @stores.pluck(:state).uniq.compact.count %></h5>
          </div>
          <div class="text-info">
            <i class="bi bi-geo-alt fs-3"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Stores Table -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Store List</h5>
      <div class="d-flex gap-2">
        <!-- Search Input -->
        <div class="position-relative">
          <input type="text"
                 class="form-control"
                 placeholder="Search stores..."
                 id="searchInput"
                 style="width: 250px;">
          <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-3"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @stores.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th class="border-0 fw-semibold">Store Details</th>
              <th class="border-0 fw-semibold">Location</th>
              <th class="border-0 fw-semibold">Contact Person</th>
              <th class="border-0 fw-semibold">Contact Info</th>
              <th class="border-0 fw-semibold">Status</th>
              <th class="border-0 fw-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @stores.each do |store| %>
              <tr>
                <td class="align-middle">
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-shop text-primary"></i>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= store.name %></h6>
                      <small class="text-muted">ID: #<%= store.id.to_s.rjust(4, '0') %></small>
                    </div>
                  </div>
                </td>
                <td class="align-middle">
                  <div>
                    <h6 class="mb-0"><%= store.city %>, <%= store.state %></h6>
                    <small class="text-muted">
                      <i class="bi bi-pin-map me-1"></i>
                      <%= store.pincode || 'N/A' %>
                    </small>
                    <% if store.address.present? %>
                      <div class="small text-muted mt-1" style="max-width: 200px;">
                        <i class="bi bi-geo me-1"></i>
                        <%= truncate(store.address, length: 50) %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="align-middle">
                  <div>
                    <h6 class="mb-0"><%= store.contact_person || 'Not Assigned' %></h6>
                    <small class="text-muted">Store Manager</small>
                  </div>
                </td>
                <td class="align-middle">
                  <div>
                    <% if store.contact_mobile.present? %>
                      <div class="mb-1">
                        <i class="bi bi-telephone text-primary me-1"></i>
                        <%= store.contact_mobile %>
                      </div>
                    <% end %>
                    <% if store.email.present? %>
                      <div class="small text-muted">
                        <i class="bi bi-envelope me-1"></i>
                        <%= store.email %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="align-middle">
                  <% if store.status %>
                    <span class="badge bg-success-subtle text-success px-3 py-2">
                      <i class="bi bi-check-circle me-1"></i>
                      Active
                    </span>
                  <% else %>
                    <span class="badge bg-danger-subtle text-danger px-3 py-2">
                      <i class="bi bi-x-circle me-1"></i>
                      Inactive
                    </span>
                  <% end %>
                </td>
                <td class="align-middle">
                  <div class="d-flex gap-2 align-items-center">
                    <!-- Quick Actions -->
                    <%= link_to admin_store_path(store),
                        class: "btn btn-sm btn-outline-primary",
                        title: "View Details" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>

                    <%= link_to edit_admin_store_path(store),
                        class: "btn btn-sm btn-outline-secondary",
                        title: "Edit Store" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>

                    <!-- More Actions Dropdown -->
                    <div class="dropdown">
                      <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                      </button>
                      <ul class="dropdown-menu dropdown-menu-end">
                        <li class="dropdown-header">
                          <i class="bi bi-tools me-1"></i>Store Actions
                        </li>
                        <li>
                          <%= link_to admin_store_path(store), class: "dropdown-item" do %>
                            <i class="bi bi-eye me-2"></i>
                            View Details
                          <% end %>
                        </li>
                        <li>
                          <%= link_to edit_admin_store_path(store), class: "dropdown-item" do %>
                            <i class="bi bi-pencil me-2"></i>
                            Edit Store
                          <% end %>
                        </li>

                        <li><hr class="dropdown-divider"></li>

                        <li>
                          <%= link_to toggle_status_admin_store_path(store),
                              method: :patch,
                              class: "dropdown-item" do %>
                            <i class="bi bi-toggle-<%= store.status ? 'on text-success' : 'off text-danger' %> me-2"></i>
                            <%= store.status ? 'Deactivate' : 'Activate' %> Store
                          <% end %>
                        </li>

                        <li><hr class="dropdown-divider"></li>

                        <!-- Reports Section -->
                        <li class="dropdown-header">
                          <i class="bi bi-graph-up me-1"></i>Reports
                        </li>
                        <li>
                          <a href="#" class="dropdown-item">
                            <i class="bi bi-bar-chart me-2"></i>
                            Store Performance
                          </a>
                        </li>
                        <li>
                          <a href="#" class="dropdown-item">
                            <i class="bi bi-box me-2"></i>
                            Inventory Report
                          </a>
                        </li>

                        <li><hr class="dropdown-divider"></li>

                        <li>
                          <%= link_to admin_store_path(store),
                              method: :delete,
                              class: "dropdown-item text-danger",
                              data: {
                                confirm: "Are you sure you want to delete #{store.name}? This action cannot be undone."
                              } do %>
                            <i class="bi bi-trash me-2"></i>
                            Delete Store
                          <% end %>
                        </li>
                      </ul>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-shop-window fs-1 text-muted"></i>
        </div>
        <h5 class="text-muted mb-3">No Stores Found</h5>
        <p class="text-muted mb-4">Start by adding your first store to manage inventory and operations.</p>
        <%= link_to "Add Store", new_admin_store_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Search functionality
  const searchInput = document.getElementById('searchInput');
  const tableRows = document.querySelectorAll('tbody tr');

  searchInput?.addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();

    tableRows.forEach(row => {
      const storeName = row.cells[0]?.textContent.toLowerCase() || '';
      const location = row.cells[1]?.textContent.toLowerCase() || '';
      const contact = row.cells[2]?.textContent.toLowerCase() || '';
      const contactInfo = row.cells[3]?.textContent.toLowerCase() || '';
      const status = row.cells[4]?.textContent.toLowerCase() || '';

      if (storeName.includes(searchTerm) ||
          location.includes(searchTerm) ||
          contact.includes(searchTerm) ||
          contactInfo.includes(searchTerm) ||
          status.includes(searchTerm)) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  });
});
</script>

<style>
