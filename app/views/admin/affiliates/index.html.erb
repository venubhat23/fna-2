<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Affiliate Management</h2>
    <p class="text-muted mb-0">Manage and track all your affiliates</p>
  </div>
  <div>
    <%= link_to new_admin_affiliate_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Add New Affiliate
    <% end %>
  </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Total Affiliates</h6>
            <h4 class="mb-0"><%= @stats[:total] %></h4>
          </div>
          <div class="text-primary">
            <i class="bi bi-people fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Active Affiliates</h6>
            <h4 class="mb-0"><%= @stats[:active] %></h4>
          </div>
          <div class="text-success">
            <i class="bi bi-person-check fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Inactive Affiliates</h6>
            <h4 class="mb-0"><%= @stats[:inactive] %></h4>
          </div>
          <div class="text-danger">
            <i class="bi bi-person-x fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">This Month</h6>
            <h4 class="mb-0"><%= Affiliate.where('created_at >= ?', 1.month.ago).count %></h4>
          </div>
          <div class="text-info">
            <i class="bi bi-calendar-plus fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Affiliates Table -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Affiliate List</h5>
      <div class="d-flex gap-2">
        <div class="position-relative">
          <input type="text" class="form-control" placeholder="Search affiliates..." id="searchInput">
          <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-3"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @affiliates.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th class="border-0 fw-semibold">Affiliate</th>
              <th class="border-0 fw-semibold">Company</th>
              <th class="border-0 fw-semibold">Contact Info</th>
              <th class="border-0 fw-semibold">Login Credentials</th>
              <th class="border-0 fw-semibold">Commission</th>
              <th class="border-0 fw-semibold">Status</th>
              <th class="border-0 fw-semibold">Joined</th>
              <th class="border-0 fw-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @affiliates.each do |affiliate| %>
              <tr>
                <td class="align-middle">
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-success-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-person-badge text-success"></i>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= affiliate.display_name %></h6>
                      <small class="text-muted">ID: #<%= affiliate.id %></small>
                    </div>
                  </div>
                </td>
                <td class="align-middle">
                  <div>
                    <% if affiliate.company_name.present? %>
                      <div class="fw-semibold"><%= affiliate.company_name %></div>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </div>
                </td>
                <td class="align-middle">
                  <div>
                    <% if affiliate.email.present? %>
                      <div class="small">
                        <i class="bi bi-envelope text-muted me-1"></i>
                        <%= affiliate.email %>
                      </div>
                    <% end %>
                    <% if affiliate.mobile.present? %>
                      <div class="small">
                        <i class="bi bi-telephone text-muted me-1"></i>
                        <%= affiliate.mobile %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="align-middle">
                  <div class="login-credentials">
                    <div class="small">
                      <i class="bi bi-person-circle text-muted me-1"></i>
                      <strong>Username:</strong> <%= affiliate.username || affiliate.email %>
                    </div>
                    <div class="small mt-1">
                      <i class="bi bi-key text-muted me-1"></i>
                      <strong>Password:</strong>
                      <span class="password-display" onclick="showPassword('<%= affiliate.auto_generated_password %>')">
                        <span class="password-hidden">••••••••</span>
                        <button type="button" class="btn btn-link btn-sm p-0 ms-1" title="Click to view password">
                          <i class="bi bi-eye text-muted"></i>
                        </button>
                      </span>
                    </div>
                  </div>
                </td>
                <td class="align-middle">
                  <span class="badge bg-info-subtle text-info">
                    <i class="bi bi-percent me-1"></i>
                    <%= affiliate.formatted_commission %>
                  </span>
                </td>
                <td class="align-middle">
                  <span class="badge bg-<%= affiliate.status_badge_class %>-subtle text-<%= affiliate.status_badge_class %>">
                    <i class="bi bi-<%= affiliate.status? ? 'check-circle' : 'x-circle' %> me-1"></i>
                    <%= affiliate.status_text %>
                  </span>
                </td>
                <td class="align-middle">
                  <%= affiliate.created_at.strftime("%b %d, %Y") %>
                </td>
                <td class="align-middle">
                  <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to admin_affiliate_path(affiliate), class: "dropdown-item" do %>
                          <i class="bi bi-eye me-2"></i>
                          View Details
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_admin_affiliate_path(affiliate), class: "dropdown-item" do %>
                          <i class="bi bi-pencil me-2"></i>
                          Edit Affiliate
                        <% end %>
                      </li>
                      <li>
                        <%= link_to toggle_status_admin_affiliate_path(affiliate), method: :patch,
                            class: "dropdown-item" do %>
                          <i class="bi bi-<%= affiliate.status? ? 'x-circle' : 'check-circle' %> me-2"></i>
                          <%= affiliate.status? ? 'Deactivate' : 'Activate' %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to reset_password_admin_affiliate_path(affiliate), method: :patch,
                            class: "dropdown-item" do %>
                          <i class="bi bi-key me-2"></i>
                          Reset Password
                        <% end %>
                      </li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to admin_affiliate_path(affiliate), method: :delete,
                            class: "dropdown-item text-danger",
                            confirm: "Are you sure you want to delete this affiliate?",
                            data: {
                              confirm: "Are you sure you want to delete #{affiliate.display_name}? This action cannot be undone."
                            } do %>
                          <i class="bi bi-trash me-2"></i>
                          Delete Affiliate
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) && @affiliates.respond_to?(:total_pages) %>
        <div class="card-footer bg-transparent border-0">
          <%= paginate @affiliates %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-people fs-1 text-muted"></i>
        </div>
        <h5 class="text-muted mb-3">No Affiliates Found</h5>
        <p class="text-muted mb-4">Start building your affiliate network by adding your first affiliate.</p>
        <%= link_to "Add Affiliate", new_admin_affiliate_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Search functionality
  const searchInput = document.getElementById('searchInput');
  const tableRows = document.querySelectorAll('tbody tr');

  searchInput?.addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();

    tableRows.forEach(row => {
      const affiliateName = row.cells[0]?.textContent.toLowerCase() || '';
      const contactInfo = row.cells[1]?.textContent.toLowerCase() || '';
      const commission = row.cells[3]?.textContent.toLowerCase() || '';

      if (affiliateName.includes(searchTerm) ||
          contactInfo.includes(searchTerm) ||
          commission.includes(searchTerm)) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  });

  // Password display functionality
  window.showPassword = function(password) {
    if (password && password !== 'Not Set') {
      alert(`Affiliate Password: ${password}\n\nPlease keep this information secure!`);
    } else {
      alert('No password set for this affiliate.');
    }
  };
});
</script>

<style>
.login-credentials {
  min-width: 180px;
  font-size: 0.85rem;
}

.password-display {
  cursor: pointer;
  transition: all 0.2s ease;
}

.password-display:hover {
  background-color: #f8f9fa;
  border-radius: 3px;
  padding: 2px 4px;
}

.password-hidden {
  font-family: monospace;
  letter-spacing: 1px;
  color: #6c757d;
}

.btn-link {
  text-decoration: none !important;
}

.btn-link:hover {
  color: #0d6efd !important;
}

/* Fix dropdown menu visibility */
.dropdown {
  position: relative;
}

.dropdown-menu {
  position: absolute !important;
  z-index: 1050 !important;
  min-width: 150px;
}

/* Ensure the last row's dropdown opens upward if needed */
tbody tr:last-child .dropdown-menu,
tbody tr:nth-last-child(2) .dropdown-menu {
  bottom: 100%;
  top: auto;
}

/* Make the credentials column more compact but readable */
.login-credentials strong {
  color: #495057;
  font-size: 0.8rem;
}

.login-credentials .small {
  line-height: 1.3;
}

/* Custom styling for affiliate cards */
.avatar-sm {
  width: 40px;
  height: 40px;
}

.bi-person-badge {
  font-size: 1.25rem;
}
</style>