<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h3 class="mb-1 fw-semibold">Purchase Details</h3>
    <p class="text-muted mb-0">
      <i class="bi bi-receipt me-1"></i>
      Purchase #<%= @vendor_purchase.purchase_number %>
    </p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to admin_vendor_purchases_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to List
    <% end %>
    <% if @vendor_purchase.can_be_edited? %>
      <%= link_to edit_admin_vendor_purchase_path(@vendor_purchase), class: "btn btn-primary" do %>
        <i class="bi bi-pencil me-1"></i>
        Edit Purchase
      <% end %>
    <% end %>
    <% if @vendor_purchase.status == 'pending' %>
      <%= link_to complete_purchase_admin_vendor_purchase_path(@vendor_purchase),
          method: :patch,
          class: "btn btn-success",
          data: { confirm: "Are you sure you want to mark this purchase as completed?" } do %>
        <i class="bi bi-check-circle me-1"></i>
        Mark Complete
      <% end %>
    <% end %>
  </div>
</div>

<!-- Purchase Overview Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body text-center">
        <div class="d-flex align-items-center justify-content-center mb-2">
          <div class="bg-primary-subtle rounded-circle p-3">
            <i class="bi bi-currency-rupee text-primary fs-4"></i>
          </div>
        </div>
        <h5 class="card-title mb-1">₹<%= number_with_delimiter(@vendor_purchase.total_amount, delimiter: ',') %></h5>
        <p class="text-muted mb-0 small">Total Amount</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body text-center">
        <div class="d-flex align-items-center justify-content-center mb-2">
          <div class="bg-success-subtle rounded-circle p-3">
            <i class="bi bi-wallet2 text-success fs-4"></i>
          </div>
        </div>
        <h5 class="card-title mb-1">₹<%= number_with_delimiter(@vendor_purchase.paid_amount, delimiter: ',') %></h5>
        <p class="text-muted mb-0 small">Amount Paid</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body text-center">
        <div class="d-flex align-items-center justify-content-center mb-2">
          <div class="bg-warning-subtle rounded-circle p-3">
            <i class="bi bi-exclamation-triangle text-warning fs-4"></i>
          </div>
        </div>
        <h5 class="card-title mb-1">₹<%= number_with_delimiter(@vendor_purchase.outstanding_amount, delimiter: ',') %></h5>
        <p class="text-muted mb-0 small">Outstanding</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body text-center">
        <div class="d-flex align-items-center justify-content-center mb-2">
          <div class="bg-info-subtle rounded-circle p-3">
            <i class="bi bi-box text-info fs-4"></i>
          </div>
        </div>
        <h5 class="card-title mb-1"><%= @vendor_purchase.vendor_purchase_items.count %></h5>
        <p class="text-muted mb-0 small">Total Items</p>
      </div>
    </div>
  </div>
</div>

<!-- Purchase Information -->
<div class="card border-0 shadow-sm mb-4">
  <div class="card-header bg-transparent border-0">
    <div class="d-flex align-items-center">
      <i class="bi bi-info-circle me-2 text-primary"></i>
      <h5 class="mb-0 fw-semibold">Purchase Information</h5>
    </div>
  </div>
  <div class="card-body">
    <div class="row g-4">
      <div class="col-md-6">
        <div class="border-start border-primary border-3 ps-3">
          <h6 class="text-muted mb-1">Vendor</h6>
          <p class="mb-0 fw-medium"><%= @vendor_purchase.vendor.name %></p>
          <% if @vendor_purchase.vendor.phone.present? %>
            <small class="text-muted">Phone: <%= @vendor_purchase.vendor.phone %></small>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="border-start border-success border-3 ps-3">
          <h6 class="text-muted mb-1">Purchase Date</h6>
          <p class="mb-0 fw-medium"><%= @vendor_purchase.purchase_date.strftime('%B %d, %Y') %></p>
          <small class="text-muted"><%= time_ago_in_words(@vendor_purchase.purchase_date) %> ago</small>
        </div>
      </div>
      <div class="col-md-6">
        <div class="border-start border-info border-3 ps-3">
          <h6 class="text-muted mb-1">Status</h6>
          <span class="badge <%= @vendor_purchase.status_badge_class %> px-3 py-2">
            <i class="bi bi-circle-fill me-1" style="font-size: 0.6rem;"></i>
            <%= @vendor_purchase.status.titleize %>
          </span>
        </div>
      </div>
      <div class="col-md-6">
        <div class="border-start border-warning border-3 ps-3">
          <h6 class="text-muted mb-1">Payment Status</h6>
          <span class="badge <%= @vendor_purchase.payment_status_badge_class %> px-3 py-2">
            <i class="bi bi-wallet2 me-1"></i>
            <%= @vendor_purchase.payment_status.titleize %>
          </span>
        </div>
      </div>
    </div>
    <% if @vendor_purchase.notes.present? %>
      <div class="mt-4">
        <div class="border-start border-secondary border-3 ps-3">
          <h6 class="text-muted mb-1">Notes</h6>
          <p class="mb-0"><%= simple_format(@vendor_purchase.notes) %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Purchase Items -->
<div class="card border-0 shadow-sm mb-4">
  <div class="card-header bg-transparent border-0">
    <div class="d-flex align-items-center">
      <i class="bi bi-cart me-2 text-primary"></i>
      <h5 class="mb-0 fw-semibold">Purchase Items</h5>
    </div>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="bg-light">
          <tr>
            <th class="border-0 py-3">Product</th>
            <th class="border-0 py-3 text-center">Quantity</th>
            <th class="border-0 py-3 text-end">Purchase Price</th>
            <th class="border-0 py-3 text-end">Selling Price</th>
            <th class="border-0 py-3 text-end">Line Total</th>
            <th class="border-0 py-3 text-center">Profit/Unit</th>
          </tr>
        </thead>
        <tbody>
          <% @vendor_purchase.vendor_purchase_items.each do |item| %>
            <% line_total = item.quantity * item.purchase_price %>
            <% profit_per_unit = item.selling_price - item.purchase_price %>
            <% profit_margin = item.purchase_price > 0 ? ((profit_per_unit / item.purchase_price) * 100) : 0 %>
            <tr>
              <td class="py-3">
                <div class="d-flex align-items-center">
                  <div class="bg-primary-subtle rounded p-2 me-3">
                    <i class="bi bi-box text-primary"></i>
                  </div>
                  <div>
                    <h6 class="mb-1"><%= item.product.name %></h6>
                    <small class="text-muted">SKU: <%= item.product.sku || 'N/A' %></small>
                  </div>
                </div>
              </td>
              <td class="py-3 text-center">
                <span class="badge bg-light text-dark px-3 py-2">
                  <%= number_with_delimiter(item.quantity) %>
                  <small class="text-muted"><%= item.product.unit_type || 'units' %></small>
                </span>
              </td>
              <td class="py-3 text-end fw-medium">₹<%= number_with_delimiter(item.purchase_price) %></td>
              <td class="py-3 text-end fw-medium">₹<%= number_with_delimiter(item.selling_price) %></td>
              <td class="py-3 text-end">
                <span class="badge bg-primary-subtle text-primary px-3 py-2">
                  ₹<%= number_with_delimiter(line_total) %>
                </span>
              </td>
              <td class="py-3 text-center">
                <div>
                  <span class="badge <%= profit_per_unit >= 0 ? 'bg-success-subtle text-success' : 'bg-danger-subtle text-danger' %> px-3 py-2">
                    ₹<%= number_with_delimiter(profit_per_unit, precision: 2) %>
                  </span>
                  <br>
                  <small class="<%= profit_per_unit >= 0 ? 'text-success' : 'text-danger' %>">
                    <%= number_with_precision(profit_margin, precision: 1) %>%
                  </small>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="bg-light">
          <tr>
            <th colspan="4" class="py-3 text-end">Total Purchase Amount:</th>
            <th class="py-3 text-end">
              <span class="badge bg-success-subtle text-success px-3 py-2 fs-6">
                ₹<%= number_with_delimiter(@vendor_purchase.total_amount) %>
              </span>
            </th>
            <th class="py-3"></th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>

<!-- Stock Batches -->
<% if @stock_batches.present? %>
<div class="card border-0 shadow-sm mb-4">
  <div class="card-header bg-transparent border-0">
    <div class="d-flex align-items-center">
      <i class="bi bi-layers me-2 text-primary"></i>
      <h5 class="mb-0 fw-semibold">Stock Batches Created</h5>
    </div>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="bg-light">
          <tr>
            <th class="border-0 py-3">Product</th>
            <th class="border-0 py-3 text-center">Purchased</th>
            <th class="border-0 py-3 text-center">Remaining</th>
            <th class="border-0 py-3 text-center">Status</th>
            <th class="border-0 py-3 text-end">Batch Value</th>
          </tr>
        </thead>
        <tbody>
          <% @stock_batches.each do |batch| %>
            <tr>
              <td class="py-3">
                <div class="d-flex align-items-center">
                  <div class="bg-info-subtle rounded p-2 me-3">
                    <i class="bi bi-stack text-info"></i>
                  </div>
                  <div>
                    <h6 class="mb-1"><%= batch.product.name %></h6>
                    <small class="text-muted">Batch Date: <%= batch.batch_date.strftime('%b %d, %Y') %></small>
                  </div>
                </div>
              </td>
              <td class="py-3 text-center">
                <span class="badge bg-primary-subtle text-primary px-3 py-2">
                  <%= number_with_delimiter(batch.quantity_purchased) %>
                </span>
              </td>
              <td class="py-3 text-center">
                <span class="badge bg-success-subtle text-success px-3 py-2">
                  <%= number_with_delimiter(batch.quantity_remaining) %>
                </span>
              </td>
              <td class="py-3 text-center">
                <span class="badge <%= batch.status == 'active' ? 'bg-success' : 'bg-secondary' %> px-3 py-2">
                  <%= batch.status.titleize %>
                </span>
              </td>
              <td class="py-3 text-end fw-medium">
                ₹<%= number_with_delimiter(batch.quantity_remaining * batch.purchase_price) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>

<!-- Activity Timeline -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <div class="d-flex align-items-center">
      <i class="bi bi-clock-history me-2 text-primary"></i>
      <h5 class="mb-0 fw-semibold">Activity Timeline</h5>
    </div>
  </div>
  <div class="card-body">
    <div class="timeline">
      <div class="timeline-item">
        <div class="timeline-marker bg-success"></div>
        <div class="timeline-content">
          <h6 class="mb-1">Purchase Created</h6>
          <p class="text-muted mb-1">Purchase order was successfully created</p>
          <small class="text-muted">
            <i class="bi bi-calendar me-1"></i>
            <%= @vendor_purchase.created_at.strftime('%B %d, %Y at %I:%M %p') %>
          </small>
        </div>
      </div>

      <% if @vendor_purchase.status == 'completed' %>
      <div class="timeline-item">
        <div class="timeline-marker bg-primary"></div>
        <div class="timeline-content">
          <h6 class="mb-1">Purchase Completed</h6>
          <p class="text-muted mb-1">Purchase was marked as completed and stock batches were finalized</p>
          <small class="text-muted">
            <i class="bi bi-calendar me-1"></i>
            <%= @vendor_purchase.updated_at.strftime('%B %d, %Y at %I:%M %p') %>
          </small>
        </div>
      </div>
      <% end %>

      <div class="timeline-item">
        <div class="timeline-marker bg-info"></div>
        <div class="timeline-content">
          <h6 class="mb-1">Stock Batches Generated</h6>
          <p class="text-muted mb-1"><%= pluralize(@stock_batches.count, 'stock batch') %> created for inventory tracking</p>
          <small class="text-muted">
            <i class="bi bi-calendar me-1"></i>
            <%= @vendor_purchase.created_at.strftime('%B %d, %Y at %I:%M %p') %>
          </small>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.timeline {
  position: relative;
  padding-left: 30px;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 15px;
  top: 0;
  bottom: 0;
  width: 2px;
  background: #e9ecef;
}

.timeline-item {
  position: relative;
  margin-bottom: 30px;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-marker {
  position: absolute;
  left: -15px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  border: 3px solid white;
  box-shadow: 0 0 0 2px #e9ecef;
}

.timeline-content {
  padding-left: 25px;
}
</style>
