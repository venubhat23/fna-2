<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Category Management</h2>
    <p class="text-muted mb-0">Manage product categories</p>
  </div>
  <div>
    <%= link_to new_admin_category_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Add New Category
    <% end %>
  </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Total Categories</h6>
            <h4 class="mb-0"><%= @categories.respond_to?(:total_count) ? @categories.total_count : @categories.count %></h4>
          </div>
          <div class="text-primary">
            <i class="bi bi-tags fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Active Categories</h6>
            <h4 class="mb-0"><%= @categories.select(&:status).count %></h4>
          </div>
          <div class="text-success">
            <i class="bi bi-check-circle fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">With Products</h6>
            <h4 class="mb-0"><%= @categories.joins(:products).distinct.count %></h4>
          </div>
          <div class="text-info">
            <i class="bi bi-box fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Empty Categories</h6>
            <h4 class="mb-0"><%= @categories.left_joins(:products).where(products: { id: nil }).count %></h4>
          </div>
          <div class="text-warning">
            <i class="bi bi-inbox fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Categories Table -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Category List</h5>
      <div class="d-flex gap-2">
        <div class="position-relative">
          <input type="text" class="form-control" placeholder="Search categories..." id="searchInput">
          <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-3"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @categories.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th class="border-0 fw-semibold">Image</th>
              <th class="border-0 fw-semibold">Category</th>
              <th class="border-0 fw-semibold">Description</th>
              <th class="border-0 fw-semibold">Products</th>
              <th class="border-0 fw-semibold">Order</th>
              <th class="border-0 fw-semibold">Status</th>
              <th class="border-0 fw-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td class="align-middle">
                  <% if category.image.attached? %>
                    <%= image_tag category.image, class: "rounded", style: "width: 50px; height: 50px; object-fit: cover;" %>
                  <% else %>
                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                      <i class="bi bi-image text-muted"></i>
                    </div>
                  <% end %>
                </td>
                <td class="align-middle">
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-tag text-primary"></i>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= category.name %></h6>
                      <small class="text-muted">
                        <%= category.products_count %> products
                      </small>
                    </div>
                  </div>
                </td>
                <td class="align-middle">
                  <%= truncate(category.description, length: 50) if category.description.present? %>
                </td>
                <td class="align-middle">
                  <span class="badge bg-primary-subtle text-primary">
                    <%= category.products_count %> products
                  </span>
                </td>
                <td class="align-middle">
                  <span class="badge bg-secondary-subtle text-secondary"><%= category.display_order || 0 %></span>
                </td>
                <td class="align-middle">
                  <% if category.status %>
                    <span class="badge bg-success-subtle text-success">
                      <i class="bi bi-check-circle me-1"></i>
                      Active
                    </span>
                  <% else %>
                    <span class="badge bg-danger-subtle text-danger">
                      <i class="bi bi-x-circle me-1"></i>
                      Inactive
                    </span>
                  <% end %>
                </td>
                <td class="align-middle">
                  <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to admin_category_path(category), class: "dropdown-item" do %>
                          <i class="bi bi-eye me-2"></i>
                          View Details
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_admin_category_path(category), class: "dropdown-item" do %>
                          <i class="bi bi-pencil me-2"></i>
                          Edit Category
                        <% end %>
                      </li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to admin_category_path(category), method: :delete,
                            class: "dropdown-item text-danger",
                            confirm: "Are you sure you want to delete this category?",
                            data: {
                              confirm: "Are you sure you want to delete #{category.name}? This action cannot be undone."
                            } do %>
                          <i class="bi bi-trash me-2"></i>
                          Delete Category
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) && @categories.respond_to?(:total_pages) %>
        <div class="card-footer bg-transparent border-0">
          <%= paginate @categories %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-tags fs-1 text-muted"></i>
        </div>
        <h5 class="text-muted mb-3">No Categories Found</h5>
        <p class="text-muted mb-4">Start organizing your products by creating categories.</p>
        <%= link_to "Add Category", new_admin_category_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Search functionality
  const searchInput = document.getElementById('searchInput');
  const tableRows = document.querySelectorAll('tbody tr');

  searchInput?.addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();

    tableRows.forEach(row => {
      const categoryName = row.cells[1]?.textContent.toLowerCase() || '';
      const description = row.cells[2]?.textContent.toLowerCase() || '';
      const products = row.cells[3]?.textContent.toLowerCase() || '';

      if (categoryName.includes(searchTerm) ||
          description.includes(searchTerm) ||
          products.includes(searchTerm)) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  });
});
</script>