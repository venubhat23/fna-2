<!-- Customer Wallets Index View -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Customer Wallets</h2>
    <p class="text-muted mb-0">Manage customer digital wallets and transactions</p>
  </div>
  <div>
    <%= link_to new_admin_customer_wallet_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>Create Wallet
    <% end %>
  </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Total Wallets</h6>
            <h4 class="mb-0"><%= @stats[:total_wallets] %></h4>
          </div>
          <div class="text-primary">
            <i class="bi bi-wallet2 fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Active Wallets</h6>
            <h4 class="mb-0"><%= @stats[:active_wallets] %></h4>
          </div>
          <div class="text-success">
            <i class="bi bi-check-circle fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Total Balance</h6>
            <h4 class="mb-0">₹<%= number_with_delimiter(@stats[:total_balance].to_f.round(2)) %></h4>
          </div>
          <div class="text-info">
            <i class="bi bi-currency-rupee fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Avg Balance</h6>
            <h4 class="mb-0">₹<%= (@stats[:avg_balance] || 0).round(2) %></h4>
          </div>
          <div class="text-warning">
            <i class="bi bi-graph-up fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Search and Filter -->
<div class="row mb-4">
  <div class="col-md-6">
    <%= form_with url: admin_customer_wallets_path, method: :get, local: true, class: "d-flex" do |form| %>
      <%= form.text_field :search, placeholder: "Search customers...", value: params[:search], class: "form-control me-2" %>
      <%= form.submit "Search", class: "btn btn-outline-primary" %>
      <%= link_to "Clear", admin_customer_wallets_path, class: "btn btn-outline-secondary ms-2" if params[:search].present? %>
    <% end %>
  </div>
</div>

<!-- Customer Wallets Table -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-white">
    <h6 class="mb-0">Customer Wallets</h6>
  </div>
  <div class="card-body p-0">
    <% if @customer_wallets.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Customer</th>
              <th>Balance</th>
              <th>Status</th>
              <th>Last Transaction</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @customer_wallets.each do |wallet| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-person text-white"></i>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= "#{wallet.customer.first_name} #{wallet.customer.last_name}".strip %></h6>
                      <small class="text-muted"><%= wallet.customer.email %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <h6 class="mb-0 text-<%= wallet.balance > 0 ? 'success' : 'muted' %>">
                    <%= wallet.formatted_balance %>
                  </h6>
                </td>
                <td>
                  <span class="badge bg-<%= wallet.status? ? 'success' : 'danger' %>">
                    <%= wallet.status? ? 'Active' : 'Inactive' %>
                  </span>
                </td>
                <td>
                  <% last_transaction = wallet.wallet_transactions.recent.first %>
                  <% if last_transaction %>
                    <small class="text-muted">
                      <%= last_transaction.transaction_type.humanize %> of
                      <%= last_transaction.formatted_amount %>
                      <br>
                      <%= time_ago_in_words(last_transaction.created_at) %> ago
                    </small>
                  <% else %>
                    <small class="text-muted">No transactions</small>
                  <% end %>
                </td>
                <td>
                  <small class="text-muted">
                    <%= wallet.created_at.strftime('%d %b %Y') %>
                  </small>
                </td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <%= link_to admin_customer_wallet_path(wallet), class: "btn btn-outline-primary", title: "View Details" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_customer_wallet_path(wallet), class: "btn btn-outline-warning", title: "Edit" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= link_to admin_customer_wallet_path(wallet), method: :delete,
                        class: "btn btn-outline-danger", title: "Delete",
                        confirm: "Are you sure? This will delete all transaction history." do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @customer_wallets.respond_to?(:total_pages) && @customer_wallets.total_pages > 1 %>
        <div class="card-footer bg-white">
          <div class="d-flex justify-content-center">
            <%= paginate @customer_wallets %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-5">
        <i class="bi bi-wallet2 display-1 text-muted"></i>
        <h5 class="mt-3 text-muted">No Customer Wallets Found</h5>
        <p class="text-muted mb-4">Create the first customer wallet to get started.</p>
        <%= link_to new_admin_customer_wallet_path, class: "btn btn-primary" do %>
          <i class="bi bi-plus-lg me-1"></i>Create First Wallet
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
.avatar-sm {
  width: 2.5rem;
  height: 2.5rem;
}
</style>
