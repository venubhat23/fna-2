<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1"><%= [@agency_broker.first_name, @agency_broker.last_name].compact.join(' ') %></h2>
    <p class="text-muted mb-0"><%= @agency_broker.user_type.humanize %> Details</p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to edit_admin_agency_broker_path(@agency_broker), class: "btn btn-primary" do %>
      <i class="bi bi-pencil me-1"></i>
      Edit Partner
    <% end %>
    <%= link_to admin_agency_brokers_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to List
    <% end %>
  </div>
</div>

<!-- Partner Details -->
<div class="row">
  <div class="col-lg-8">
    <!-- Basic Information -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <div class="d-flex align-items-center">
          <i class="bi bi-person-circle me-2 text-primary"></i>
          <h5 class="mb-0">Basic Information</h5>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-4 mb-3">
            <label class="text-muted small">First Name</label>
            <p class="mb-0 fw-semibold"><%= @agency_broker.first_name || 'Not specified' %></p>
          </div>
          <div class="col-md-4 mb-3">
            <label class="text-muted small">Last Name</label>
            <p class="mb-0 fw-semibold"><%= @agency_broker.last_name || 'Not specified' %></p>
          </div>
          <div class="col-md-4 mb-3">
            <label class="text-muted small">Partner Type</label>
            <p class="mb-0">
              <span class="badge bg-<%=
                case @agency_broker.user_type
                when 'agent' then 'info'
                when 'sub_agent' then 'warning'
                else 'secondary'
                end
              %>">
                <%= @agency_broker.user_type.humanize %>
              </span>
            </p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="text-muted small">Role</label>
            <p class="mb-0"><%= @agency_broker.role || 'Not specified' %></p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="text-muted small">Status</label>
            <p class="mb-0">
              <% if @agency_broker.status %>
                <span class="badge bg-success-subtle text-success">
                  <i class="bi bi-check-circle me-1"></i>
                  Active
                </span>
              <% else %>
                <span class="badge bg-danger-subtle text-danger">
                  <i class="bi bi-x-circle me-1"></i>
                  Inactive
                </span>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <div class="d-flex align-items-center">
          <i class="bi bi-telephone me-2 text-primary"></i>
          <h5 class="mb-0">Contact Information</h5>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="text-muted small">Email Address</label>
            <p class="mb-0">
              <% if @agency_broker.email.present? %>
                <a href="mailto:<%= @agency_broker.email %>" class="text-decoration-none">
                  <i class="bi bi-envelope me-1"></i>
                  <%= @agency_broker.email %>
                </a>
              <% else %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="text-muted small">Mobile Number</label>
            <p class="mb-0">
              <% if @agency_broker.mobile.present? %>
                <a href="tel:<%= @agency_broker.mobile %>" class="text-decoration-none">
                  <i class="bi bi-telephone me-1"></i>
                  <%= @agency_broker.mobile %>
                </a>
              <% else %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </p>
          </div>
          <div class="col-12 mb-3">
            <label class="text-muted small">Address</label>
            <p class="mb-0">
              <% if @agency_broker.address.present? %>
                <i class="bi bi-geo-alt me-1"></i>
                <%= @agency_broker.address %>
              <% else %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="text-muted small">State</label>
            <p class="mb-0"><%= @agency_broker.state || 'Not specified' %></p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="text-muted small">City</label>
            <p class="mb-0"><%= @agency_broker.city || 'Not specified' %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Business Information -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0">
        <div class="d-flex align-items-center">
          <i class="bi bi-briefcase me-2 text-primary"></i>
          <h5 class="mb-0">Business Information</h5>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="text-muted small">PAN Number</label>
            <p class="mb-0">
              <% if @agency_broker.pan_number.present? %>
                <i class="bi bi-credit-card me-1"></i>
                <%= @agency_broker.pan_number %>
              <% else %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="text-muted small">GST Number</label>
            <p class="mb-0">
              <% if @agency_broker.gst_number.present? %>
                <i class="bi bi-receipt me-1"></i>
                <%= @agency_broker.gst_number %>
              <% else %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </p>
          </div>
        </div>

        <div class="row text-center mt-4">
          <div class="col-4">
            <div class="border-end">
              <h6 class="text-primary mb-1">Partnership</h6>
              <small class="text-muted">Active Since <%= @agency_broker.created_at.strftime('%b %Y') %></small>
            </div>
          </div>
          <div class="col-4">
            <div class="border-end">
              <h6 class="text-success mb-1">Verified</h6>
              <small class="text-muted">Partner Status</small>
            </div>
          </div>
          <div class="col-4">
            <h6 class="text-info mb-1">Professional</h6>
            <small class="text-muted">Service Level</small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="col-lg-4">
    <!-- Quick Actions -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0">Quick Actions</h6>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to edit_admin_agency_broker_path(@agency_broker), class: "btn btn-primary" do %>
            <i class="bi bi-pencil me-2"></i>
            Edit Partner Details
          <% end %>

          <% if @agency_broker.email.present? %>
            <a href="mailto:<%= @agency_broker.email %>" class="btn btn-outline-success">
              <i class="bi bi-envelope me-2"></i>
              Send Email
            </a>
          <% end %>

          <% if @agency_broker.mobile.present? %>
            <a href="tel:<%= @agency_broker.mobile %>" class="btn btn-outline-info">
              <i class="bi bi-telephone me-2"></i>
              Call Partner
            </a>
          <% end %>

          <button class="btn btn-outline-warning" disabled>
            <i class="bi bi-file-earmark-text me-2"></i>
            Generate Report
          </button>

          <hr class="my-3">

          <%= link_to admin_agency_broker_path(@agency_broker),
              method: :delete,
              class: "btn btn-outline-danger",
              confirm: "Are you sure you want to delete this partner? This action cannot be undone.",
              data: {
                confirm: "Are you sure you want to delete #{[@agency_broker.first_name, @agency_broker.last_name].compact.join(' ')}? This action cannot be undone."
              } do %>
            <i class="bi bi-trash me-2"></i>
            Delete Partner
          <% end %>
        </div>
      </div>
    </div>

    <!-- Partner Statistics -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0">Partner Statistics</h6>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <div class="d-flex justify-content-between align-items-center mb-1">
            <small class="text-muted">Performance Rating</small>
            <small class="fw-semibold">★★★★☆</small>
          </div>
          <div class="progress" style="height: 4px;">
            <div class="progress-bar bg-warning" style="width: 80%;"></div>
          </div>
        </div>

        <div class="mb-3">
          <div class="d-flex justify-content-between align-items-center mb-1">
            <small class="text-muted">Partnership Strength</small>
            <small class="fw-semibold text-success">Strong</small>
          </div>
          <div class="progress" style="height: 4px;">
            <div class="progress-bar bg-success" style="width: 85%;"></div>
          </div>
        </div>

        <div class="small text-muted">
          <div class="d-flex justify-content-between mb-2">
            <span>Partnership Type:</span>
            <span class="fw-semibold"><%= @agency_broker.user_type.humanize %></span>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span>Active Since:</span>
            <span class="fw-semibold"><%= @agency_broker.created_at.strftime('%b %Y') %></span>
          </div>
          <div class="d-flex justify-content-between">
            <span>Last Updated:</span>
            <span class="fw-semibold"><%= @agency_broker.updated_at.strftime('%d %b %Y') %></span>
          </div>
        </div>

        <div class="small text-muted mt-3">
          <i class="bi bi-info-circle me-1"></i>
          Partner ID: #<%= @agency_broker.id %>
        </div>
      </div>
    </div>
  </div>
</div>