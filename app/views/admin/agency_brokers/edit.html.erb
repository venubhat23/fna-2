<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Edit Agency/Broker</h2>
    <p class="text-muted mb-0">Update <%= [@agency_broker.first_name, @agency_broker.last_name].compact.join(' ') %> information</p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to admin_agency_broker_path(@agency_broker), class: "btn btn-outline-info" do %>
      <i class="bi bi-eye me-1"></i>
      View Details
    <% end %>
    <%= link_to admin_agency_brokers_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Partners
    <% end %>
  </div>
</div>

<!-- Error Display -->
<% if @agency_broker.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <div class="d-flex align-items-center">
      <i class="bi bi-exclamation-triangle-fill me-2"></i>
      <div>
        <h6 class="mb-1"><%= pluralize(@agency_broker.errors.count, "error") %> prohibited this partner from being updated:</h6>
        <ul class="mb-0">
          <% @agency_broker.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<%= form_with model: [:admin, @agency_broker], local: true, class: "needs-validation", novalidate: true do |form| %>
  <div class="row">
    <div class="col-lg-8">
      <!-- Basic Information -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0">
          <div class="d-flex align-items-center">
            <i class="bi bi-person-circle me-2 text-primary"></i>
            <h5 class="mb-0">Basic Information</h5>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :first_name, class: "form-label" do %>
                First Name <span class="text-danger">*</span>
              <% end %>
              <%= form.text_field :first_name,
                  class: "form-control #{'is-invalid' if @agency_broker.errors[:first_name].any?}",
                  placeholder: "Enter first name",
                  required: true %>
              <% if @agency_broker.errors[:first_name].any? %>
                <div class="invalid-feedback">
                  <%= @agency_broker.errors[:first_name].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :last_name, class: "form-label" do %>
                Last Name <span class="text-danger">*</span>
              <% end %>
              <%= form.text_field :last_name,
                  class: "form-control #{'is-invalid' if @agency_broker.errors[:last_name].any?}",
                  placeholder: "Enter last name",
                  required: true %>
              <% if @agency_broker.errors[:last_name].any? %>
                <div class="invalid-feedback">
                  <%= @agency_broker.errors[:last_name].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :user_type, "Partner Type", class: "form-label" do %>
                Partner Type <span class="text-danger">*</span>
              <% end %>
              <%= form.select :user_type,
                  options_for_select([
                    ['Agent', 'agent'],
                    ['Affiliate', 'sub_agent']
                  ], @agency_broker.user_type),
                  { prompt: 'Select Partner Type' },
                  { class: "form-select #{'is-invalid' if @agency_broker.errors[:user_type].any?}", required: true } %>
              <% if @agency_broker.errors[:user_type].any? %>
                <div class="invalid-feedback">
                  <%= @agency_broker.errors[:user_type].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :role, "Role/Position", class: "form-label" %>
              <%= form.text_field :role,
                  class: "form-control #{'is-invalid' if @agency_broker.errors[:role].any?}",
                  placeholder: "e.g., Senior Agent, Regional Manager" %>
              <% if @agency_broker.errors[:role].any? %>
                <div class="invalid-feedback">
                  <%= @agency_broker.errors[:role].first %>
                </div>
              <% end %>
            </div>

            <div class="col-12 mb-3">
              <div class="form-check form-switch">
                <%= form.check_box :status, { class: "form-check-input" }, "true", "false" %>
                <%= form.label :status, "Active Status", class: "form-check-label" %>
              </div>
              <small class="form-text text-muted">Enable this partner for active business</small>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0">
          <div class="d-flex align-items-center">
            <i class="bi bi-telephone me-2 text-primary"></i>
            <h5 class="mb-0">Contact Information</h5>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :email, class: "form-label" do %>
                Email Address <span class="text-danger">*</span>
              <% end %>
              <%= form.email_field :email,
                  class: "form-control #{'is-invalid' if @agency_broker.errors[:email].any?}",
                  placeholder: "partner@example.com",
                  required: true %>
              <% if @agency_broker.errors[:email].any? %>
                <div class="invalid-feedback">
                  <%= @agency_broker.errors[:email].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :mobile, "Mobile Number", class: "form-label" %>
              <%= form.telephone_field :mobile,
                  class: "form-control #{'is-invalid' if @agency_broker.errors[:mobile].any?}",
                  placeholder: "Enter mobile number" %>
              <% if @agency_broker.errors[:mobile].any? %>
                <div class="invalid-feedback">
                  <%= @agency_broker.errors[:mobile].first %>
                </div>
              <% end %>
            </div>

            <div class="col-12 mb-3">
              <%= form.label :address, "Address", class: "form-label" %>
              <%= form.text_area :address,
                  class: "form-control #{'is-invalid' if @agency_broker.errors[:address].any?}",
                  rows: 3,
                  placeholder: "Enter complete address" %>
              <% if @agency_broker.errors[:address].any? %>
                <div class="invalid-feedback">
                  <%= @agency_broker.errors[:address].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :state, "State", class: "form-label" %>
              <%= form.text_field :state,
                  class: "form-control #{'is-invalid' if @agency_broker.errors[:state].any?}",
                  placeholder: "Enter state" %>
              <% if @agency_broker.errors[:state].any? %>
                <div class="invalid-feedback">
                  <%= @agency_broker.errors[:state].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :city, "City", class: "form-label" %>
              <%= form.text_field :city,
                  class: "form-control #{'is-invalid' if @agency_broker.errors[:city].any?}",
                  placeholder: "Enter city" %>
              <% if @agency_broker.errors[:city].any? %>
                <div class="invalid-feedback">
                  <%= @agency_broker.errors[:city].first %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Business Information -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0">
          <div class="d-flex align-items-center">
            <i class="bi bi-briefcase me-2 text-primary"></i>
            <h5 class="mb-0">Business Information</h5>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :pan_number, "PAN Number", class: "form-label" %>
              <%= form.text_field :pan_number,
                  class: "form-control #{'is-invalid' if @agency_broker.errors[:pan_number].any?}",
                  placeholder: "Enter PAN number" %>
              <% if @agency_broker.errors[:pan_number].any? %>
                <div class="invalid-feedback">
                  <%= @agency_broker.errors[:pan_number].first %>
                </div>
              <% end %>
              <small class="form-text text-muted">For business verification</small>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :gst_number, "GST Number", class: "form-label" %>
              <%= form.text_field :gst_number,
                  class: "form-control #{'is-invalid' if @agency_broker.errors[:gst_number].any?}",
                  placeholder: "Enter GST number" %>
              <% if @agency_broker.errors[:gst_number].any? %>
                <div class="invalid-feedback">
                  <%= @agency_broker.errors[:gst_number].first %>
                </div>
              <% end %>
              <small class="form-text text-muted">Optional - for registered businesses</small>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <%= link_to admin_agency_broker_path(@agency_broker),
                  method: :delete,
                  class: "btn btn-outline-danger",
                  confirm: "Are you sure you want to delete this partner? This action cannot be undone.",
                  data: {
                    confirm: "Are you sure you want to delete #{[@agency_broker.first_name, @agency_broker.last_name].compact.join(' ')}? This action cannot be undone."
                  } do %>
                <i class="bi bi-trash me-1"></i>
                Delete Partner
              <% end %>
            </div>
            <div class="d-flex gap-2">
              <%= link_to "Cancel", admin_agency_broker_path(@agency_broker), class: "btn btn-outline-secondary" %>
              <%= form.submit "Update Partner", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <!-- Partner Stats -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0">
          <h6 class="mb-0">
            <i class="bi bi-bar-chart me-2"></i>
            Partner Statistics
          </h6>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-6 mb-3">
              <div class="border-end">
                <h4 class="text-primary mb-1"><%= @agency_broker.user_type.humanize %></h4>
                <small class="text-muted">Partner Type</small>
              </div>
            </div>
            <div class="col-6 mb-3">
              <h4 class="text-success mb-1">
                <%= @agency_broker.status ? 'Active' : 'Inactive' %>
              </h4>
              <small class="text-muted">Current Status</small>
            </div>
          </div>

          <hr>

          <div class="small">
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">Partnership Since:</span>
              <span class="fw-semibold"><%= @agency_broker.created_at.strftime('%b %Y') %></span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">Last Updated:</span>
              <span class="fw-semibold"><%= @agency_broker.updated_at.strftime('%d %b %Y') %></span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">Partner ID:</span>
              <span class="fw-semibold">#<%= @agency_broker.id %></span>
            </div>
            <div class="d-flex justify-content-between">
              <span class="text-muted">Performance:</span>
              <span class="fw-semibold">Good ⭐⭐⭐⭐</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Partner Information -->
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent border-0">
          <h6 class="mb-0">
            <i class="bi bi-info-circle me-2"></i>
            Important Notes
          </h6>
        </div>
        <div class="card-body">
          <div class="small">
            <div class="alert alert-warning">
              <i class="bi bi-exclamation-triangle me-2"></i>
              <strong>Note:</strong> Changes to partner information will be reflected immediately in the system.
            </div>

            <div class="mb-3">
              <h6 class="text-primary">Email Changes</h6>
              <p class="mb-0 text-muted">
                Changing the email address will affect login credentials and system notifications.
              </p>
            </div>

            <div class="mb-3">
              <h6 class="text-primary">Status Changes</h6>
              <p class="mb-0 text-muted">
                Deactivating a partner will prevent them from accessing the system and creating new business.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Form validation
  const forms = document.querySelectorAll('.needs-validation');

  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }

      form.classList.add('was-validated');
    }, false);
  });
});
</script>