<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Agency & Brokers</h2>
    <p class="text-muted mb-0">Manage agency partners and insurance brokers</p>
  </div>
  <div>
    <%= link_to new_admin_agency_broker_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Add Agency/Broker
    <% end %>
  </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Total Partners</h6>
            <h4 class="mb-0"><%= @agency_brokers.count %></h4>
          </div>
          <div class="text-primary">
            <i class="bi bi-building fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Active Partners</h6>
            <h4 class="mb-0"><%= @agency_brokers.where(status: true).count %></h4>
          </div>
          <div class="text-success">
            <i class="bi bi-check-circle fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Agents</h6>
            <h4 class="mb-0"><%= @agency_brokers.where(user_type: 'agent').count %></h4>
          </div>
          <div class="text-info">
            <i class="bi bi-person-badge fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Affiliates</h6>
            <h4 class="mb-0"><%= @agency_brokers.where(user_type: 'sub_agent').count %></h4>
          </div>
          <div class="text-warning">
            <i class="bi bi-people fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Search and Filters -->
<div class="card border-0 shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: admin_agency_brokers_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-6">
        <%= form.text_field :search, placeholder: "Search by name, email, or mobile...", value: params[:search], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= form.select :user_type, options_for_select([
          ['All Types', ''],
          ['Agent', 'agent'],
          ['Affiliate', 'sub_agent']
        ], params[:user_type]), {}, { class: "form-select" } %>
      </div>
      <div class="col-md-3">
        <%= form.select :status, options_for_select([
          ['All Status', ''],
          ['Active', 'true'],
          ['Inactive', 'false']
        ], params[:status]), {}, { class: "form-select" } %>
      </div>
    <% end %>
  </div>
</div>

<!-- Agency/Brokers Table -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Agency Partners & Brokers</h5>
      <div class="d-flex gap-2">
        <div class="position-relative">
          <input type="text" class="form-control" placeholder="Search..." id="searchInput">
          <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-3"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @agency_brokers.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th class="border-0 fw-semibold">Partner Details</th>
              <th class="border-0 fw-semibold">Type</th>
              <th class="border-0 fw-semibold">Contact Info</th>
              <th class="border-0 fw-semibold">Business Info</th>
              <th class="border-0 fw-semibold">Status</th>
              <th class="border-0 fw-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @agency_brokers.each do |partner| %>
              <tr>
                <td class="align-middle">
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi <%= partner.user_type == 'agent' ? 'bi-person-badge' : 'bi-people' %> text-primary"></i>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= [partner.first_name, partner.last_name].compact.join(' ') %></h6>
                      <small class="text-muted">ID: #<%= partner.id %></small>
                    </div>
                  </div>
                </td>
                <td class="align-middle">
                  <span class="badge bg-<%=
                    case partner.user_type
                    when 'agent' then 'info'
                    when 'sub_agent' then 'warning'
                    else 'secondary'
                    end
                  %>-subtle text-<%=
                    case partner.user_type
                    when 'agent' then 'info'
                    when 'sub_agent' then 'warning'
                    else 'secondary'
                    end
                  %>">
                    <%= partner.user_type.humanize %>
                  </span>
                </td>
                <td class="align-middle">
                  <div>
                    <% if partner.email.present? %>
                      <div class="small">
                        <i class="bi bi-envelope text-muted me-1"></i>
                        <%= partner.email %>
                      </div>
                    <% end %>
                    <% if partner.mobile.present? %>
                      <div class="small">
                        <i class="bi bi-telephone text-muted me-1"></i>
                        <%= partner.mobile %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="align-middle">
                  <div class="small">
                    <% if partner.address.present? %>
                      <div class="text-truncate" style="max-width: 150px;" title="<%= partner.address %>">
                        <i class="bi bi-geo-alt text-muted me-1"></i>
                        <%= truncate(partner.address, length: 30) %>
                      </div>
                    <% end %>
                    <% if partner.pan_number.present? %>
                      <div>
                        <i class="bi bi-credit-card text-muted me-1"></i>
                        PAN: <%= partner.pan_number %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="align-middle">
                  <% if partner.status %>
                    <span class="badge bg-success-subtle text-success">
                      <i class="bi bi-check-circle me-1"></i>
                      Active
                    </span>
                  <% else %>
                    <span class="badge bg-danger-subtle text-danger">
                      <i class="bi bi-x-circle me-1"></i>
                      Inactive
                    </span>
                  <% end %>
                </td>
                <td class="align-middle">
                  <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to admin_agency_broker_path(partner), class: "dropdown-item" do %>
                          <i class="bi bi-eye me-2"></i>
                          View Details
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_admin_agency_broker_path(partner), class: "dropdown-item" do %>
                          <i class="bi bi-pencil me-2"></i>
                          Edit Partner
                        <% end %>
                      </li>
                      <li>
                        <a href="mailto:<%= partner.email %>" class="dropdown-item">
                          <i class="bi bi-envelope me-2"></i>
                          Send Email
                        </a>
                      </li>
                      <li>
                        <a href="tel:<%= partner.mobile %>" class="dropdown-item">
                          <i class="bi bi-telephone me-2"></i>
                          Call Partner
                        </a>
                      </li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to admin_agency_broker_path(partner), method: :delete,
                            class: "dropdown-item text-danger",
                            confirm: "Are you sure you want to delete this partner?",
                            data: {
                              confirm: "Are you sure you want to delete #{[partner.first_name, partner.last_name].compact.join(' ')}? This action cannot be undone."
                            } do %>
                          <i class="bi bi-trash me-2"></i>
                          Delete Partner
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) %>
        <div class="card-footer bg-transparent border-0">
          <%= paginate @agency_brokers %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-briefcase fs-1 text-muted"></i>
        </div>
        <h5 class="text-muted mb-3">No Agency Partners Found</h5>
        <p class="text-muted mb-4">Start by adding your first agency partner or insurance broker to expand your network.</p>
        <%= link_to "Add Agency/Broker", new_admin_agency_broker_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Search functionality
  const searchInput = document.getElementById('searchInput');
  const tableRows = document.querySelectorAll('tbody tr');

  searchInput?.addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();

    tableRows.forEach(row => {
      const partnerName = row.cells[0]?.textContent.toLowerCase() || '';
      const partnerType = row.cells[1]?.textContent.toLowerCase() || '';
      const contactInfo = row.cells[2]?.textContent.toLowerCase() || '';

      if (partnerName.includes(searchTerm) ||
          partnerType.includes(searchTerm) ||
          contactInfo.includes(searchTerm)) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  });
});
</script>