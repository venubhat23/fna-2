<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1"><%= "#{@user.first_name} #{@user.last_name}" %></h2>
    <p class="text-muted mb-0">User details and permissions</p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to edit_admin_settings_user_role_path(@user), class: "btn btn-primary" do %>
      <i class="bi bi-pencil me-1"></i>
      Edit User
    <% end %>
    <%= link_to admin_settings_user_roles_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Users
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <!-- Login Credentials (if recently created) -->
    <% if flash[:user_created] && @user.original_password.present? %>
      <div class="card border-primary shadow-sm mb-4">
        <div class="card-header bg-primary bg-opacity-10 border-0">
          <h5 class="mb-0 text-primary">
            <i class="bi bi-key me-2"></i>
            Login Credentials
          </h5>
        </div>
        <div class="card-body">
          <div class="alert alert-info mb-3">
            <i class="bi bi-info-circle me-2"></i>
            <strong>User created successfully!</strong> Please share these login credentials with the user.
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label text-muted">Username/Email</label>
              <div class="input-group">
                <input type="text" class="form-control fw-bold" value="<%= @user.email %>" readonly>
                <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('<%= @user.email %>')">
                  <i class="bi bi-copy"></i>
                </button>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label text-muted">Password</label>
              <div class="input-group">
                <input type="password" id="passwordField" class="form-control fw-bold" value="<%= @user.original_password %>" readonly>
                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">
                  <i class="bi bi-eye" id="passwordToggleIcon"></i>
                </button>
                <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('<%= @user.original_password %>')">
                  <i class="bi bi-copy"></i>
                </button>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-12">
              <div class="p-3 bg-light rounded">
                <h6 class="mb-2">Share these credentials with the user:</h6>
                <div class="small">
                  <strong>Login URL:</strong> <%= request.base_url %>/users/sign_in<br>
                  <strong>Username:</strong> <%= @user.email %><br>
                  <strong>Password:</strong> <span class="text-primary"><%= @user.original_password %></span>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-3">
            <div class="alert alert-warning small mb-0">
              <i class="bi bi-exclamation-triangle me-2"></i>
              <strong>Important:</strong> This information will not be shown again. Make sure to securely share these credentials with the user.
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Basic Information -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">Basic Information</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label text-muted">Full Name</label>
            <p class="fw-bold mb-0"><%= "#{@user.first_name} #{@user.last_name}" %></p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label text-muted">Email Address</label>
            <p class="fw-bold mb-0"><%= @user.email %></p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label text-muted">Phone Number</label>
            <p class="fw-bold mb-0"><%= @user.mobile || 'Not provided' %></p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label text-muted">Role</label>
            <p class="fw-bold mb-0">
              <span class="badge bg-secondary-subtle text-secondary px-3 py-2">
                <%= @user.role_name || 'No Role Assigned' %>
              </span>
            </p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label text-muted">User Type</label>
            <p class="fw-bold mb-0">
              <span class="badge bg-<%= @user.user_type == 'admin' ? 'primary' : 'info' %>-subtle text-<%= @user.user_type == 'admin' ? 'primary' : 'info' %> px-3 py-2">
                <i class="bi bi-<%= @user.user_type == 'admin' ? 'shield-check' : 'person' %> me-1"></i>
                <%= @user.user_type.humanize %>
              </span>
            </p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label text-muted">Status</label>
            <p class="fw-bold mb-0">
              <span class="badge bg-<%= @user.status? ? 'success' : 'secondary' %>-subtle text-<%= @user.status? ? 'success' : 'secondary' %> px-3 py-2">
                <i class="bi bi-<%= @user.status? ? 'check-circle' : 'pause-circle' %> me-1"></i>
                <%= @user.status? ? 'Active' : 'Inactive' %>
              </span>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar Permissions -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">Sidebar Permissions</h5>
      </div>
      <div class="card-body">
        <% user_permissions = @user.sidebar_permissions.is_a?(String) ? JSON.parse(@user.sidebar_permissions || '[]') : (@user.sidebar_permissions || []) %>

        <% if user_permissions.any? %>
          <% sidebar_options = {
            'Main Menu' => [
              { key: 'dashboard', name: 'Dashboard' },
              { key: 'customers', name: 'Customers' },
              { key: 'sub_agents', name: 'Affiliate' },
              { key: 'distributors', name: 'Ambassadors' },
              { key: 'investors', name: 'Investors' }
            ],
            'Payouts & Commission' => [
              { key: 'affiliate_payouts', name: 'Affiliate Payouts' },
              { key: 'distributor_payouts', name: 'Ambassador Payouts' },
              { key: 'payouts', name: 'Payout' }
            ],
            'Business Partners' => [
              { key: 'brokers', name: 'Brokers' },
              { key: 'agency_codes', name: 'Agency Code' },
              { key: 'leads', name: 'Leads' }
            ],
            'Insurance Products' => [
              { key: 'life_insurance', name: 'Life Insurance' },
              { key: 'health_insurance', name: 'Health Insurance' },
              { key: 'motor_insurance', name: 'Motor Insurance' },
              { key: 'other_insurance', name: 'General Insurance' }
            ],
            'Reports & Analytics' => [
              { key: 'commission_report', name: 'Commission Report' },
              { key: 'expired_insurance', name: 'Expired Insurance' },
              { key: 'payment_due', name: 'Payment Due' },
              { key: 'upcoming_renewal', name: 'Upcoming Renewal' },
              { key: 'upcoming_payment', name: 'Upcoming Payment' },
              { key: 'leads_report', name: 'Leads Report' },
              { key: 'session_report', name: 'Session Report' }
            ],
            'Management' => [
              { key: 'client_requests', name: 'Client Requests' },
              { key: 'insurance_companies', name: 'Companies' },
              { key: 'agency_brokers', name: 'Agency/Broker' },
              { key: 'banners', name: 'Banner Management' },
              { key: 'imports', name: 'Imports' },
              { key: 'roles_permissions', name: 'Roles & Permissions' }
            ],
            'Invoice' => [
              { key: 'invoices', name: 'Invoices' }
            ],
            'Settings' => [
              { key: 'user_roles', name: 'User Roles' },
              { key: 'system_settings', name: 'System Settings' }
            ]
          } %>

          <div class="row">
            <% sidebar_options.each do |section_name, options| %>
              <% section_permissions = options.select { |opt| user_permissions.include?(opt[:key]) } %>
              <% if section_permissions.any? %>
                <div class="col-lg-6 mb-4">
                  <div class="card h-100 border-success">
                    <div class="card-header bg-success bg-opacity-10">
                      <h6 class="mb-0 text-success">
                        <i class="bi bi-check-circle me-2"></i>
                        <%= section_name %>
                      </h6>
                    </div>
                    <div class="card-body">
                      <% section_permissions.each do |permission| %>
                        <div class="d-flex align-items-center mb-2">
                          <i class="bi bi-check text-success me-2"></i>
                          <span><%= permission[:name] %></span>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-4">
            <i class="bi bi-shield-x fs-1 text-muted d-block mb-3"></i>
            <h6 class="text-muted">No Permissions Assigned</h6>
            <p class="text-muted mb-3">This user has no sidebar permissions configured.</p>
            <%= link_to edit_admin_settings_user_role_path(@user), class: "btn btn-primary btn-sm" do %>
              <i class="bi bi-pencil me-1"></i>
              Assign Permissions
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <!-- Account Summary -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0">Account Summary</h6>
      </div>
      <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <span class="text-muted">User ID:</span>
          <span class="fw-bold">#<%= @user.id %></span>
        </div>
        <div class="d-flex align-items-center justify-content-between mb-3">
          <span class="text-muted">Created:</span>
          <span class="fw-bold"><%= @user.created_at.strftime("%b %d, %Y") %></span>
        </div>
        <div class="d-flex align-items-center justify-content-between mb-3">
          <span class="text-muted">Last Updated:</span>
          <span class="fw-bold"><%= @user.updated_at.strftime("%b %d, %Y") %></span>
        </div>
        <div class="d-flex align-items-center justify-content-between">
          <span class="text-muted">Account Age:</span>
          <span class="fw-bold"><%= time_ago_in_words(@user.created_at) %></span>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0">Quick Actions</h6>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to toggle_status_admin_settings_user_role_path(@user),
              method: :patch,
              class: "btn btn-outline-#{@user.status? ? 'warning' : 'success'}",
              data: {
                confirm: "Are you sure you want to #{@user.status? ? 'deactivate' : 'activate'} this user?",
                turbo_method: :patch
              } do %>
            <i class="bi bi-#{@user.status? ? 'pause-circle' : 'play-circle'} me-1"></i>
            <%= @user.status? ? 'Deactivate User' : 'Activate User' %>
          <% end %>

          <%= button_to admin_settings_user_role_path(@user),
              method: :delete,
              class: "btn btn-outline-danger",
              data: {
                confirm: "Are you sure you want to delete this user? This action cannot be undone."
              } do %>
            <i class="bi bi-trash me-1"></i>
            Delete User
          <% end %>
        </div>
      </div>
    </div>

    <!-- Permission Summary -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0">Permission Summary</h6>
      </div>
      <div class="card-body">
        <% user_permissions = @user.sidebar_permissions.is_a?(String) ? JSON.parse(@user.sidebar_permissions || '[]') : (@user.sidebar_permissions || []) %>
        <div class="text-center">
          <h3 class="text-primary mb-1"><%= user_permissions.count %></h3>
          <p class="text-muted mb-0">Total Permissions</p>
        </div>

        <% if user_permissions.count > 0 %>
          <hr>
          <div class="small text-muted">
            <strong>Permission Keys:</strong><br>
            <% user_permissions.each_with_index do |permission, index| %>
              <span class="badge bg-light text-dark me-1 mb-1"><%= permission %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
function togglePassword() {
  const passwordField = document.getElementById('passwordField');
  const passwordToggleIcon = document.getElementById('passwordToggleIcon');

  if (passwordField.type === 'password') {
    passwordField.type = 'text';
    passwordToggleIcon.classList.remove('bi-eye');
    passwordToggleIcon.classList.add('bi-eye-slash');
  } else {
    passwordField.type = 'password';
    passwordToggleIcon.classList.remove('bi-eye-slash');
    passwordToggleIcon.classList.add('bi-eye');
  }
}

function copyToClipboard(text) {
  if (navigator.clipboard && window.isSecureContext) {
    navigator.clipboard.writeText(text).then(function() {
      showToast('Copied to clipboard!', 'success');
    }, function(err) {
      console.error('Could not copy text: ', err);
      showToast('Failed to copy to clipboard', 'error');
    });
  } else {
    // Fallback for older browsers
    const textArea = document.createElement('textarea');
    textArea.value = text;
    textArea.style.position = 'fixed';
    textArea.style.left = '-999999px';
    textArea.style.top = '-999999px';
    document.body.appendChild(textArea);
    textArea.focus();
    textArea.select();

    try {
      const successful = document.execCommand('copy');
      showToast(successful ? 'Copied to clipboard!' : 'Failed to copy to clipboard', successful ? 'success' : 'error');
    } catch (err) {
      console.error('Fallback: Oops, unable to copy', err);
      showToast('Failed to copy to clipboard', 'error');
    }

    document.body.removeChild(textArea);
  }
}

function showToast(message, type = 'success') {
  // Create toast element
  const toast = document.createElement('div');
  toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} position-fixed`;
  toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; opacity: 0; transition: opacity 0.3s ease;';
  toast.innerHTML = `
    <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
    ${message}
  `;

  document.body.appendChild(toast);

  // Fade in
  setTimeout(() => { toast.style.opacity = '1'; }, 10);

  // Auto remove after 3 seconds
  setTimeout(() => {
    toast.style.opacity = '0';
    setTimeout(() => {
      if (toast.parentNode) {
        document.body.removeChild(toast);
      }
    }, 300);
  }, 3000);
}
</script>