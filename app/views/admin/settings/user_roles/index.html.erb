<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">User Management</h2>
    <p class="text-muted mb-0">Manage system users and their permissions</p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to new_admin_settings_user_role_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Create User
    <% end %>
  </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Users</h6>
            <h3 class="mb-0 text-primary"><%= number_with_delimiter(@users.count) %></h3>
          </div>
          <div class="bg-primary bg-opacity-10 rounded p-3">
            <i class="bi bi-people text-primary fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Active Users</h6>
            <h3 class="mb-0 text-success"><%= number_with_delimiter(@users.select(&:status).count) %></h3>
          </div>
          <div class="bg-success bg-opacity-10 rounded p-3">
            <i class="bi bi-check-circle text-success fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Admin Users</h6>
            <h3 class="mb-0 text-info"><%= number_with_delimiter(@users.select { |u| u.user_type == 'admin' }.count) %></h3>
          </div>
          <div class="bg-info bg-opacity-10 rounded p-3">
            <i class="bi bi-shield-check text-info fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Agent Users</h6>
            <h3 class="mb-0 text-warning"><%= number_with_delimiter(@users.select { |u| u.user_type == 'agent' }.count) %></h3>
          </div>
          <div class="bg-warning bg-opacity-10 rounded p-3">
            <i class="bi bi-person text-warning fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filters and Search -->
<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: admin_settings_user_roles_path, method: :get, local: true, class: "d-flex flex-wrap gap-3 align-items-end", id: "search_form" do |form| %>
      <!-- Search -->
      <div class="flex-grow-1 min-width-250">
        <%= form.text_field :search, placeholder: "Search by name or email...",
                           value: params[:search],
                           class: "form-control",
                           id: "search_input" %>
      </div>

      <!-- Actions -->
      <div class="d-flex gap-2">
        <%= link_to "Clear", admin_settings_user_roles_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Users List -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <h5 class="mb-0">Users List</h5>
  </div>
  <div class="card-body p-0">
    <% if @users.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="bg-light">
            <tr>
              <th class="border-0">User Details</th>
              <th class="border-0">Login Credentials</th>
              <th class="border-0">Role</th>
              <th class="border-0">User Type</th>
              <th class="border-0">Sidebar Permissions</th>
              <th class="border-0">Status</th>
              <th class="border-0">Created</th>
              <th class="border-0">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                      <i class="bi bi-person text-primary"></i>
                    </div>
                    <div>
                      <h6 class="mb-1"><%= "#{user.first_name} #{user.last_name}" %></h6>
                      <small class="text-muted">ID: <%= user.id %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <div>
                    <div class="mb-2">
                      <span class="badge bg-light text-dark border">
                        <i class="bi bi-envelope me-1"></i>
                        <%= user.email %>
                      </span>
                    </div>
                    <div class="mb-1">
                      <small class="text-success">
                        <i class="bi bi-person-check me-1"></i>Username: <%= user.email %>
                      </small>
                    </div>
                    <div class="mb-1">
                      <small class="text-muted">
                        <i class="bi bi-lock me-1"></i>Password: Encrypted
                      </small>
                    </div>
                    <div>
                      <small class="text-muted">
                        <i class="bi bi-telephone me-1"></i><%= user.mobile %>
                      </small>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="badge bg-secondary-subtle text-secondary">
                    <%= user.role_name || 'No Role' %>
                  </span>
                </td>
                <td>
                  <span class="badge bg-<%= user.user_type == 'admin' ? 'primary' : 'info' %>-subtle text-<%= user.user_type == 'admin' ? 'primary' : 'info' %>">
                    <i class="bi bi-<%= user.user_type == 'admin' ? 'shield-check' : 'person' %> me-1"></i>
                    <%= user.user_type.humanize %>
                  </span>
                </td>
                <td>
                  <% if user.email == 'admin@insurebook.com' %>
                    <span class="badge bg-success-subtle text-success">
                      <i class="bi bi-infinity me-1"></i>
                      Full Access
                    </span>
                  <% else %>
                    <% permissions_count = user.sidebar_permissions_array.count %>
                    <span class="badge bg-primary-subtle text-primary"
                          data-bs-toggle="tooltip"
                          title="<%= user.sidebar_permissions_array.join(', ') %>">
                      <i class="bi bi-list-check me-1"></i>
                      <%= permissions_count %> <%= permissions_count == 1 ? 'section' : 'sections' %>
                    </span>
                  <% end %>
                </td>
                <td>
                  <span class="badge bg-<%= user.status? ? 'success' : 'secondary' %>-subtle text-<%= user.status? ? 'success' : 'secondary' %>">
                    <i class="bi bi-<%= user.status? ? 'check-circle' : 'pause-circle' %> me-1"></i>
                    <%= user.status? ? 'Active' : 'Inactive' %>
                  </span>
                </td>
                <td>
                  <div>
                    <div><%= user.created_at.strftime("%b %d, %Y") %></div>
                    <small class="text-muted"><%= time_ago_in_words(user.created_at) %> ago</small>
                  </div>
                </td>
                <td>
                  <div class="d-flex gap-1">
                    <%= link_to admin_settings_user_role_path(user), class: "btn btn-sm btn-outline-primary", title: "View Details" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_settings_user_role_path(user), class: "btn btn-sm btn-outline-warning", title: "Edit User" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= link_to toggle_status_admin_settings_user_role_path(user),
                        method: :patch,
                        class: "btn btn-sm btn-outline-#{user.status? ? 'secondary' : 'success'}",
                        title: user.status? ? 'Deactivate' : 'Activate',
                        data: {
                          confirm: "Are you sure you want to #{user.status? ? 'deactivate' : 'activate'} this user?",
                          turbo_method: :patch
                        } do %>
                      <i class="bi bi-#{user.status? ? 'pause-circle' : 'play-circle'}"></i>
                    <% end %>
                    <%= button_to admin_settings_user_role_path(user),
                        method: :delete,
                        class: "btn btn-sm btn-outline-danger",
                        title: "Delete User",
                        data: {
                          confirm: "Are you sure you want to delete this user? This action cannot be undone."
                        },
                        form: { style: "display: inline;" } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="bi bi-people fs-1 text-muted d-block mb-3"></i>
        <h5 class="text-muted">No users found</h5>
        <p class="text-muted mb-3">
          <% if params[:search].present? %>
            No users match your search criteria.
            <%= link_to "View all users", admin_settings_user_roles_path, class: "text-decoration-none" %>.
          <% else %>
            Start by creating your first user to manage system access.
          <% end %>
        </p>
        <%= link_to new_admin_settings_user_role_path, class: "btn btn-primary" do %>
          <i class="bi bi-plus-lg me-1"></i>
          <%= params[:search].present? ? "Create User" : "Create First User" %>
        <% end %>
      </div>
    <% end %>

    <!-- Conditional Pagination -->
    <%= render 'shared/pagination', records: @users %>

  </div>
</div>

<style>
.min-width-250 {
  min-width: 250px;
}

.btn-xs {
  padding: 0.1rem 0.3rem;
  font-size: 0.7rem;
  line-height: 1.2;
  border-radius: 0.2rem;
}

.password-field {
  font-family: 'Courier New', monospace;
  font-weight: bold;
  color: #0d6efd;
  min-width: 80px;
  display: inline-block;
}

.copy-success {
  background-color: #28a745 !important;
  border-color: #28a745 !important;
  color: white !important;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('search_input');
  const searchForm = document.getElementById('search_form');
  let searchTimeout;

  if (searchInput) {
    searchInput.addEventListener('input', function() {
      clearTimeout(searchTimeout);
      const searchValue = this.value;

      searchTimeout = setTimeout(() => {
        if (searchValue.length >= 3 || searchValue.length === 0) {
          searchForm.submit();
        }
      }, 500);
    });
  }

  // Initialize tooltips for sidebar permissions
  const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
  const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
    return new bootstrap.Tooltip(tooltipTriggerEl);
  });

  // Password toggle functionality
  document.querySelectorAll('.toggle-password-btn').forEach(button => {
    button.addEventListener('click', function() {
      const targetId = this.dataset.target;
      const password = this.dataset.password;
      const passwordField = document.getElementById(targetId);
      const icon = this.querySelector('i');

      if (passwordField.textContent.includes('*')) {
        // Show password
        passwordField.textContent = password;
        icon.className = 'bi bi-eye-slash';
        this.title = 'Hide Password';
      } else {
        // Hide password
        passwordField.textContent = '*'.repeat(password.length);
        icon.className = 'bi bi-eye';
        this.title = 'Show Password';
      }
    });
  });

  // Copy password functionality
  document.querySelectorAll('.copy-password-btn').forEach(button => {
    button.addEventListener('click', function() {
      const password = this.dataset.password;
      const originalIcon = this.querySelector('i');
      const originalClass = originalIcon.className;

      // Copy to clipboard
      navigator.clipboard.writeText(password).then(() => {
        // Visual feedback
        this.classList.add('copy-success');
        originalIcon.className = 'bi bi-check';
        this.title = 'Copied!';

        // Reset after 2 seconds
        setTimeout(() => {
          this.classList.remove('copy-success');
          originalIcon.className = originalClass;
          this.title = 'Copy Password';
        }, 2000);
      }).catch(err => {
        console.error('Failed to copy password: ', err);
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = password;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);

        // Visual feedback
        this.classList.add('copy-success');
        originalIcon.className = 'bi bi-check';
        this.title = 'Copied!';

        setTimeout(() => {
          this.classList.remove('copy-success');
          originalIcon.className = originalClass;
          this.title = 'Copy Password';
        }, 2000);
      });
    });
  });
});
</script>