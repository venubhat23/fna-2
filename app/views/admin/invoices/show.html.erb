<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Invoice Details</h2>
    <p class="text-muted mb-0">Invoice #<%= @invoice.invoice_number %></p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to "Back to Invoices", admin_invoices_path, class: "btn btn-outline-secondary" %>
    <% if @invoice.status != 'paid' %>
      <button class="btn btn-success">Mark as Paid</button>
    <% end %>
  </div>
</div>

<div class="card border-0 shadow-sm">
  <div class="card-header bg-light">
    <h5 class="mb-0">Invoice Information</h5>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <h6 class="text-muted">Customer</h6>
        <p class="fw-bold"><%= @invoice.customer.display_name %></p>
        <p class="text-muted mb-3"><%= @invoice.customer.email if @invoice.customer.email.present? %></p>
      </div>
      <div class="col-md-6">
        <h6 class="text-muted">Invoice Details</h6>
        <p class="mb-1">
          <span class="text-muted">Invoice Date:</span>
          <span class="fw-bold"><%= @invoice.invoice_date&.strftime("%d %b %Y") %></span>
        </p>
        <p class="mb-1">
          <span class="text-muted">Due Date:</span>
          <span class="fw-bold"><%= @invoice.due_date&.strftime("%d %b %Y") %></span>
        </p>
        <p class="mb-1">
          <span class="text-muted">Status:</span>
          <span class="badge bg-<%= @invoice.status == 'paid' ? 'success' : 'warning' %>">
            <%= @invoice.status&.humanize || 'Draft' %>
          </span>
        </p>
      </div>
    </div>

    <% if @invoice.notes.present? %>
      <div class="mt-3">
        <h6 class="text-muted">Notes</h6>
        <p><%= @invoice.notes %></p>
      </div>
    <% end %>
  </div>
</div>

<div class="card border-0 shadow-sm mt-4">
  <div class="card-header bg-light">
    <h5 class="mb-0">Invoice Items</h5>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table mb-0">
        <thead class="table-light">
          <tr>
            <th>Description</th>
            <th class="text-end">Quantity</th>
            <th class="text-end">Unit Price</th>
            <th class="text-end">Amount</th>
          </tr>
        </thead>
        <tbody>
          <% @invoice_items.each do |item| %>
            <tr>
              <td><%= item.description %></td>
              <td class="text-end"><%= item.quantity %></td>
              <td class="text-end">₹<%= number_with_delimiter(item.unit_price) %></td>
              <td class="text-end">₹<%= number_with_delimiter(item.total_amount) %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="table-light">
          <tr>
            <th colspan="3" class="text-end">Total Amount:</th>
            <th class="text-end">₹<%= number_with_delimiter(@invoice.total_amount) %></th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>