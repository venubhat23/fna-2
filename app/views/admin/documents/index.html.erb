<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1"><%= @page_title %></h2>
    <p class="text-muted mb-0">
      <% if @documentable %>
        Manage documents for this <%= @documentable.class.name.downcase %>
      <% else %>
        Manage all uploaded documents in the system
      <% end %>
    </p>
  </div>
  <div class="d-flex gap-2">
    <% if @documentable %>
      <%= link_to new_polymorphic_path([:admin, @documentable, :document]), class: "btn btn-primary" do %>
        <i class="bi bi-cloud-upload me-1"></i>
        Upload Document
      <% end %>
      <%= link_to polymorphic_path([:admin, @documentable]), class: "btn btn-outline-secondary" do %>
        <i class="bi bi-arrow-left me-1"></i>
        Back to <%= @documentable.class.name %>
      <% end %>
    <% else %>
      <%= link_to new_admin_document_path, class: "btn btn-primary" do %>
        <i class="bi bi-cloud-upload me-1"></i>
        Upload Document
      <% end %>
    <% end %>
  </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Documents</h6>
            <h3 class="mb-0 text-primary"><%= @total_documents %></h3>
          </div>
          <div class="bg-primary bg-opacity-10 rounded p-3">
            <i class="bi bi-files text-primary fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% @document_types_count.each_with_index do |(type, count), index| %>
    <% next if index >= 2 %>
    <div class="col-xl-4 col-md-6 mb-3">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h6 class="text-muted mb-2"><%= type.humanize %></h6>
              <h3 class="mb-0 text-success"><%= count %></h3>
            </div>
            <div class="bg-success bg-opacity-10 rounded p-3">
              <i class="bi bi-file-earmark text-success fs-4"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Filters -->
<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: request.path, method: :get, local: true, class: "d-flex flex-wrap gap-3 align-items-end" do |form| %>
      <!-- Document Type Filter -->
      <div>
        <%= form.select :document_type,
                       options_for_select([
                         ['All Types', ''],
                         *Document::DOCUMENT_TYPES.map { |type| [type.humanize, type] }
                       ], params[:document_type]),
                       {},
                       { class: "form-select" } %>
      </div>

      <!-- Actions -->
      <div class="d-flex gap-2">
        <%= form.submit "Filter", class: "btn btn-outline-primary" %>
        <%= link_to "Clear", request.path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Documents Table -->
<div class="card shadow-sm">
  <div class="card-body">
    <% if @documents.any? %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>File</th>
              <th>Title</th>
              <th>Type</th>
              <% unless @documentable %>
                <th>Linked To</th>
              <% end %>
              <th>Size</th>
              <th>Uploaded By</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @documents.each do |document| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="me-3">
                      <% case document.file_extension %>
                      <% when '.pdf' %>
                        <i class="bi bi-file-pdf text-danger fs-3"></i>
                      <% when '.jpg', '.jpeg' %>
                        <i class="bi bi-file-image text-primary fs-3"></i>
                      <% when '.png' %>
                        <i class="bi bi-file-image text-info fs-3"></i>
                      <% when '.doc', '.docx' %>
                        <i class="bi bi-file-word text-primary fs-3"></i>
                      <% else %>
                        <i class="bi bi-file text-secondary fs-3"></i>
                      <% end %>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= document.file_name %></h6>
                      <small class="text-muted"><%= document.human_file_type %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <div>
                    <strong><%= document.title %></strong>
                    <% if document.description.present? %>
                      <br><small class="text-muted"><%= truncate(document.description, length: 50) %></small>
                    <% end %>
                  </div>
                </td>
                <td>
                  <span class="badge bg-info"><%= document.document_type.humanize %></span>
                </td>
                <% unless @documentable %>
                  <td>
                    <% if document.documentable %>
                      <div>
                        <strong><%= document.documentable.class.name %></strong><br>
                        <small class="text-muted">
                          <% if document.documentable.respond_to?(:display_name) %>
                            <%= document.documentable.display_name %>
                          <% elsif document.documentable.respond_to?(:name) %>
                            <%= document.documentable.name %>
                          <% else %>
                            ID: <%= document.documentable.id %>
                          <% end %>
                        </small>
                      </div>
                    <% else %>
                      <span class="text-muted">No link</span>
                    <% end %>
                  </td>
                <% end %>
                <td>
                  <span class="badge bg-light text-dark"><%= document.file_size_mb %> MB</span>
                </td>
                <td>
                  <small class="text-muted"><%= document.uploaded_by %></small>
                </td>
                <td>
                  <small class="text-muted">
                    <%= time_ago_in_words(document.created_at) %> ago<br>
                    <%= document.created_at.strftime("%d %b %Y") %>
                  </small>
                </td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu">
                      <li><%= link_to "View", admin_document_path(document), class: "dropdown-item" %></li>
                      <% if document.downloadable? %>
                        <li><%= link_to "Download", download_admin_document_path(document), class: "dropdown-item" %></li>
                      <% end %>
                      <li><%= link_to "Edit", edit_admin_document_path(document), class: "dropdown-item" %></li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to "#",
                                   class: "dropdown-item text-danger delete-document-btn",
                                   data: {
                                     "document-id": document.id,
                                     "document-name": document.title,
                                     "delete-url": admin_document_path(document),
                                     "return-to-record": @documentable.present? ? 'true' : 'false'
                                   } do %>
                          <i class="bi bi-trash text-danger me-2"></i>Delete
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @documents.respond_to?(:total_pages) && @documents.total_pages > 1 %>
        <div class="card-footer bg-transparent border-0">
          <div class="d-flex justify-content-center">
            <%= paginate @documents %>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-files display-1 text-muted"></i>
        </div>
        <h5 class="mb-3">No Documents Found</h5>
        <p class="text-muted mb-4">
          <% if params[:document_type].present? %>
            No documents match your current filters. Try adjusting your criteria.
          <% else %>
            Start by uploading your first document.
          <% end %>
        </p>
        <% if @documentable %>
          <%= link_to new_polymorphic_path([:admin, @documentable, :document]), class: "btn btn-primary" do %>
            <i class="bi bi-cloud-upload me-1"></i>
            Upload First Document
          <% end %>
        <% else %>
          <%= link_to new_admin_document_path, class: "btn btn-primary" do %>
            <i class="bi bi-cloud-upload me-1"></i>
            Upload First Document
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Delete confirmation functionality
  const deleteButtons = document.querySelectorAll('.delete-document-btn');
  deleteButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();

      const documentId = this.dataset.documentId;
      const documentName = this.dataset.documentName;
      const deleteUrl = this.dataset.deleteUrl;
      const returnToRecord = this.dataset.returnToRecord;

      showDeleteConfirmation(documentName, deleteUrl, returnToRecord);
    });
  });

  function showDeleteConfirmation(documentName, deleteUrl, returnToRecord) {
    // Create modal HTML
    const modalHtml = `
      <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header border-bottom-0">
              <h5 class="modal-title text-danger" id="deleteConfirmationModalLabel">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Delete Document
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
              <div class="mb-4">
                <i class="bi bi-trash text-danger" style="font-size: 3rem;"></i>
              </div>
              <h6 class="mb-3">Are you sure you want to delete this document?</h6>
              <p class="text-muted mb-0">
                <strong>${documentName}</strong> will be permanently removed from the system.
              </p>
              <p class="text-danger small mt-2 mb-0">
                <i class="bi bi-exclamation-circle me-1"></i>
                This action cannot be undone.
              </p>
            </div>
            <div class="modal-footer border-top-0 justify-content-center">
              <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                <i class="bi bi-x-lg me-1"></i>Cancel
              </button>
              <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                <i class="bi bi-trash me-1"></i>Delete Document
              </button>
            </div>
          </div>
        </div>
      </div>
    `;

    // Remove any existing modal
    const existingModal = document.getElementById('deleteConfirmationModal');
    if (existingModal) {
      existingModal.remove();
    }

    // Add modal to body
    document.body.insertAdjacentHTML('beforeend', modalHtml);

    // Show modal
    const modal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
    modal.show();

    // Handle confirmation
    document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
      // Create and submit delete form
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = deleteUrl;

      // Add CSRF token
      const csrfToken = document.querySelector('meta[name="csrf-token"]');
      if (csrfToken) {
        const csrfInput = document.createElement('input');
        csrfInput.type = 'hidden';
        csrfInput.name = 'authenticity_token';
        csrfInput.value = csrfToken.getAttribute('content');
        form.appendChild(csrfInput);
      }

      // Add method override for DELETE
      const methodInput = document.createElement('input');
      methodInput.type = 'hidden';
      methodInput.name = '_method';
      methodInput.value = 'DELETE';
      form.appendChild(methodInput);

      // Add return_to_record param if needed
      if (returnToRecord === 'true') {
        const returnInput = document.createElement('input');
        returnInput.type = 'hidden';
        returnInput.name = 'return_to_record';
        returnInput.value = 'true';
        form.appendChild(returnInput);
      }

      document.body.appendChild(form);
      form.submit();

      modal.hide();
    });

    // Clean up modal when hidden
    document.getElementById('deleteConfirmationModal').addEventListener('hidden.bs.modal', function () {
      this.remove();
    });
  }
});
</script>