<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Vendor Management</h2>
    <p class="text-muted mb-0">Manage your vendor relationships and partnerships</p>
  </div>
  <div class="d-flex gap-2 align-items-center">
    <%= link_to new_admin_vendor_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Add New Vendor
    <% end %>
  </div>
</div>

<!-- Vendor Statistics Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-3">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Total Vendors</h6>
            <h5 class="mb-0"><%= @vendors.count %></h5>
          </div>
          <div class="text-primary">
            <i class="bi bi-people fs-3"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-3">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Active Vendors</h6>
            <h5 class="mb-0"><%= @vendors.active.count %></h5>
          </div>
          <div class="text-success">
            <i class="bi bi-check-circle fs-3"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-3">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Total Purchases</h6>
            <h5 class="mb-0">₹<%= number_with_delimiter(@vendors.sum(&:total_purchases).to_i) %></h5>
          </div>
          <div class="text-info">
            <i class="bi bi-cart fs-3"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-3">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Outstanding</h6>
            <h5 class="mb-0">₹<%= number_with_delimiter(@vendors.sum(&:outstanding_balance).to_i) %></h5>
          </div>
          <div class="text-warning">
            <i class="bi bi-exclamation-triangle fs-3"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Vendors Table -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Vendor List</h5>
      <div class="d-flex gap-2">
        <!-- Filters -->
        <%= form_with url: admin_vendors_path, method: :get, local: true, class: "d-flex gap-2 align-items-center" do |form| %>
          <%= form.select :status,
              options_for_select([
                ['All Status', ''],
                ['Active', 'true'],
                ['Inactive', 'false']
              ], params[:status]),
              {},
              {
                class: "form-select",
                style: "width: 150px;",
                onchange: "this.form.submit();"
              } %>

          <!-- Search Input -->
          <div class="position-relative">
            <%= form.text_field :search,
                value: params[:search],
                class: "form-control",
                placeholder: "Search vendors...",
                id: "searchInput",
                style: "width: 250px;" %>
            <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-3"></i>
          </div>

          <!-- Search Button (hidden, form submits automatically) -->
          <%= form.submit "Search", class: "btn btn-outline-primary d-none" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @vendors.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th class="border-0 fw-semibold">Vendor Details</th>
              <th class="border-0 fw-semibold">Contact Info</th>
              <th class="border-0 fw-semibold">Payment Type</th>
              <th class="border-0 fw-semibold">Purchase Summary</th>
              <th class="border-0 fw-semibold">Outstanding Balance</th>
              <th class="border-0 fw-semibold">Status</th>
              <th class="border-0 fw-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @vendors.each do |vendor| %>
              <tr>
                <td class="align-middle">
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-building text-primary"></i>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= vendor.name %></h6>
                      <small class="text-muted">Added <%= vendor.created_at.strftime("%d %b %Y") %></small>
                    </div>
                  </div>
                </td>
                <td class="align-middle">
                  <div>
                    <% if vendor.phone.present? %>
                      <div class="mb-1">
                        <i class="bi bi-telephone me-1 text-muted"></i>
                        <%= vendor.phone %>
                      </div>
                    <% end %>
                    <% if vendor.email.present? %>
                      <div>
                        <i class="bi bi-envelope me-1 text-muted"></i>
                        <small class="text-muted"><%= vendor.email %></small>
                      </div>
                    <% else %>
                      <small class="text-muted">No contact info</small>
                    <% end %>
                  </div>
                </td>
                <td class="align-middle">
                  <span class="badge <%= vendor.payment_type_badge_class %> px-3 py-2">
                    <i class="bi bi-<%= vendor.payment_type == 'Cash' ? 'cash-coin' : 'credit-card' %> me-1"></i>
                    <%= vendor.payment_type %>
                  </span>
                </td>
                <td class="align-middle">
                  <div>
                    <div class="fw-medium text-success">₹<%= number_with_delimiter(vendor.total_purchases.to_i) %></div>
                    <small class="text-muted">
                      <%= pluralize(vendor.vendor_purchases.count, 'purchase') %>
                    </small>
                  </div>
                </td>
                <td class="align-middle">
                  <div class="fw-medium text-<%= vendor.outstanding_balance > 0 ? 'danger' : 'success' %>">
                    ₹<%= number_with_delimiter(vendor.outstanding_balance.to_i) %>
                  </div>
                  <% if vendor.outstanding_balance > 0 %>
                    <small class="text-danger">
                      <i class="bi bi-exclamation-circle me-1"></i>
                      Payment Due
                    </small>
                  <% else %>
                    <small class="text-success">
                      <i class="bi bi-check-circle me-1"></i>
                      All Clear
                    </small>
                  <% end %>
                </td>
                <td class="align-middle">
                  <span class="badge <%= vendor.status_badge_class %> px-3 py-2">
                    <i class="bi bi-<%= vendor.status ? 'check-circle' : 'x-circle' %> me-1"></i>
                    <%= vendor.status_text %>
                  </span>
                </td>
                <td class="align-middle">
                  <div class="d-flex gap-2 align-items-center">
                    <!-- View Button -->
                    <%= link_to admin_vendor_path(vendor),
                        class: "btn btn-sm btn-outline-primary",
                        title: "View Details" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>

                    <!-- Action Dropdown -->
                    <div class="dropdown">
                      <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                      </button>
                      <ul class="dropdown-menu dropdown-menu-end">
                        <li class="dropdown-header">
                          <i class="bi bi-tools me-1"></i>Vendor Actions
                        </li>
                        <li>
                          <%= link_to edit_admin_vendor_path(vendor), class: "dropdown-item" do %>
                            <i class="bi bi-pencil me-2"></i>
                            Edit Vendor
                          <% end %>
                        </li>
                        <li>
                          <%= link_to new_admin_vendor_purchase_path(vendor_id: vendor.id), class: "dropdown-item" do %>
                            <i class="bi bi-cart-plus me-2 text-info"></i>
                            New Purchase
                          <% end %>
                        </li>
                        <li>
                          <%= link_to toggle_status_admin_vendor_path(vendor), class: "dropdown-item", method: :patch do %>
                            <i class="bi bi-<%= vendor.status ? 'pause' : 'play' %>-circle me-2 text-warning"></i>
                            <%= vendor.status ? 'Deactivate' : 'Activate' %>
                          <% end %>
                        </li>

                        <li><hr class="dropdown-divider"></li>

                        <% if vendor.can_be_deleted? %>
                          <li>
                            <%= link_to admin_vendor_path(vendor), method: :delete,
                                class: "dropdown-item text-danger",
                                confirm: "Are you sure you want to delete this vendor?",
                                data: {
                                  confirm: "Are you sure you want to delete #{vendor.name}? This action cannot be undone."
                                } do %>
                              <i class="bi bi-trash me-2"></i>
                              Delete Vendor
                            <% end %>
                          </li>
                        <% else %>
                          <li>
                            <span class="dropdown-item text-muted">
                              <i class="bi bi-info-circle me-2"></i>
                              Cannot delete (has purchases)
                            </span>
                          </li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) && @vendors.respond_to?(:total_pages) %>
        <div class="card-footer bg-transparent border-0 d-flex justify-content-between align-items-center">
          <div>
            <small class="text-muted">
              Showing <%= @vendors.offset_value + 1 %> - <%= [@vendors.offset_value + @vendors.length, @vendors.total_count].min %> of <%= @vendors.total_count %> vendors
            </small>
          </div>
          <div>
            <%= paginate @vendors %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-building fs-1 text-muted"></i>
        </div>
        <h5 class="text-muted mb-3">No Vendors Found</h5>
        <p class="text-muted mb-4">Start building your vendor network by adding your first vendor partner.</p>
        <%= link_to "Add New Vendor", new_admin_vendor_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

