<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1"><%= @family_member.name %></h2>
    <p class="text-muted mb-0">
      <span class="badge bg-info me-2"><%= @family_member.relationship.humanize %></span>
      Family member of <%= @customer.display_name %>
    </p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to edit_admin_customer_family_member_path(@customer, @family_member), class: "btn btn-warning" do %>
      <i class="bi bi-pencil me-1"></i>
      Edit
    <% end %>
    <%= link_to admin_customer_path(@customer), class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Customer
    <% end %>
  </div>
</div>

<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <h5 class="mb-0">Family Member Details</h5>
  </div>
  <div class="card-body">
    <div class="row g-3">
      <div class="col-md-4">
        <strong class="text-muted d-block">First Name</strong>
        <%= @family_member.first_name %>
      </div>

      <div class="col-md-4">
        <strong class="text-muted d-block">Middle Name</strong>
        <%= @family_member.middle_name || '-' %>
      </div>

      <div class="col-md-4">
        <strong class="text-muted d-block">Last Name</strong>
        <%= @family_member.last_name %>
      </div>

      <div class="col-md-6">
        <strong class="text-muted d-block">Relationship</strong>
        <span class="badge bg-info"><%= @family_member.relationship.humanize %></span>
      </div>

      <div class="col-md-4">
        <strong class="text-muted d-block">Date of Birth</strong>
        <%= @family_member.birth_date&.strftime("%B %d, %Y") || '-' %>
      </div>

      <div class="col-md-4">
        <strong class="text-muted d-block">Age</strong>
        <%= @family_member.age || '-' %> years
      </div>

      <div class="col-md-4">
        <strong class="text-muted d-block">Gender</strong>
        <%= @family_member.gender&.humanize || '-' %>
      </div>

      <div class="col-md-4">
        <strong class="text-muted d-block">Height</strong>
        <%= @family_member.height || '-' %>
      </div>

      <div class="col-md-4">
        <strong class="text-muted d-block">Weight</strong>
        <%= @family_member.weight || '-' %>
      </div>

      <div class="col-md-4">
        <strong class="text-muted d-block">Mobile</strong>
        <% if @family_member.mobile.present? %>
          <a href="tel:<%= @family_member.mobile %>"><%= @family_member.mobile %></a>
        <% else %>
          -
        <% end %>
      </div>

      <div class="col-md-6">
        <strong class="text-muted d-block">PAN Number</strong>
        <%= @family_member.pan_no || '-' %>
      </div>

      <div class="col-md-6">
        <strong class="text-muted d-block">Created</strong>
        <%= @family_member.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </div>

      <div class="col-md-6">
        <strong class="text-muted d-block">Last Updated</strong>
        <%= @family_member.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
      </div>
    </div>

    <% if @family_member.documents.attached? %>
      <hr class="my-4">
      <h6 class="mb-3">Documents</h6>
      <div class="row g-3">
        <% @family_member.documents.each do |document| %>
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">
                <h6 class="card-title text-truncate" title="<%= document.filename %>">
                  <i class="bi bi-file-earmark me-2"></i>
                  <%= document.filename %>
                </h6>
                <p class="card-text">
                  <small class="text-muted">
                    Size: <%= number_to_human_size(document.byte_size) %>
                  </small>
                </p>
                <div class="d-flex gap-2">
                  <%= link_to rails_blob_path(document, disposition: "attachment"), class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-download me-1"></i>Download
                  <% end %>
                  <%= link_to rails_blob_path(document), class: "btn btn-sm btn-outline-info", target: "_blank" do %>
                    <i class="bi bi-eye me-1"></i>View
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="card-footer bg-transparent">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <%= link_to admin_customer_path(@customer), class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left me-1"></i>
          Back to Customer
        <% end %>
      </div>
      <div class="d-flex gap-2">
        <%= link_to edit_admin_customer_family_member_path(@customer, @family_member), class: "btn btn-warning" do %>
          <i class="bi bi-pencil me-1"></i>
          Edit Family Member
        <% end %>
        <%= link_to admin_customer_family_member_path(@customer, @family_member), method: :delete,
            class: "btn btn-outline-danger",
            data: { confirm: "Are you sure you want to delete this family member?", turbo_method: :delete } do %>
          <i class="bi bi-trash me-1"></i>
          Delete
        <% end %>
      </div>
    </div>
  </div>
</div>