<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Family Members</h2>
    <p class="text-muted mb-0">Family members of <%= @customer.display_name %></p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to new_admin_customer_family_member_path(@customer), class: "btn btn-primary" do %>
      <i class="bi bi-plus me-1"></i>
      Add Family Member
    <% end %>
    <%= link_to admin_customer_path(@customer), class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Customer
    <% end %>
  </div>
</div>

<div class="card border-0 shadow-sm">
  <% if @family_members.any? %>
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead>
          <tr>
            <th>Name</th>
            <th>Relationship</th>
            <th>Birth Date</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Mobile</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @family_members.each do |family_member| %>
            <tr>
              <td>
                <%= link_to admin_customer_family_member_path(@customer, family_member), class: "text-decoration-none" do %>
                  <%= family_member.name %>
                <% end %>
              </td>
              <td>
                <span class="badge bg-info"><%= family_member.relationship.humanize %></span>
              </td>
              <td><%= family_member.birth_date&.strftime("%b %d, %Y") %></td>
              <td><%= family_member.age %> years</td>
              <td><%= family_member.gender&.humanize %></td>
              <td>
                <% if family_member.mobile.present? %>
                  <a href="tel:<%= family_member.mobile %>"><%= family_member.mobile %></a>
                <% else %>
                  -
                <% end %>
              </td>
              <td>
                <div class="d-flex gap-1">
                  <%= link_to admin_customer_family_member_path(@customer, family_member), class: "btn btn-sm btn-outline-info" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= link_to edit_admin_customer_family_member_path(@customer, family_member), class: "btn btn-sm btn-outline-warning" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= link_to admin_customer_family_member_path(@customer, family_member), method: :delete,
                      class: "btn btn-sm btn-outline-danger",
                      data: { confirm: "Are you sure?", turbo_method: :delete } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="card-body text-center py-5">
      <i class="bi bi-people fs-1 text-muted d-block mb-3"></i>
      <h5>No Family Members</h5>
      <p class="text-muted mb-4">No family members have been added for this customer yet.</p>
      <%= link_to new_admin_customer_family_member_path(@customer), class: "btn btn-primary" do %>
        <i class="bi bi-plus me-1"></i>
        Add First Family Member
      <% end %>
    </div>
  <% end %>
</div>