<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Investor Management</h2>
  </div>
  <div class="d-flex gap-2">
    <%= link_to new_admin_investor_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Create Investor
    <% end %>
  </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Investors</h6>
            <h3 class="mb-0 text-primary"><%= number_with_delimiter(@total_investors) %></h3>
          </div>
          <div class="bg-primary bg-opacity-10 rounded p-3">
            <i class="bi bi-people text-primary fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Active Investors</h6>
            <h3 class="mb-0 text-success"><%= number_with_delimiter(@active_investors) %></h3>
          </div>
          <div class="bg-success bg-opacity-10 rounded p-3">
            <i class="bi bi-person-check text-success fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Inactive Investors</h6>
            <h3 class="mb-0 text-warning"><%= number_with_delimiter(@inactive_investors) %></h3>
          </div>
          <div class="bg-warning bg-opacity-10 rounded p-3">
            <i class="bi bi-person-x text-warning fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filters and Search -->
<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: admin_investors_path, method: :get, local: true, class: "d-flex flex-wrap gap-3 align-items-end", id: "search_form" do |form| %>
      <!-- Search -->
      <div class="flex-grow-1 min-width-250">
        <%= form.text_field :search, placeholder: "Search by name, mobile, or email... (min 4 characters)",
                           value: params[:search],
                           class: "form-control",
                           id: "search_input",
                           data: { min_length: 4 } %>
      </div>

      <!-- Status Filter -->
      <div>
        <%= form.select :status,
                       options_for_select([
                         ['All Statuses', ''],
                         ['Active', 'active'],
                         ['Inactive', 'inactive']
                       ], params[:status]),
                       {},
                       { class: "form-select", id: "status_filter" } %>
      </div>

      <!-- Actions -->
      <div class="d-flex gap-2">
        <%= link_to "Clear", admin_investors_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Investors Table -->
<div class="card shadow-sm">
  <div class="card-body">
    <% if @investors.any? %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Name</th>
              <th>Mobile</th>
              <th>Email</th>
              <th>Role</th>
              <th>Status</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @investors.each do |investor| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-person text-primary"></i>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= investor.display_name %></h6>
                      <small class="text-muted"><%= investor.full_name %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="badge bg-light text-dark border">
                    <i class="bi bi-telephone me-1"></i>
                    <%= investor.formatted_mobile %>
                  </span>
                </td>
                <td>
                  <span class="badge bg-light text-dark border">
                    <i class="bi bi-envelope me-1"></i>
                    <%= investor.formatted_email %>
                  </span>
                </td>
                <td>
                  <span class="badge bg-info">Role <%= investor.role_id %></span>
                </td>
                <td>
                  <% if investor.active? %>
                    <span class="badge bg-success">Active</span>
                  <% else %>
                    <span class="badge bg-secondary">Inactive</span>
                  <% end %>
                </td>
                <td>
                  <small class="text-muted">
                    <%= time_ago_in_words(investor.created_at) %> ago
                  </small>
                </td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu">
                      <li><%= link_to "View", admin_investor_path(investor), class: "dropdown-item" %></li>
                      <li><%= link_to "Edit", edit_admin_investor_path(investor), class: "dropdown-item" %></li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to admin_investor_path(investor),
                                   class: "dropdown-item text-danger",
                                   data: {
                                     "turbo-method": :delete,
                                     "turbo-confirm": "Are you sure you want to delete this investor? This action cannot be undone."
                                   } do %>
                          <i class="bi bi-trash text-danger me-2"></i>Delete
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="card-footer bg-transparent border-0">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
          <small class="text-muted mb-2 mb-md-0">
            <% if defined?(@total_filtered_count) && @total_filtered_count.present? %>
              Showing <%= @investors.current_page == 1 ? 1 : ((@investors.current_page - 1) * @investors.limit_value + 1) %>
              to <%= [@investors.current_page * @investors.limit_value, @total_filtered_count].min %>
              of <%= number_with_delimiter(@total_filtered_count) %> investors
            <% elsif @investors.respond_to?(:total_count) %>
              Showing <%= @investors.current_page == 1 ? 1 : ((@investors.current_page - 1) * @investors.limit_value + 1) %>
              to <%= [@investors.current_page * @investors.limit_value, @investors.total_count].min %>
              of <%= number_with_delimiter(@investors.total_count) %> investors
            <% else %>
              Showing <%= @investors.count %> investors
            <% end %>
          </small>

          <% if @investors.respond_to?(:total_pages) && @investors.total_pages > 1 %>
            <div class="pagination-wrapper">
              <%= paginate @investors %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-people display-1 text-muted"></i>
        </div>
        <h5 class="mb-3">No Investors Found</h5>
        <p class="text-muted mb-4">
          <% if params[:search].present? || params[:status].present? %>
            No investors match your current filters. Try adjusting your search criteria.
          <% else %>
            Start building your investor network by adding your first investor.
          <% end %>
        </p>
        <% unless params[:search].present? || params[:status].present? %>
          <%= link_to new_admin_investor_path, class: "btn btn-primary" do %>
            <i class="bi bi-plus-lg me-1"></i>
            Create First Investor
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
.min-width-250 {
  min-width: 250px;
}

.avatar-sm {
  width: 38px;
  height: 38px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('search_input');
  const statusFilter = document.getElementById('status_filter');
  const searchForm = document.getElementById('search_form');
  let searchTimeout;

  // Auto-search on typing after 4 characters
  searchInput.addEventListener('input', function() {
    clearTimeout(searchTimeout);
    const searchValue = this.value;

    searchTimeout = setTimeout(() => {
      if (searchValue.length >= 4 || searchValue.length === 0) {
        searchForm.submit();
      }
    }, 500); // 500ms delay after typing stops
  });

  // Auto-submit on status filter change
  statusFilter.addEventListener('change', function() {
    searchForm.submit();
  });
});
</script>
