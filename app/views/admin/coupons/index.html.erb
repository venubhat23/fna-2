<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Coupon Management</h2>
    <p class="text-muted mb-0">Manage discount coupons and promotional codes</p>
  </div>
  <div>
    <%= link_to new_admin_coupon_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Add New Coupon
    <% end %>
  </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Total Coupons</h6>
            <h4 class="mb-0"><%= @stats[:total] %></h4>
          </div>
          <div class="text-primary">
            <i class="bi bi-receipt fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Active Coupons</h6>
            <h4 class="mb-0"><%= @stats[:active] %></h4>
          </div>
          <div class="text-success">
            <i class="bi bi-check-circle fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Expired</h6>
            <h4 class="mb-0"><%= @stats[:expired] %></h4>
          </div>
          <div class="text-danger">
            <i class="bi bi-x-circle fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Upcoming</h6>
            <h4 class="mb-0"><%= @stats[:upcoming] %></h4>
          </div>
          <div class="text-info">
            <i class="bi bi-clock fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filters and Search -->
<div class="card border-0 shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: admin_coupons_path, method: :get, local: true, class: "d-flex gap-3 align-items-end" do |form| %>
      <div class="flex-grow-1">
        <%= form.text_field :search, value: params[:search],
            class: "form-control", placeholder: "Search by code or description..." %>
      </div>
      <div>
        <%= form.select :filter,
            options_for_select([
              ['All Coupons', ''],
              ['Active', 'active'],
              ['Inactive', 'inactive'],
              ['Expired', 'expired'],
              ['Upcoming', 'upcoming']
            ], params[:filter]),
            {}, { class: "form-select" } %>
      </div>
      <div>
        <%= form.submit "Filter", class: "btn btn-outline-primary" %>
      </div>
      <div>
        <%= link_to admin_coupons_path, class: "btn btn-outline-secondary" do %>
          Reset
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Coupons Table -->
<div class="card border-0 shadow-sm">
  <div class="card-body p-0">
    <% if @coupons.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th class="border-0 fw-semibold">Code</th>
              <th class="border-0 fw-semibold">Discount</th>
              <th class="border-0 fw-semibold">Validity</th>
              <th class="border-0 fw-semibold">Usage</th>
              <th class="border-0 fw-semibold">Status</th>
              <th class="border-0 fw-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @coupons.each do |coupon| %>
              <tr>
                <td class="align-middle">
                  <div>
                    <strong class="fs-6"><%= coupon.code %></strong>
                    <% if coupon.description.present? %>
                      <br><small class="text-muted"><%= coupon.description %></small>
                    <% end %>
                  </div>
                </td>
                <td class="align-middle">
                  <span class="badge bg-primary fs-6"><%= coupon.discount_display %></span>
                  <% if coupon.minimum_amount.present? %>
                    <br><small class="text-muted">Min: ₹<%= coupon.minimum_amount %></small>
                  <% end %>
                </td>
                <td class="align-middle">
                  <div class="small">
                    <%= coupon.validity_period %>
                  </div>
                </td>
                <td class="align-middle">
                  <div>
                    <span class="fw-medium"><%= coupon.used_count %></span>
                    <% if coupon.usage_limit.present? %>
                      / <%= coupon.usage_limit %>
                    <% else %>
                      / ∞
                    <% end %>
                  </div>
                  <small class="text-muted"><%= coupon.usage_remaining %> remaining</small>
                </td>
                <td class="align-middle">
                  <span class="badge bg-<%= coupon.status_badge_class %>">
                    <%= coupon.status_text %>
                  </span>
                </td>
                <td class="align-middle">
                  <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li>
                        <%= link_to admin_coupon_path(coupon), class: "dropdown-item" do %>
                          <i class="bi bi-eye me-2"></i>View Details
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_admin_coupon_path(coupon), class: "dropdown-item" do %>
                          <i class="bi bi-pencil me-2"></i>Edit Coupon
                        <% end %>
                      </li>
                      <li>
                        <%= link_to toggle_status_admin_coupon_path(coupon),
                            method: :patch, class: "dropdown-item" do %>
                          <i class="bi bi-<%= coupon.status? ? 'pause' : 'play' %> me-2"></i>
                          <%= coupon.status? ? 'Deactivate' : 'Activate' %>
                        <% end %>
                      </li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to admin_coupon_path(coupon), method: :delete,
                            class: "dropdown-item text-danger",
                            confirm: "Are you sure you want to delete this coupon?" do %>
                          <i class="bi bi-trash me-2"></i>Delete
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) && @coupons.respond_to?(:total_pages) %>
        <div class="card-footer bg-transparent border-0">
          <%= paginate @coupons %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-receipt fs-1 text-muted"></i>
        </div>
        <h5 class="text-muted mb-3">No Coupons Found</h5>
        <p class="text-muted mb-4">Start creating discount coupons to boost sales.</p>
        <%= link_to "Create Coupon", new_admin_coupon_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<style>
/* Fix dropdown menu visibility */
.dropdown {
  position: relative;
}

.dropdown-menu {
  position: absolute !important;
  z-index: 1050 !important;
  min-width: 150px;
}

/* Ensure the last row's dropdown opens upward if needed */
tbody tr:last-child .dropdown-menu,
tbody tr:nth-last-child(2) .dropdown-menu {
  bottom: 100%;
  top: auto;
}
</style>