<%- content_for :title, "Create New Coupon" %>

<div class="row">
  <div class="col-12">
    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
      <h4 class="mb-sm-0">Create New Coupon</h4>
      <div class="page-title-right">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item"><%= link_to "Dashboard", dashboard_path %></li>
          <li class="breadcrumb-item"><%= link_to "Coupons", admin_coupons_path %></li>
          <li class="breadcrumb-item active">Create New</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card">
      <div class="card-header">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <div class="avatar-sm">
              <div class="avatar-title rounded-circle bg-primary-subtle text-primary fs-20">
                <i class="ri-ticket-2-line"></i>
              </div>
            </div>
          </div>
          <div class="flex-grow-1 ms-3">
            <h5 class="card-title mb-1">Coupon Information</h5>
            <p class="text-muted mb-0">Fill in the details to create a new coupon</p>
          </div>
        </div>
      </div>
      <div class="card-body">
        <%= render 'form', coupon: @coupon %>
      </div>
    </div>
  </div>
</div>