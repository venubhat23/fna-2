<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Ambassadors Management</h2>
  </div>
  <div class="d-flex gap-2">
    <%= link_to new_admin_distributor_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Create Ambassador
    <% end %>
  </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Ambassadors</h6>
            <h3 class="mb-0 text-primary"><%= number_with_delimiter(@total_distributors) %></h3>
          </div>
          <div class="bg-primary bg-opacity-10 rounded p-3">
            <i class="bi bi-people text-primary fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Active Ambassadors</h6>
            <h3 class="mb-0 text-success"><%= number_with_delimiter(@active_distributors) %></h3>
          </div>
          <div class="bg-success bg-opacity-10 rounded p-3">
            <i class="bi bi-person-check text-success fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Inactive Ambassadors</h6>
            <h3 class="mb-0 text-warning"><%= number_with_delimiter(@inactive_distributors) %></h3>
          </div>
          <div class="bg-warning bg-opacity-10 rounded p-3">
            <i class="bi bi-person-x text-warning fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filters and Search -->
<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: admin_distributors_path, method: :get, local: true, class: "d-flex flex-wrap gap-3 align-items-end", id: "search_form" do |form| %>
      <!-- Search -->
      <div class="flex-grow-1 min-width-250">
        <%= form.text_field :search, placeholder: "Search by name, mobile, or email... (min 4 characters)",
                           value: params[:search],
                           class: "form-control",
                           id: "search_input",
                           data: { min_length: 4 } %>
      </div>

      <!-- Status Filter -->
      <div>
        <%= form.select :status,
                       options_for_select([
                         ['All Statuses', ''],
                         ['Active', 'active'],
                         ['Inactive', 'inactive']
                       ], params[:status]),
                       {},
                       { class: "form-select", id: "status_filter" } %>
      </div>

      <!-- Actions -->
      <div class="d-flex gap-2">
        <%= link_to "Clear", admin_distributors_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Ambassadors Table -->
<div class="card shadow-sm">
  <div class="card-body">
    <% if @distributors.any? %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Name</th>
              <th>Mobile</th>
              <th>Email</th>
              <th>Role</th>
              <th>Affiliates</th>
              <th>Status</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @distributors.each do |distributor| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-person text-primary"></i>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= distributor.display_name %></h6>
                      <small class="text-muted"><%= distributor.full_name %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="badge bg-light text-dark border">
                    <i class="bi bi-telephone me-1"></i>
                    <%= distributor.formatted_mobile %>
                  </span>
                </td>
                <td>
                  <span class="badge bg-light text-dark border">
                    <i class="bi bi-envelope me-1"></i>
                    <%= distributor.formatted_email %>
                  </span>
                </td>
                <td>
                  <span class="badge bg-info">Role <%= distributor.role_id %></span>
                </td>
                <td>
                  <span class="badge bg-primary">
                    <i class="bi bi-people me-1"></i>
                    <%= distributor.assigned_sub_agents.count %>
                  </span>
                </td>
                <td>
                  <% if distributor.active? %>
                    <span class="badge bg-success">Active</span>
                  <% else %>
                    <span class="badge bg-secondary">Inactive</span>
                  <% end %>
                </td>
                <td>
                  <small class="text-muted">
                    <%= time_ago_in_words(distributor.created_at) %> ago
                  </small>
                </td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu">
                      <li><%= link_to "View", admin_distributor_path(distributor), class: "dropdown-item" %></li>
                      <li><%= link_to "Edit", edit_admin_distributor_path(distributor), class: "dropdown-item" %></li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to "#",
                                   class: "dropdown-item text-danger delete-distributor-btn",
                                   data: {
                                     "distributor-id": distributor.id,
                                     "distributor-name": distributor.display_name,
                                     "delete-url": admin_distributor_path(distributor)
                                   } do %>
                          <i class="bi bi-trash text-danger me-2"></i>Delete
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="card-footer bg-transparent border-0">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
          <small class="text-muted mb-2 mb-md-0">
            <% if defined?(@total_filtered_count) && @total_filtered_count.present? %>
              Showing <%= @distributors.current_page == 1 ? 1 : ((@distributors.current_page - 1) * @distributors.limit_value + 1) %>
              to <%= [@distributors.current_page * @distributors.limit_value, @total_filtered_count].min %>
              of <%= number_with_delimiter(@total_filtered_count) %> ambassadors
            <% elsif @distributors.respond_to?(:total_count) %>
              Showing <%= @distributors.current_page == 1 ? 1 : ((@distributors.current_page - 1) * @distributors.limit_value + 1) %>
              to <%= [@distributors.current_page * @distributors.limit_value, @distributors.total_count].min %>
              of <%= number_with_delimiter(@distributors.total_count) %> ambassadors
            <% else %>
              Showing <%= @distributors.count %> ambassadors
            <% end %>
          </small>

          <% if @distributors.respond_to?(:total_pages) && @distributors.total_pages > 1 %>
            <div class="pagination-wrapper">
              <%= paginate @distributors %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-people display-1 text-muted"></i>
        </div>
        <h5 class="mb-3">No Ambassadors Found</h5>
        <p class="text-muted mb-4">
          <% if params[:search].present? || params[:status].present? %>
            No ambassadors match your current filters. Try adjusting your search criteria.
          <% else %>
            Start building your ambassador network by adding your first ambassador.
          <% end %>
        </p>
        <% unless params[:search].present? || params[:status].present? %>
          <%= link_to new_admin_distributor_path, class: "btn btn-primary" do %>
            <i class="bi bi-plus-lg me-1"></i>
            Create First Ambassador
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
.min-width-250 {
  min-width: 250px;
}

.avatar-sm {
  width: 38px;
  height: 38px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('search_input');
  const statusFilter = document.getElementById('status_filter');
  const searchForm = document.getElementById('search_form');
  let searchTimeout;

  // Auto-search on typing after 4 characters
  searchInput.addEventListener('input', function() {
    clearTimeout(searchTimeout);
    const searchValue = this.value;

    searchTimeout = setTimeout(() => {
      if (searchValue.length >= 4 || searchValue.length === 0) {
        searchForm.submit();
      }
    }, 500); // 500ms delay after typing stops
  });

  // Auto-submit on status filter change
  statusFilter.addEventListener('change', function() {
    searchForm.submit();
  });

  // Delete confirmation functionality
  const deleteButtons = document.querySelectorAll('.delete-distributor-btn');
  deleteButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();

      const distributorId = this.dataset.distributorId;
      const distributorName = this.dataset.distributorName;
      const deleteUrl = this.dataset.deleteUrl;

      showDeleteConfirmation(distributorName, deleteUrl);
    });
  });

  function showDeleteConfirmation(distributorName, deleteUrl) {
    // Create modal HTML
    const modalHtml = `
      <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header border-bottom-0">
              <h5 class="modal-title text-danger" id="deleteConfirmationModalLabel">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Delete Ambassador
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
              <div class="mb-4">
                <i class="bi bi-trash text-danger" style="font-size: 3rem;"></i>
              </div>
              <h6 class="mb-3">Are you sure you want to delete this ambassador?</h6>
              <p class="text-muted mb-0">
                <strong>${distributorName}</strong> will be permanently removed from the system.
              </p>
              <p class="text-danger small mt-2 mb-0">
                <i class="bi bi-exclamation-circle me-1"></i>
                This action cannot be undone.
              </p>
            </div>
            <div class="modal-footer border-top-0 justify-content-center">
              <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                <i class="bi bi-x-lg me-1"></i>Cancel
              </button>
              <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                <i class="bi bi-trash me-1"></i>Delete Ambassador
              </button>
            </div>
          </div>
        </div>
      </div>
    `;

    // Remove any existing modal
    const existingModal = document.getElementById('deleteConfirmationModal');
    if (existingModal) {
      existingModal.remove();
    }

    // Add modal to body
    document.body.insertAdjacentHTML('beforeend', modalHtml);

    // Show modal
    const modal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
    modal.show();

    // Handle confirmation
    document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
      // Create and submit delete form
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = deleteUrl;

      // Add CSRF token
      const csrfToken = document.querySelector('meta[name="csrf-token"]');
      if (csrfToken) {
        const csrfInput = document.createElement('input');
        csrfInput.type = 'hidden';
        csrfInput.name = 'authenticity_token';
        csrfInput.value = csrfToken.getAttribute('content');
        form.appendChild(csrfInput);
      }

      // Add method override for DELETE
      const methodInput = document.createElement('input');
      methodInput.type = 'hidden';
      methodInput.name = '_method';
      methodInput.value = 'DELETE';
      form.appendChild(methodInput);

      document.body.appendChild(form);
      form.submit();

      modal.hide();
    });

    // Clean up modal when hidden
    document.getElementById('deleteConfirmationModal').addEventListener('hidden.bs.modal', function () {
      this.remove();
    });
  }
});
</script>
