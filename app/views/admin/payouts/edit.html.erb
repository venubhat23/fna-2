<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Edit Payout #<%= @payout.id %></h2>
    <p class="text-muted mb-0">Update payout information and status</p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to admin_payout_path(@payout), class: "btn btn-outline-info" do %>
      <i class="bi bi-eye me-1"></i>
      View Payout
    <% end %>
    <%= link_to admin_payouts_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Payouts
    <% end %>
  </div>
</div>

<%= render 'form' %>