<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Payout Summary Dashboard</h2>
    <p class="text-muted mb-0">Real-time overview of payout management system</p>
  </div>
  <div>
    <%= link_to admin_payouts_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Payouts
    <% end %>
  </div>
</div>

<!-- Overview Cards -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Payouts</h6>
            <h2 class="mb-0 text-primary"><%= number_with_delimiter(@summary_data[:overview][:total_payouts]) %></h2>
            <small class="text-muted">All time</small>
          </div>
          <div class="icon-shape bg-primary-soft text-primary">
            <i class="bi bi-list-check"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Amount</h6>
            <h2 class="mb-0 text-success">₹<%= number_to_human(@summary_data[:overview][:total_amount], precision: 2, significant: false, format: '%n%u', units: { thousand: 'K', million: 'M', billion: 'B' }) %></h2>
            <small class="text-muted">₹<%= number_with_delimiter(@summary_data[:overview][:total_amount]) %></small>
          </div>
          <div class="icon-shape bg-success-soft text-success">
            <i class="bi bi-cash-stack"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Pending Amount</h6>
            <h2 class="mb-0 text-warning">₹<%= number_to_human(@summary_data[:overview][:pending_amount], precision: 2, significant: false, format: '%n%u', units: { thousand: 'K', million: 'M', billion: 'B' }) %></h2>
            <small class="text-muted">₹<%= number_with_delimiter(@summary_data[:overview][:pending_amount]) %></small>
          </div>
          <div class="icon-shape bg-warning-soft text-warning">
            <i class="bi bi-clock-fill"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Processing Amount</h6>
            <h2 class="mb-0 text-info">₹<%= number_to_human(@summary_data[:overview][:processing_amount], precision: 2, significant: false, format: '%n%u', units: { thousand: 'K', million: 'M', billion: 'B' }) %></h2>
            <small class="text-muted">₹<%= number_with_delimiter(@summary_data[:overview][:processing_amount]) %></small>
          </div>
          <div class="icon-shape bg-info-soft text-info">
            <i class="bi bi-gear-fill"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <!-- Payout by Recipient -->
  <div class="col-md-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Payouts by Recipient</h5>
        <i class="bi bi-people text-muted"></i>
      </div>
      <div class="card-body">
        <% if @summary_data[:by_recipient].any? %>
          <% @summary_data[:by_recipient].each do |recipient_status, amount| %>
            <% recipient, status = recipient_status %>
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div>
                <strong><%= recipient.humanize %></strong>
                <span class="badge bg-<%=
                  case status
                  when 'pending' then 'warning'
                  when 'processing' then 'info'
                  when 'paid' then 'success'
                  when 'cancelled' then 'danger'
                  else 'secondary'
                  end
                %> ms-2">
                  <%= status.humanize %>
                </span>
              </div>
              <div class="text-end">
                <strong>₹<%= number_with_delimiter(amount) %></strong>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="bi bi-people fs-1"></i>
            <p class="mt-2 mb-0">No recipient data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Payout by Policy Type -->
  <div class="col-md-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Payouts by Policy Type</h5>
        <i class="bi bi-file-earmark-text text-muted"></i>
      </div>
      <div class="card-body">
        <% if @summary_data[:by_policy_type].any? %>
          <% @summary_data[:by_policy_type].each do |policy_status, amount| %>
            <% policy_type, status = policy_status %>
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div>
                <strong><%= policy_type.humanize %> Insurance</strong>
                <span class="badge bg-<%=
                  case status
                  when 'pending' then 'warning'
                  when 'processing' then 'info'
                  when 'paid' then 'success'
                  when 'cancelled' then 'danger'
                  else 'secondary'
                  end
                %> ms-2">
                  <%= status.humanize %>
                </span>
              </div>
              <div class="text-end">
                <strong>₹<%= number_with_delimiter(amount) %></strong>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="bi bi-file-earmark-text fs-1"></i>
            <p class="mt-2 mb-0">No policy data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Monthly Trend -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Monthly Payout Trend (Last 6 Months)</h5>
        <i class="bi bi-graph-up text-muted"></i>
      </div>
      <div class="card-body">
        <% if @summary_data[:monthly_trend].any? %>
          <div class="row">
            <% @summary_data[:monthly_trend].each do |month_data| %>
              <div class="col-md-2 mb-3">
                <div class="text-center">
                  <h6 class="text-muted mb-2"><%= month_data[:month] %></h6>
                  <div class="mb-2">
                    <strong class="text-success d-block">₹<%= number_to_human(month_data[:paid], precision: 1, significant: false, format: '%n%u', units: { thousand: 'K', million: 'M' }) %></strong>
                    <small class="text-muted">Paid</small>
                  </div>
                  <div>
                    <strong class="text-warning d-block">₹<%= number_to_human(month_data[:pending], precision: 1, significant: false, format: '%n%u', units: { thousand: 'K', million: 'M' }) %></strong>
                    <small class="text-muted">Pending</small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="bi bi-graph-up fs-1"></i>
            <p class="mt-2 mb-0">No trend data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Recent Activities -->
<div class="row">
  <div class="col-12">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Recent Payout Activities</h5>
        <%= link_to admin_payouts_path, class: "btn btn-sm btn-outline-primary" do %>
          <i class="bi bi-arrow-right me-1"></i>
          View All
        <% end %>
      </div>
      <div class="card-body">
        <% if @summary_data[:recent_activities].any? %>
          <div class="timeline">
            <% @summary_data[:recent_activities].each do |activity| %>
              <div class="timeline-item">
                <div class="timeline-marker bg-<%=
                  case activity[:action]
                  when 'created' then 'primary'
                  when 'updated' then 'info'
                  when 'paid' then 'success'
                  when 'cancelled' then 'danger'
                  when 'auto_created' then 'warning'
                  else 'secondary'
                  end
                %>"></div>
                <div class="timeline-content">
                  <div class="d-flex justify-content-between align-items-start">
                    <div>
                      <strong><%= activity[:action].humanize %></strong>
                      <% if activity[:notes].present? %>
                        <p class="mb-1 text-muted small"><%= activity[:notes] %></p>
                      <% end %>
                      <small class="text-muted">
                        by <%= activity[:performed_by] %> • <%= activity[:performed_at] %>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="bi bi-clock-history fs-1"></i>
            <p class="mt-2 mb-0">No recent activities</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
.icon-shape {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.25rem;
}

.bg-primary-soft {
  background-color: rgba(13, 110, 253, 0.1);
}

.bg-success-soft {
  background-color: rgba(25, 135, 84, 0.1);
}

.bg-info-soft {
  background-color: rgba(13, 202, 240, 0.1);
}

.bg-warning-soft {
  background-color: rgba(255, 193, 7, 0.1);
}

.timeline {
  position: relative;
  padding-left: 20px;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 8px;
  top: 0;
  bottom: 0;
  width: 2px;
  background: #dee2e6;
}

.timeline-item {
  position: relative;
  margin-bottom: 1.5rem;
}

.timeline-marker {
  position: absolute;
  left: -15px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  border: 2px solid #fff;
}

.timeline-content {
  padding-left: 10px;
}
</style>