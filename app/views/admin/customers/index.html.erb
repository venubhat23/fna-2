<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Customer Management</h2>
    <p class="text-muted mb-0">Manage and track all your customers</p>
  </div>
  <div>
    <%= link_to new_admin_customer_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Add New Customer
    <% end %>
  </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Total Customers</h6>
            <h4 class="mb-0"><%= @total_customers || 0 %></h4>
          </div>
          <div class="text-primary">
            <i class="bi bi-people fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Active Customers</h6>
            <h4 class="mb-0"><%= @active_customers || 0 %></h4>
          </div>
          <div class="text-success">
            <i class="bi bi-person-check fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">New This Month</h6>
            <h4 class="mb-0"><%= @new_this_month || 0 %></h4>
          </div>
          <div class="text-info">
            <i class="bi bi-person-plus fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Customers Table -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Customer List</h5>
      <div class="d-flex gap-2">
        <div class="position-relative">
          <input type="text" class="form-control" placeholder="Search customers..." id="searchInput">
          <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-3"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @customers.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th class="border-0 fw-semibold">Customer</th>
              <th class="border-0 fw-semibold">Contact Info</th>
              <th class="border-0 fw-semibold">Type</th>
              <th class="border-0 fw-semibold">Status</th>
              <th class="border-0 fw-semibold">Joined</th>
              <th class="border-0 fw-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td class="align-middle">
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-person text-primary"></i>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= customer.display_name %></h6>
                      <small class="text-muted">ID: #<%= customer.id %></small>
                    </div>
                  </div>
                </td>
                <td class="align-middle">
                  <div>
                    <% if customer.email.present? %>
                      <div class="small">
                        <i class="bi bi-envelope text-muted me-1"></i>
                        <%= customer.email %>
                      </div>
                    <% end %>
                    <% if customer.mobile.present? %>
                      <div class="small">
                        <i class="bi bi-telephone text-muted me-1"></i>
                        <%= customer.mobile %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="align-middle">
                  <span class="badge bg-secondary-subtle text-secondary">Individual</span>
                </td>
                <td class="align-middle">
                  <% if customer.respond_to?(:status) && customer.status %>
                    <span class="badge bg-success-subtle text-success">
                      <i class="bi bi-check-circle me-1"></i>
                      Active
                    </span>
                  <% else %>
                    <span class="badge bg-danger-subtle text-danger">
                      <i class="bi bi-x-circle me-1"></i>
                      Inactive
                    </span>
                  <% end %>
                </td>
                <td class="align-middle">
                  <%= customer.created_at.strftime("%b %d, %Y") if customer.created_at %>
                </td>
                <td class="align-middle">
                  <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to admin_customer_path(customer), class: "dropdown-item" do %>
                          <i class="bi bi-eye me-2"></i>
                          View Details
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_admin_customer_path(customer), class: "dropdown-item" do %>
                          <i class="bi bi-pencil me-2"></i>
                          Edit Customer
                        <% end %>
                      </li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to admin_customer_path(customer),
                            class: "dropdown-item text-danger",
                            data: {
                              "turbo-method": "delete",
                              "turbo-confirm": "Are you sure you want to delete #{customer.display_name}? This action cannot be undone."
                            } do %>
                          <i class="bi bi-trash me-2"></i>
                          Delete Customer
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) && @customers.respond_to?(:total_pages) %>
        <div class="card-footer bg-transparent border-0">
          <%= paginate @customers %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-people fs-1 text-muted"></i>
        </div>
        <h5 class="text-muted mb-3">No Customers Found</h5>
        <p class="text-muted mb-4">Start building your customer base by adding your first customer.</p>
        <%= link_to "Add Customer", new_admin_customer_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Search functionality
  const searchInput = document.getElementById('searchInput');
  const tableRows = document.querySelectorAll('tbody tr');

  searchInput?.addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();

    tableRows.forEach(row => {
      const customerName = row.cells[0]?.textContent.toLowerCase() || '';
      const contactInfo = row.cells[1]?.textContent.toLowerCase() || '';
      const customerType = row.cells[2]?.textContent.toLowerCase() || '';

      if (customerName.includes(searchTerm) ||
          contactInfo.includes(searchTerm) ||
          customerType.includes(searchTerm)) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  });

});
</script>

<style>

/* Fix dropdown menu visibility */
.dropdown {
  position: relative;
}

.dropdown-menu {
  position: absolute !important;
  z-index: 1050 !important;
  min-width: 150px;
}

/* Ensure the last row's dropdown opens upward if needed */
tbody tr:last-child .dropdown-menu,
tbody tr:nth-last-child(2) .dropdown-menu {
  bottom: 100%;
  top: auto;
}

/* Make the credentials column more compact but readable */
.login-credentials strong {
  color: #495057;
  font-size: 0.8rem;
}

.login-credentials .small {
  line-height: 1.3;
}
</style>