<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1"><%= @customer.display_name %></h2>
    <p class="text-muted mb-0">
      <span class="badge bg-<%= @customer.customer_type == 'individual' ? 'primary' : 'success' %> me-2">
        <%= @customer.customer_type&.humanize || 'General' %>
      </span>
      Customer ID: #<%= @customer.id %>
    </p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to edit_admin_customer_path(@customer), class: "btn btn-warning" do %>
      <i class="bi bi-pencil me-1"></i>
      Edit Customer
    <% end %>
    <%= link_to admin_customers_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Customers
    <% end %>
  </div>
</div>

<div class="row">
  <!-- Main Customer Information -->
  <div class="col-lg-8">
    <!-- Basic Information -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Basic Information</h5>
        <span class="badge bg-<%= @customer.status ? 'success' : 'secondary' %>">
          <%= @customer.status ? 'Active' : 'Inactive' %>
        </span>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <% if @customer.individual? %>
            <div class="col-md-6">
              <strong class="text-muted d-block">First Name</strong>
              <%= @customer.first_name || '-' %>
            </div>
            <div class="col-md-6">
              <strong class="text-muted d-block">Last Name</strong>
              <%= @customer.last_name || '-' %>
            </div>
            <div class="col-md-6">
              <strong class="text-muted d-block">Birth Date</strong>
              <%= @customer.birth_date&.strftime("%B %d, %Y") || '-' %>
            </div>
            <div class="col-md-6">
              <strong class="text-muted d-block">Age</strong>
              <%= @customer.age || '-' %> years
            </div>
            <div class="col-md-6">
              <strong class="text-muted d-block">Gender</strong>
              <%= @customer.gender&.humanize || '-' %>
            </div>
            <div class="col-md-6">
              <strong class="text-muted d-block">Birth Place</strong>
              <%= @customer.birth_place || '-' %>
            </div>
          <% else %>
            <div class="col-md-12">
              <strong class="text-muted d-block">Company Name</strong>
              <%= @customer.company_name || '-' %>
            </div>
          <% end %>

          <div class="col-md-6">
            <strong class="text-muted d-block">Email</strong>
            <% if @customer.email.present? %>
              <a href="mailto:<%= @customer.email %>"><%= @customer.email %></a>
            <% else %>
              -
            <% end %>
          </div>
          <div class="col-md-6">
            <strong class="text-muted d-block">Mobile</strong>
            <% if @customer.mobile.present? %>
              <a href="tel:<%= @customer.mobile %>"><%= @customer.mobile %></a>
            <% else %>
              -
            <% end %>
          </div>

          <% if @customer.individual? %>
            <div class="col-md-6">
              <strong class="text-muted d-block">Height</strong>
              <%= @customer.height || '-' %>
            </div>
            <div class="col-md-6">
              <strong class="text-muted d-block">Weight</strong>
              <%= @customer.weight || '-' %>
            </div>
            <div class="col-md-6">
              <strong class="text-muted d-block">Education</strong>
              <%= @customer.education || '-' %>
            </div>
            <div class="col-md-6">
              <strong class="text-muted d-block">Marital Status</strong>
              <%= @customer.marital_status&.humanize || '-' %>
            </div>
            <div class="col-md-6">
              <strong class="text-muted d-block">Occupation</strong>
              <%= @customer.occupation || '-' %>
            </div>
            <div class="col-md-6">
              <strong class="text-muted d-block">Job Title</strong>
              <%= @customer.job_name || '-' %>
            </div>
            <div class="col-md-6">
              <strong class="text-muted d-block">Type of Duty</strong>
              <%= @customer.type_of_duty || '-' %>
            </div>
          <% end %>

          <div class="col-md-6">
            <strong class="text-muted d-block">Annual Income</strong>
            <% if @customer.annual_income.present? %>
              ₹<%= number_with_delimiter(@customer.annual_income) %>
            <% else %>
              -
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Address Information -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">Address Information</h5>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-12">
            <strong class="text-muted d-block">Full Address</strong>
            <%= @customer.address || '-' %>
          </div>
          <div class="col-md-4">
            <strong class="text-muted d-block">City</strong>
            <%= @customer.city || '-' %>
          </div>
          <div class="col-md-4">
            <strong class="text-muted d-block">State</strong>
            <%= @customer.state || '-' %>
          </div>
          <div class="col-md-4">
            <strong class="text-muted d-block">Pincode</strong>
            <%= @customer.pincode || '-' %>
          </div>
        </div>
      </div>
    </div>

    <!-- Financial Information -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">Financial Information</h5>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <strong class="text-muted d-block">PAN Number</strong>
            <%= @customer.pan_number || '-' %>
          </div>
          <div class="col-md-6">
            <strong class="text-muted d-block">GST Number</strong>
            <%= @customer.gst_number || '-' %>
          </div>
        </div>
      </div>
    </div>

    <!-- Nominee Information -->
    <% if @customer.nominee_name.present? %>
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0">
          <h5 class="mb-0">Nominee Information</h5>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-4">
              <strong class="text-muted d-block">Nominee Name</strong>
              <%= @customer.nominee_name %>
            </div>
            <div class="col-md-4">
              <strong class="text-muted d-block">Relation</strong>
              <%= @customer.nominee_relation || '-' %>
            </div>
            <div class="col-md-4">
              <strong class="text-muted d-block">Date of Birth</strong>
              <%= @customer.nominee_date_of_birth&.strftime("%B %d, %Y") || '-' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Additional Information -->
    <% if @customer.additional_info.present? %>
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0">
          <h5 class="mb-0">Additional Information</h5>
        </div>
        <div class="card-body">
          <p class="mb-0"><%= simple_format(@customer.additional_info) %></p>
        </div>
      </div>
    <% end %>

    <!-- Documents and Images -->
    <% if @customer.profile_image.attached? || @customer.documents.any? || @uploaded_documents.any? %>
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Files & Documents</h5>
          <div class="d-flex gap-2">
            <%= link_to new_admin_customer_document_path(@customer), class: "btn btn-sm btn-outline-primary" do %>
              <i class="bi bi-plus me-1"></i>Add Document
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <% if @customer.profile_image.attached? %>
            <h6 class="text-primary mb-3">Profile Image</h6>
            <div class="row g-3 mb-4">
              <div class="col-md-3">
                <div class="card">
                  <%= image_tag @customer.profile_image, class: "card-img-top", style: "height: 150px; object-fit: cover;" %>
                  <div class="card-body p-2">
                    <small class="text-muted d-block"><%= @customer.profile_image.filename %></small>
                    <%= link_to @customer.profile_image, class: "btn btn-sm btn-outline-primary mt-1", target: "_blank" do %>
                      <i class="bi bi-eye me-1"></i>View
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <% if @uploaded_documents.any? %>
            <h6 class="text-info mb-3">
              <i class="bi bi-folder2 me-2"></i>Uploaded Documents
              <span class="badge bg-secondary ms-2"><%= @uploaded_documents.count %></span>
            </h6>
            <div class="row g-3 mb-4">
              <% @uploaded_documents.each do |document| %>
                <div class="col-md-6 col-lg-4">
                  <div class="card h-100 border">
                    <div class="card-header d-flex justify-content-between align-items-start p-3">
                      <div>
                        <i class="bi bi-<%= document.file_icon %> me-2 text-primary fs-5"></i>
                        <strong class="text-sm"><%= document.human_document_type %></strong>
                      </div>
                      <span class="badge bg-light text-dark"><%= document.human_file_type %></span>
                    </div>
                    <div class="card-body p-3">
                      <h6 class="card-title text-truncate mb-2" title="<%= document.title %>">
                        <%= document.title %>
                      </h6>
                      <div class="small text-muted mb-3">
                        <div class="d-flex justify-content-between">
                          <span><i class="bi bi-file-earmark me-1"></i><%= document.file_name %></span>
                        </div>
                        <div class="d-flex justify-content-between mt-1">
                          <span><i class="bi bi-hdd me-1"></i><%= document.file_size_mb %> MB</span>
                          <span><i class="bi bi-person me-1"></i><%= document.uploaded_by %></span>
                        </div>
                        <div class="mt-1">
                          <i class="bi bi-calendar me-1"></i><%= document.created_at.strftime("%b %d, %Y") %>
                        </div>
                      </div>
                    </div>
                    <div class="card-footer d-flex gap-2 p-2">
                      <% if document.downloadable? %>
                        <%= link_to rails_blob_path(document.file, disposition: "attachment"), class: "btn btn-sm btn-outline-primary flex-grow-1", target: "_blank" do %>
                          <i class="bi bi-download me-1"></i>Download
                        <% end %>
                      <% end %>
                      <%= link_to admin_customer_document_path(@customer, document), method: :delete,
                          class: "btn btn-sm btn-outline-danger",
                          data: { confirm: "Are you sure you want to delete this document?", turbo_method: :delete } do %>
                        <i class="bi bi-trash"></i>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>

          <% if @customer.documents.any? %>
            <h6 class="text-success mb-3">
              <i class="bi bi-paperclip me-2"></i>Attached Files
              <span class="badge bg-secondary ms-2"><%= @customer.documents.count %></span>
            </h6>
            <div class="list-group">
              <% @customer.documents.each do |document| %>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                  <div class="d-flex align-items-center">
                    <i class="bi bi-file-earmark me-3 text-muted fs-5"></i>
                    <div>
                      <span class="fw-medium"><%= document.filename %></span>
                      <small class="text-muted d-block">
                        <i class="bi bi-hdd me-1"></i>Size: <%= number_to_human_size(document.byte_size) %>
                        <i class="bi bi-calendar ms-3 me-1"></i><%= document.created_at&.strftime("%b %d, %Y") if document.respond_to?(:created_at) %>
                      </small>
                    </div>
                  </div>
                  <div>
                    <%= link_to document, class: "btn btn-sm btn-outline-primary", target: "_blank" do %>
                      <i class="bi bi-download me-1"></i>Download
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>

          <% if !@customer.profile_image.attached? && @customer.documents.empty? && @uploaded_documents.empty? %>
            <div class="text-center text-muted py-4">
              <i class="bi bi-folder2-open fs-1 d-block mb-3"></i>
              <h6>No Documents Found</h6>
              <p class="mb-3">No documents have been uploaded for this customer yet.</p>
              <%= link_to new_admin_customer_document_path(@customer), class: "btn btn-primary" do %>
                <i class="bi bi-plus me-1"></i>Add First Document
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- All Policies -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
          <i class="bi bi-shield-check me-2 text-primary"></i>
          Insurance Policies
        </h5>
        <div class="d-flex gap-2">
          <%= link_to policy_chart_admin_customer_path(@customer), class: "btn btn-sm btn-outline-info" do %>
            <i class="bi bi-bar-chart me-1"></i>Policy Chart
          <% end %>
          <div class="dropdown">
            <button class="btn btn-sm btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
              <i class="bi bi-plus me-1"></i>Add Policy
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to "Health Insurance", new_admin_health_insurance_path(customer_id: @customer.id), class: "dropdown-item" %></li>
              <li><%= link_to "Life Insurance", new_admin_life_insurance_path(customer_id: @customer.id), class: "dropdown-item" %></li>
              <li><%= link_to "Motor Insurance", new_admin_motor_insurance_path(customer_id: @customer.id), class: "dropdown-item" %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="card-body">
        <% if @all_policies.any? %>
          <div class="row">
            <% @all_policies.each do |policy_data| %>
              <div class="col-md-6 mb-3">
                <div class="card border h-100">
                  <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="mb-0">
                        <%= policy_data[:type] %>
                        <span class="badge bg-<%= policy_data[:status] == 'Active' ? 'success' : 'danger' %> ms-2">
                          <%= policy_data[:status] %>
                        </span>
                      </h6>
                    </div>
                    <small class="text-muted"><%= policy_data[:created_at].strftime("%b %d, %Y") %></small>
                  </div>
                  <div class="card-body">
                    <div class="row g-2">
                      <div class="col-12">
                        <strong class="text-primary d-block">Policy Number</strong>
                        <span class="font-monospace"><%= policy_data[:policy_number] %></span>
                      </div>
                      <div class="col-12">
                        <strong class="text-muted d-block">Insurance Company</strong>
                        <%= policy_data[:company_name] %>
                      </div>
                      <div class="col-6">
                        <strong class="text-muted d-block">Premium</strong>
                        <span class="text-success fw-bold">₹<%= number_with_delimiter(policy_data[:premium].to_i) %></span>
                      </div>
                      <div class="col-6">
                        <strong class="text-muted d-block">Policy Period</strong>
                        <% if policy_data[:start_date] && policy_data[:end_date] %>
                          <%= policy_data[:start_date].strftime("%b %Y") %> - <%= policy_data[:end_date].strftime("%b %Y") %>
                        <% else %>
                          N/A
                        <% end %>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer d-flex justify-content-between">
                    <% case policy_data[:type] %>
                    <% when 'Health Insurance' %>
                      <%= link_to "View Details", admin_health_insurance_path(policy_data[:policy]), class: "btn btn-sm btn-outline-primary" %>
                      <%= link_to "Edit", edit_admin_health_insurance_path(policy_data[:policy]), class: "btn btn-sm btn-outline-warning" %>
                    <% when 'Life Insurance' %>
                      <%= link_to "View Details", admin_life_insurance_path(policy_data[:policy]), class: "btn btn-sm btn-outline-primary" %>
                      <%= link_to "Edit", edit_admin_life_insurance_path(policy_data[:policy]), class: "btn btn-sm btn-outline-warning" %>
                    <% when 'Motor Insurance' %>
                      <%= link_to "View Details", admin_motor_insurance_path(policy_data[:policy]), class: "btn btn-sm btn-outline-primary" %>
                      <%= link_to "Edit", edit_admin_motor_insurance_path(policy_data[:policy]), class: "btn btn-sm btn-outline-warning" %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center text-muted py-5">
            <i class="bi bi-shield-x fs-1 d-block mb-3 text-muted"></i>
            <h5>No Policies Found</h5>
            <p class="mb-3">This customer doesn't have any insurance policies yet.</p>
            <div class="d-flex gap-2 justify-content-center">
              <%= link_to "Add Health Insurance", new_admin_health_insurance_path(customer_id: @customer.id), class: "btn btn-primary" %>
              <%= link_to "Add Life Insurance", new_admin_life_insurance_path(customer_id: @customer.id), class: "btn btn-primary" %>
              <%= link_to "Add Motor Insurance", new_admin_motor_insurance_path(customer_id: @customer.id), class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Family Members -->
    <% if @customer.individual? %>
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Family Members</h5>
          <%= link_to new_admin_customer_family_member_path(@customer), class: "btn btn-sm btn-primary" do %>
            <i class="bi bi-plus me-1"></i>Add Family Member
          <% end %>
        </div>
        <div class="card-body">
          <% if @family_members.any? %>
            <div class="table-responsive">
              <table class="table table-sm mb-0">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Relationship</th>
                    <th>Birth Date</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @family_members.each do |family_member| %>
                    <tr>
                      <td><%= family_member.name %></td>
                      <td>
                        <span class="badge bg-info"><%= family_member.relationship.humanize %></span>
                      </td>
                      <td><%= family_member.birth_date&.strftime("%B %d, %Y") %></td>
                      <td><%= family_member.age %> years</td>
                      <td><%= family_member.gender&.humanize %></td>
                      <td>
                        <div class="d-flex gap-1">
                          <%= link_to edit_admin_customer_family_member_path(@customer, family_member), class: "btn btn-sm btn-outline-warning" do %>
                            <i class="bi bi-pencil"></i>
                          <% end %>
                          <%= link_to admin_customer_family_member_path(@customer, family_member), method: :delete,
                              class: "btn btn-sm btn-outline-danger",
                              data: { confirm: "Are you sure?", turbo_method: :delete } do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center text-muted py-4">
              <i class="bi bi-people fs-3 d-block mb-2"></i>
              <p class="mb-0">No family members added yet</p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Sidebar -->
  <div class="col-lg-4">
    <!-- Quick Stats -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0">Quick Stats</h6>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-6">
            <div class="text-center">
              <h4 class="text-primary mb-1"><%= @all_policies.count %></h4>
              <small class="text-muted">Policies</small>
            </div>
          </div>
          <div class="col-6">
            <div class="text-center">
              <h4 class="text-success mb-1"><%= @family_members.count %></h4>
              <small class="text-muted">Family Members</small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Customer Timeline -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0">Customer Timeline</h6>
      </div>
      <div class="card-body">
        <div class="timeline">
          <div class="timeline-item">
            <div class="timeline-marker bg-success"></div>
            <div class="timeline-content">
              <small class="text-muted">Customer Created</small>
              <div><%= @customer.created_at.strftime("%B %d, %Y at %I:%M %p") %></div>
            </div>
          </div>
          <% if @customer.updated_at != @customer.created_at %>
            <div class="timeline-item">
              <div class="timeline-marker bg-info"></div>
              <div class="timeline-content">
                <small class="text-muted">Last Updated</small>
                <div><%= @customer.updated_at.strftime("%B %d, %Y at %I:%M %p") %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0">Actions</h6>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to edit_admin_customer_path(@customer), class: "btn btn-warning" do %>
            <i class="bi bi-pencil me-1"></i>Edit Customer
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Policies -->
    <% if @all_policies.any? %>
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
          <h6 class="mb-0">Recent Policies</h6>
          <%= link_to policy_chart_admin_customer_path(@customer), class: "btn btn-sm btn-outline-primary" do %>
            View All
          <% end %>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush">
            <% @all_policies.first(5).each do |policy_data| %>
              <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between align-items-start">
                  <div class="flex-grow-1">
                    <h6 class="mb-1">
                      <%= policy_data[:policy_number] %>
                      <span class="badge bg-<%= policy_data[:status] == 'Active' ? 'success' : 'danger' %> ms-2">
                        <%= policy_data[:status] %>
                      </span>
                    </h6>
                    <p class="mb-1 small text-muted"><%= policy_data[:company_name] %></p>
                    <small class="text-muted">
                      <i class="bi bi-shield-check me-1"></i>
                      <%= policy_data[:type] %> •
                      <%= policy_data[:created_at].strftime("%B %d, %Y") %>
                    </small>
                  </div>
                  <div class="text-end">
                    <small class="text-success fw-bold d-block">₹<%= number_with_delimiter(policy_data[:premium].to_i) %></small>
                    <% if policy_data[:end_date] %>
                      <small class="text-muted">
                        Exp: <%= policy_data[:end_date].strftime("%b %Y") %>
                      </small>
                    <% end %>
                  </div>
