            <th class="border-0">Customer</th>
            <th class="border-0">Policy Details</th>
            <th class="border-0">Company & Plan</th>
            <th class="border-0">Coverage</th>
            <th class="border-0">Expired Date</th>
            <th class="border-0">Days Overdue</th>
            <th class="border-0">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @expired_health_insurances.each do |insurance| %>
            <tr>
              <td>
                <div>
                  <h6 class="mb-1"><%= insurance.customer.display_name %></h6>
                  <small class="text-muted"><%= insurance.customer.email %></small>
                  <div><small class="text-muted"><%= insurance.customer.mobile %></small></div>
                </div>
              </td>
              <td>
                <div>
                  <div class="fw-semibold"><%= insurance.policy_number %></div>
                  <span class="badge bg-<%= insurance.policy_type == 'New' ? 'primary' : 'success' %>">
                    <%= insurance.policy_type %>
                  </span>
                  <div><small class="text-muted">Type: <%= insurance.class.name.split('Insurance').first %> Insurance</small></div>
                </div>
              </td>
              <td>
                <div>
                  <div class="fw-semibold"><%= insurance.insurance_company_name %></div>
                  <% if insurance.plan_name.present? %>
                    <small class="text-muted"><%= insurance.plan_name %></small>
                  <% end %>
                </div>
              </td>
              <td>
                <div>
                  <div class="fw-semibold">₹<%= number_with_delimiter(insurance.sum_insured) %></div>
                  <small class="text-muted">Premium: ₹<%= number_with_delimiter(insurance.total_premium) %></small>
                </div>
              </td>
              <td>
                <div>
                  <div class="fw-semibold text-danger"><%= insurance.policy_end_date.strftime("%d %b %Y") %></div>
                  <small class="text-muted">Started: <%= insurance.policy_start_date.strftime("%d %b %Y") %></small>
                </div>
              </td>
              <td>
                <% days_overdue = (Date.current - insurance.policy_end_date).to_i %>
                <span class="badge bg-<%= days_overdue > 30 ? 'danger' : 'warning' %>">
                  <%= days_overdue %> days
                </span>
              </td>
              <td>
                <div class="d-flex gap-1">
                  <%= link_to admin_health_insurance_path(insurance), class: "btn btn-sm btn-outline-primary", title: "View" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <button class="btn btn-sm btn-outline-warning" title="Send Notification" onclick="sendExpiryNotification('<%= insurance.id %>', 'health')">
                    <i class="bi bi-bell"></i>
                  </button>
                  <%= link_to new_admin_health_insurance_path(renewal_from: insurance.id), class: "btn btn-sm btn-outline-success", title: "Renew Now" do %>
                    <i class="bi bi-arrow-repeat"></i>
                  <% end %>
                  <%= link_to "tel:#{insurance.customer.mobile}", class: "btn btn-sm btn-outline-info", title: "Call Customer" do %>
                    <i class="bi bi-telephone"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>

