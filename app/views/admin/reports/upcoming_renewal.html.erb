<!-- Health Insurance Renewals -->
<% if @renewal_health_insurances.any? %>
<div class="card border-0 shadow-sm mb-4">
  <div class="card-header bg-transparent border-0">
    <h5 class="mb-0">
      <i class="bi bi-heart-pulse text-success me-2"></i>
      Health Insurance Renewals (<%= @renewal_health_insurances.count %>)
    </h5>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="bg-light">
          <tr>
            <th class="border-0">Customer</th>
            <th class="border-0">Policy Details</th>
            <th class="border-0">Company & Plan</th>
            <th class="border-0">Coverage</th>
            <th class="border-0">Renewal Date</th>
            <th class="border-0">Days Left</th>
            <th class="border-0">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @renewal_health_insurances.each do |insurance| %>
            <tr>
              <td>
                <div>
                  <h6 class="mb-1"><%= insurance.customer&.display_name || 'Unknown Customer' %></h6>
                  <small class="text-muted"><%= insurance.customer&.email || 'No email' %></small>
                  <div><small class="text-muted"><%= insurance.customer&.mobile || 'No mobile' %></small></div>
                </div>
              </td>
              <td>
                <div>
                  <div class="fw-semibold"><%= insurance.policy_number %></div>
                  <span class="badge bg-<%= insurance.policy_type == 'New' ? 'primary' : 'success' %>">
                    <%= insurance.policy_type %>
                  </span>
                  <div><small class="text-muted">Type: <%= insurance.class.name.split('Insurance').first %> Insurance</small></div>
                </div>
              </td>
              <td>
                <div>
                  <div class="fw-semibold"><%= insurance.insurance_company_name %></div>
                  <% if insurance.plan_name.present? %>
                    <small class="text-muted"><%= insurance.plan_name %></small>
                  <% end %>
                </div>
              </td>
              <td>
                <div>
                  <div class="fw-semibold">₹<%= number_with_delimiter(insurance.sum_insured) %></div>
                  <small class="text-muted">Premium: ₹<%= number_with_delimiter(insurance.total_premium) %></small>
                </div>
              </td>
              <td>
                <div>
                  <div class="fw-semibold"><%= insurance.policy_end_date.strftime("%d %b %Y") %></div>
                  <small class="text-muted">Started: <%= insurance.policy_start_date.strftime("%d %b %Y") %></small>
                </div>
              </td>
              <td>
                <% days_left = insurance.days_until_expiry %>
                <span class="badge bg-<%= days_left <= 7 ? 'danger' : days_left <= 30 ? 'warning' : 'info' %>">
                  <%= days_left %> days
                </span>
              </td>
              <td>
                <div class="d-flex gap-1">
                  <%= link_to admin_health_insurance_path(insurance), class: "btn btn-sm btn-outline-primary", title: "View" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <button class="btn btn-sm btn-outline-warning" title="Send Reminder" onclick="sendIndividualReminder('<%= insurance.id %>', 'health')">
                    <i class="bi bi-bell"></i>
                  </button>
                  <%= link_to new_admin_health_insurance_path(renewal_from: insurance.id), class: "btn btn-sm btn-outline-success", title: "Create Renewal" do %>
                    <i class="bi bi-arrow-repeat"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>

