<div class="page-header">
  <h1>Revenue Analytics</h1>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Total Revenue</h5>
        <h2>₹<%= number_with_delimiter(@total_revenue || 0, delimiter: ',') %></h2>
        <small class="text-muted">In selected period</small>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Total Orders</h5>
        <h2><%= @total_orders %></h2>
        <small class="text-muted">In selected period</small>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Average Order Value</h5>
        <h2>₹<%= number_with_delimiter(@average_order_value || 0, delimiter: ',') %></h2>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h5>Revenue by Day (Last 7 Days)</h5>
      </div>
      <div class="card-body">
        <% if @revenue_by_day && @revenue_by_day.any? %>
          <table class="table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Revenue</th>
              </tr>
            </thead>
            <tbody>
              <% @revenue_by_day.each do |data| %>
                <tr>
                  <td><%= data[:date] %></td>
                  <td>₹<%= number_with_delimiter(data[:revenue] || 0, delimiter: ',') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>No revenue data available for the selected period.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>