<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Upcoming Payments</h2>
    <p class="text-muted mb-0">Payment schedule and reminders for policy renewals</p>
  </div>
  <div class="d-flex gap-2">
    <div class="dropdown">
      <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
        <i class="bi bi-download me-1"></i>
        Export
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-text me-2"></i>Export as CSV</a></li>
        <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-excel me-2"></i>Export as Excel</a></li>
      </ul>
    </div>
    <button class="btn btn-info" onclick="setupAutoReminders()">
      <i class="bi bi-clock me-1"></i>
      Setup Auto-Reminders
    </button>
  </div>
</div>

<!-- Payment Timeline -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">This Week</h6>
            <h3 class="mb-0 text-danger">
              <%= @upcoming_payments&.select { |p| (p.end_date - Date.current).to_i <= 7 }&.count || 0 %>
            </h3>
          </div>
          <div class="bg-danger bg-opacity-10 rounded p-3">
            <i class="bi bi-calendar-week text-danger fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Next Week</h6>
            <h3 class="mb-0 text-warning">
              <%= @upcoming_payments&.select { |p| days = (p.end_date - Date.current).to_i; days > 7 && days <= 14 }&.count || 0 %>
            </h3>
          </div>
          <div class="bg-warning bg-opacity-10 rounded p-3">
            <i class="bi bi-calendar2-week text-warning fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">This Month</h6>
            <h3 class="mb-0 text-info">
              <%= @upcoming_payments&.select { |p| (p.end_date - Date.current).to_i <= 30 }&.count || 0 %>
            </h3>
          </div>
          <div class="bg-info bg-opacity-10 rounded p-3">
            <i class="bi bi-calendar-month text-info fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Amount</h6>
            <h3 class="mb-0 text-success">
              ₹<%= number_with_delimiter(@upcoming_payments&.sum(:total_premium)&.to_i || 0) %>
            </h3>
          </div>
          <div class="bg-success bg-opacity-10 rounded p-3">
            <i class="bi bi-currency-rupee text-success fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Payment Calendar View -->
<div class="card border-0 shadow-sm mb-4">
  <div class="card-header bg-transparent border-0">
    <h5 class="mb-0">
      <i class="bi bi-calendar3 me-2 text-primary"></i>
      Payment Schedule Calendar
    </h5>
  </div>
  <div class="card-body">
    <div class="text-center py-4">
      <div class="placeholder-glow">
        <div class="placeholder col-12 bg-primary bg-opacity-10" style="height: 300px; border-radius: 8px;"></div>
      </div>
      <div class="mt-3">
        <small class="text-muted">
          <i class="bi bi-info-circle me-1"></i>
          Interactive payment calendar will be displayed here
        </small>
      </div>
    </div>
  </div>
</div>

<!-- Upcoming Payments List -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <h5 class="mb-0">Payment Details</h5>
  </div>
  <div class="card-body p-0">
    <% if @upcoming_payments&.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="bg-light">
            <tr>
              <th class="border-0">Customer</th>
              <th class="border-0">Policy Details</th>
              <th class="border-0">Payment Amount</th>
              <th class="border-0">Due Date</th>
              <th class="border-0">Status</th>
              <th class="border-0">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @upcoming_payments.each do |policy| %>
              <tr>
                <td>
                  <div>
                    <h6 class="mb-1"><%= policy.customer&.display_name || 'Unknown Customer' %></h6>
                    <small class="text-muted"><%= policy.customer&.email || 'No email' %></small>
                    <div><small class="text-muted">Mobile: <%= policy.customer&.mobile || 'N/A' %></small></div>
                  </div>
                </td>
                <td>
                  <div>
                    <div class="fw-semibold"><%= policy.policy_number %></div>
                    <span class="badge bg-<%=
                      case policy.insurance_type
                      when 'health' then 'success'
                      when 'life' then 'info'
                      when 'motor' then 'warning'
                      else 'secondary'
                      end
                    %>">
                      <%= policy.insurance_type&.humanize || 'Policy' %>
                    </span>
                    <div><small class="text-muted"><%= policy.plan_name %></small></div>
                  </div>
                </td>
                <td>
                  <div>
                    <div class="fw-semibold text-success">₹<%= number_with_delimiter(policy.total_premium) %></div>
                    <small class="text-muted">Annual Premium</small>
                  </div>
                </td>
                <td>
                  <div>
                    <div class="fw-semibold"><%= policy.end_date&.strftime("%d %b %Y") || 'N/A' %></div>
                    <% days_left = policy.end_date ? (policy.end_date - Date.current).to_i : 0 %>
                    <small class="text-muted">In <%= days_left %> days</small>
                  </div>
                </td>
                <td>
                  <% days_left = policy.end_date ? (policy.end_date - Date.current).to_i : 0 %>
                  <div>
                    <span class="badge bg-<%=
                      case days_left
                      when 0..7 then 'danger'
                      when 8..15 then 'warning'
                      else 'info'
                      end
                    %>">
                      <%=
                        case days_left
                        when 0..7 then 'Urgent'
                        when 8..15 then 'Soon'
                        else 'Scheduled'
                        end
                      %>
                    </span>
                    <div>
                      <small class="text-muted">
                        <% if days_left <= 7 %>
                          <i class="bi bi-exclamation-triangle text-danger"></i> Needs immediate attention
                        <% elsif days_left <= 15 %>
                          <i class="bi bi-clock text-warning"></i> Send reminder soon
                        <% else %>
                          <i class="bi bi-calendar text-info"></i> On schedule
                        <% end %>
                      </small>
                    </div>
                  </div>
                </td>
                <td>
                  <div class="d-flex gap-1">
                    <button class="btn btn-sm btn-outline-primary" title="View Policy">
                      <i class="bi bi-eye"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-warning" title="Send Reminder" onclick="sendPaymentReminder('<%= policy.id %>')">
                      <i class="bi bi-bell"></i>
                    </button>
                    <% if policy.customer&.email %>
                      <%= link_to "mailto:#{policy.customer.email}", class: "btn btn-sm btn-outline-success", title: "Send Email" do %>
                        <i class="bi bi-envelope"></i>
                      <% end %>
                    <% end %>
                    <button class="btn btn-sm btn-outline-info" title="Schedule Reminder" onclick="scheduleReminder('<%= policy.id %>')">
                      <i class="bi bi-calendar-plus"></i>
                    </button>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="bi bi-calendar-check fs-1 text-success d-block mb-3"></i>
        <h5 class="text-muted">No upcoming payments</h5>
        <p class="text-muted mb-3">
          All policies are current with no upcoming payment deadlines.
        </p>
        <%= link_to "View Payment History", admin_reports_commission_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .placeholder {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: loading 1.5s infinite;
  }

  @keyframes loading {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }
</style>

<script>
function setupAutoReminders() {
  if (confirm('Would you like to setup automatic payment reminders for customers?')) {
    alert('Feature coming soon! This will allow you to configure automatic reminder schedules.');
  }
}

function sendPaymentReminder(policyId) {
  if (confirm('Send payment reminder to this customer?')) {
    alert(`Feature coming soon! Payment reminder will be sent for policy ID: ${policyId}`);
  }
}

function scheduleReminder(policyId) {
  if (confirm('Schedule a future reminder for this policy?')) {
    alert(`Feature coming soon! This will open a scheduler for policy ID: ${policyId}`);
  }
}
</script>