<%- content_for :title, "Client Request ##{@client_request.id}" %>

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Request from <%= @client_request.name %></h2>
    <p class="text-muted mb-0">
      <%= link_to "Client Requests", admin_client_requests_path, class: "text-muted text-decoration-none" %> / Request #<%= @client_request.id %>
    </p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to admin_client_requests_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to List
    <% end %>
    <%= link_to edit_admin_client_request_path(@client_request), class: "btn btn-primary" do %>
      <i class="bi bi-pencil me-1"></i>
      Edit Request
    <% end %>
  </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Status</h6>
            <h4 class="mb-0 text-<%= @client_request.status == 'resolved' ? 'success' : (@client_request.status == 'pending' ? 'warning' : 'info') %>">
              <%= @client_request.status.humanize %>
            </h4>
          </div>
          <div class="bg-<%= @client_request.status == 'resolved' ? 'success' : (@client_request.status == 'pending' ? 'warning' : 'info') %> bg-opacity-10 rounded p-3">
            <i class="bi bi-<%= @client_request.status == 'resolved' ? 'check-circle' : (@client_request.status == 'pending' ? 'clock' : 'play-circle') %> text-<%= @client_request.status == 'resolved' ? 'success' : (@client_request.status == 'pending' ? 'warning' : 'info') %> fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Priority</h6>
            <h4 class="mb-0 text-<%= @client_request.priority == 'urgent' ? 'danger' : (@client_request.priority == 'high' ? 'warning' : 'primary') %>">
              <%= @client_request.priority.humanize %>
            </h4>
          </div>
          <div class="bg-<%= @client_request.priority == 'urgent' ? 'danger' : (@client_request.priority == 'high' ? 'warning' : 'primary') %> bg-opacity-10 rounded p-3">
            <i class="bi bi-<%= @client_request.priority == 'urgent' ? 'exclamation-triangle' : (@client_request.priority == 'high' ? 'arrow-up-circle' : 'flag') %> text-<%= @client_request.priority == 'urgent' ? 'danger' : (@client_request.priority == 'high' ? 'warning' : 'primary') %> fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Days Open</h6>
            <h4 class="mb-0 text-primary"><%= @client_request.days_since_submission %></h4>
          </div>
          <div class="bg-primary bg-opacity-10 rounded p-3">
            <i class="bi bi-calendar-event text-primary fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Submitted</h6>
            <h6 class="mb-0 text-muted"><%= @client_request.submitted_at.strftime("%b %d, %Y") %></h6>
            <small class="text-muted"><%= @client_request.submitted_at.strftime("%I:%M %p") %></small>
          </div>
          <div class="bg-info bg-opacity-10 rounded p-3">
            <i class="bi bi-clock-history text-info fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Main Content -->
  <div class="col-lg-8">
    <!-- Request Details Card -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Request Details</h5>
          <div>
            <span class="badge <%= @client_request.status_badge_class %> me-2"><%= @client_request.status.humanize %></span>
            <span class="badge <%= @client_request.priority_badge_class %>"><%= @client_request.priority.humanize %> Priority</span>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label fw-bold text-muted">Customer Name</label>
            <div class="d-flex align-items-center">
              <i class="bi bi-person text-primary me-2"></i>
              <h6 class="mb-0"><%= @client_request.name %></h6>
            </div>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-bold text-muted">Email Address</label>
            <div class="d-flex align-items-center">
              <i class="bi bi-envelope text-success me-2"></i>
              <a href="mailto:<%= @client_request.email %>" class="text-decoration-none">
                <%= @client_request.email %>
              </a>
            </div>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label fw-bold text-muted">Phone Number</label>
            <div class="d-flex align-items-center">
              <% if @client_request.phone_number.present? %>
                <i class="bi bi-telephone text-info me-2"></i>
                <a href="tel:<%= @client_request.phone_number %>" class="text-decoration-none">
                  <%= @client_request.phone_number %>
                </a>
              <% else %>
                <i class="bi bi-telephone-x text-muted me-2"></i>
                <span class="text-muted">Not provided</span>
              <% end %>
            </div>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-bold text-muted">Submission Date</label>
            <div class="d-flex align-items-center">
              <i class="bi bi-calendar-check text-warning me-2"></i>
              <span>
                <%= @client_request.submitted_at.strftime("%B %d, %Y") %>
                <small class="text-muted">at <%= @client_request.submitted_at.strftime("%I:%M %p") %></small>
              </span>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold text-muted">Request Description</label>
          <div class="border rounded p-3 bg-light">
            <i class="bi bi-chat-text text-primary me-2"></i>
            <%= simple_format(@client_request.description) %>
          </div>
        </div>

        <% if @client_request.admin_response.present? %>
          <div class="mb-3">
            <label class="form-label fw-bold text-muted">Admin Response</label>
            <div class="border rounded p-3 bg-success-subtle">
              <i class="bi bi-reply text-success me-2"></i>
              <%= simple_format(@client_request.admin_response) %>
            </div>
          </div>
        <% end %>

        <% if @client_request.resolved_at.present? %>
          <div class="mb-3">
            <label class="form-label fw-bold text-muted">Resolution Date</label>
            <div class="d-flex align-items-center">
              <i class="bi bi-check-circle text-success me-2"></i>
              <span>
                <%= @client_request.resolved_at.strftime("%B %d, %Y") %>
                <small class="text-muted">at <%= @client_request.resolved_at.strftime("%I:%M %p") %></small>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Response Form Card -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">
          <i class="bi bi-chat-dots me-2"></i>
          Add Response
        </h5>
      </div>
      <div class="card-body">
        <%= form_with model: @client_request, url: admin_client_request_path(@client_request), method: :patch, local: true do |form| %>
          <div class="mb-3">
            <label class="form-label fw-bold">Response Message</label>
            <%= form.text_area :admin_response, class: "form-control", rows: 4,
                placeholder: "Add your response to the customer...",
                value: @client_request.admin_response %>
          </div>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label fw-bold">Status</label>
              <%= form.select :status, options_for_select([
                    ['Pending', 'pending'],
                    ['In Progress', 'in_progress'],
                    ['Resolved', 'resolved'],
                    ['Closed', 'closed']
                  ], @client_request.status), {}, { class: "form-select" } %>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label fw-bold">Priority</label>
              <%= form.select :priority, options_for_select([
                    ['Low', 'low'],
                    ['Medium', 'medium'],
                    ['High', 'high'],
                    ['Urgent', 'urgent']
                  ], @client_request.priority), {}, { class: "form-select" } %>
            </div>
          </div>
          <div class="d-flex gap-2">
            <%= form.submit "Update Request", class: "btn btn-primary" do %>
              <i class="bi bi-check me-1"></i>
              Update Request
            <% end %>
            <button type="button" class="btn btn-success" onclick="updateAndResolve()">
              <i class="bi bi-check-circle me-1"></i>
              Resolve & Close
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="col-lg-4">
    <!-- Quick Actions Card -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">
          <i class="bi bi-lightning me-2"></i>
          Quick Actions
        </h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <button class="btn btn-outline-warning" onclick="updateStatus('pending')">
            <i class="bi bi-clock me-2"></i> Mark as Pending
          </button>
          <button class="btn btn-outline-info" onclick="updateStatus('in_progress')">
            <i class="bi bi-play-circle me-2"></i> Start Progress
          </button>
          <button class="btn btn-outline-success" onclick="updateStatus('resolved')">
            <i class="bi bi-check-circle me-2"></i> Mark Resolved
          </button>
          <button class="btn btn-outline-secondary" onclick="updateStatus('closed')">
            <i class="bi bi-x-circle me-2"></i> Close Request
          </button>
        </div>
      </div>
    </div>

    <!-- Contact Actions Card -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">
          <i class="bi bi-telephone me-2"></i>
          Contact Customer
        </h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <a href="mailto:<%= @client_request.email %>?subject=Re: Your Support Request" class="btn btn-outline-primary">
            <i class="bi bi-envelope me-2"></i> Send Email
          </a>
          <% if @client_request.phone_number.present? %>
            <a href="tel:<%= @client_request.phone_number %>" class="btn btn-outline-success">
              <i class="bi bi-telephone me-2"></i> Call Customer
            </a>
          <% else %>
            <button class="btn btn-outline-secondary disabled">
              <i class="bi bi-telephone-x me-2"></i> No Phone Number
            </button>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Request Summary Card -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">
          <i class="bi bi-info-circle me-2"></i>
          Request Summary
        </h5>
      </div>
      <div class="card-body">
        <div class="row g-2">
          <div class="col-6">
            <div class="bg-light rounded p-3 text-center">
              <div class="fs-5 fw-bold text-primary"><%= @client_request.days_since_submission %></div>
              <small class="text-muted">Days Open</small>
            </div>
          </div>
          <div class="col-6">
            <div class="bg-light rounded p-3 text-center">
              <div class="fs-6 fw-bold text-<%= @client_request.status == 'resolved' ? 'success' : 'muted' %>">
                <%= @client_request.status.humanize %>
              </div>
              <small class="text-muted">Status</small>
            </div>
          </div>
          <div class="col-6">
            <div class="bg-light rounded p-3 text-center">
              <div class="fs-6 fw-bold text-<%= @client_request.priority == 'urgent' ? 'danger' : (@client_request.priority == 'high' ? 'warning' : 'primary') %>">
                <%= @client_request.priority.humanize %>
              </div>
              <small class="text-muted">Priority</small>
            </div>
          </div>
          <div class="col-6">
            <div class="bg-light rounded p-3 text-center">
              <div class="fs-6 fw-bold text-info">
                <%= @client_request.submitted_at.strftime("%b %d") %>
              </div>
              <small class="text-muted">Submitted</small>
            </div>
          </div>
        </div>

        <% if @client_request.resolved_by.present? %>
          <div class="mt-3 pt-3 border-top">
            <small class="text-muted d-block">Assigned To</small>
            <div class="d-flex align-items-center mt-1">
              <i class="bi bi-person-check text-success me-2"></i>
              <strong><%= @client_request.resolved_by.email %></strong>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
function updateStatus(status) {
  fetch(`/admin/client_requests/<%= @client_request.id %>/update_status`, {
    method: 'PATCH',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
    },
    body: JSON.stringify({ status: status })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload();
    } else {
      alert('Error updating status: ' + data.message);
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('An error occurred while updating status');
  });
}

function updateAndResolve() {
  const form = document.querySelector('form');
  const statusSelect = form.querySelector('select[name="client_request[status]"]');
  statusSelect.value = 'resolved';
  form.submit();
}
</script>