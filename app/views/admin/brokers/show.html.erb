<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Broker Details</h2>
    <p class="text-muted mb-0">View broker information and statistics</p>
  </div>
  <div>
    <%= link_to admin_brokers_path, class: "btn btn-outline-secondary me-2" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Brokers
    <% end %>
    <%= link_to edit_admin_broker_path(@broker), class: "btn btn-primary" do %>
      <i class="bi bi-pencil me-1"></i>
      Edit Broker
    <% end %>
  </div>
</div>

<!-- Broker Information -->
<div class="row">
  <div class="col-md-8">
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0 d-flex align-items-center">
        <i class="bi bi-briefcase-fill me-2 text-primary"></i>
        <h5 class="mb-0">Broker Information</h5>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-sm-4">
            <strong class="text-muted">
              <i class="bi bi-building me-1"></i>
              Broker Name
            </strong>
          </div>
          <div class="col-sm-8">
            <span class="h6"><%= @broker.name %></span>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-4">
            <strong class="text-muted">
              <i class="bi bi-toggle-on me-1"></i>
              Status
            </strong>
          </div>
          <div class="col-sm-8">
            <% if @broker.status == 'active' %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle me-1"></i>
                Active
              </span>
            <% else %>
              <span class="badge bg-danger">
                <i class="bi bi-x-circle me-1"></i>
                Inactive
              </span>
            <% end %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-4">
            <strong class="text-muted">
              <i class="bi bi-calendar-plus me-1"></i>
              Created
            </strong>
          </div>
          <div class="col-sm-8">
            <span><%= @broker.created_at.strftime("%B %d, %Y") %></span>
          </div>
        </div>

        <div class="row mb-0">
          <div class="col-sm-4">
            <strong class="text-muted">
              <i class="bi bi-calendar-check me-1"></i>
              Last Updated
            </strong>
          </div>
          <div class="col-sm-8">
            <span><%= @broker.updated_at.strftime("%B %d, %Y") %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <!-- Statistics Card -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0 d-flex align-items-center">
        <i class="bi bi-bar-chart-fill me-2 text-success"></i>
        <h5 class="mb-0">Quick Stats</h5>
      </div>
      <div class="card-body">
        <!-- Add statistics here when available -->
        <div class="text-center text-muted py-3">
          <i class="bi bi-graph-up fs-2 mb-2 d-block"></i>
          <small>Statistics will be available when policies are linked to this broker</small>
        </div>
      </div>
    </div>

    <!-- Action Card -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0 d-flex align-items-center">
        <i class="bi bi-gear-fill me-2 text-warning"></i>
        <h5 class="mb-0">Actions</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to edit_admin_broker_path(@broker), class: "btn btn-outline-primary" do %>
            <i class="bi bi-pencil me-1"></i>
            Edit Broker
          <% end %>

          <%= link_to toggle_status_admin_broker_path(@broker), method: :patch, class: "btn btn-outline-#{@broker.status == 'active' ? 'warning' : 'success'}",
              confirm: "Are you sure you want to #{@broker.status == 'active' ? 'deactivate' : 'activate'} this broker?" do %>
            <i class="bi bi-toggle-<%= @broker.status == 'active' ? 'off' : 'on' %> me-1"></i>
            <%= @broker.status == 'active' ? 'Deactivate' : 'Activate' %>
          <% end %>

          <%= link_to admin_broker_path(@broker),
              data: {
                "turbo-method": "delete",
                "turbo-confirm": "Are you sure you want to delete this broker? This action cannot be undone."
              },
              class: "btn btn-outline-danger" do %>
            <i class="bi bi-trash me-1"></i>
            Delete Broker
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.card {
  border-radius: 16px;
}

.card-header {
  border-radius: 16px 16px 0 0 !important;
}

.btn {
  border-radius: 10px;
  font-weight: 500;
}

.badge {
  border-radius: 8px;
  padding: 8px 12px;
  font-size: 14px;
}
</style>