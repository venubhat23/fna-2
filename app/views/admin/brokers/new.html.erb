<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Add New Broker</h2>
    <p class="text-muted mb-0">Enter the broker name to create a new broker</p>
  </div>
  <div>
    <%= link_to admin_brokers_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Brokers
    <% end %>
  </div>
</div>

<!-- Error Display -->
<% if @broker.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <div class="d-flex align-items-center">
      <i class="bi bi-exclamation-triangle-fill me-2"></i>
      <div>
        <h6 class="mb-1"><%= pluralize(@broker.errors.count, "error") %> prohibited this broker from being saved:</h6>
        <ul class="mb-0">
          <% @broker.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<%= form_with model: [:admin, @broker], local: true, class: "needs-validation", novalidate: true, data: { turbo: false } do |form| %>

  <!-- Broker Information -->
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-transparent border-0 d-flex align-items-center">
      <i class="bi bi-briefcase-fill me-2 text-primary"></i>
      <h5 class="mb-0">Broker Information</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-8">
          <div class="mb-4">
            <%= form.label :name, class: "form-label" do %>
              <i class="bi bi-building me-2 text-primary"></i>
              Broker Name <span class="text-danger">*</span>
            <% end %>
            <%= form.text_field :name,
                class: "form-control form-control-lg",
                placeholder: "Enter broker or brokerage firm name",
                required: true,
                autocomplete: "off" %>
            <small class="form-text text-muted">
              <i class="bi bi-info-circle me-1"></i>
              Enter the full name of the brokerage firm or individual broker
            </small>
            <div class="invalid-feedback">
              Please provide a valid broker name.
            </div>
          </div>
        </div>
      </div>

      <!-- Information Alert -->
      <div class="alert alert-info" role="alert">
        <div class="d-flex">
          <i class="bi bi-lightbulb-fill me-2 text-info"></i>
          <div>
            <strong>Note:</strong> The broker will be created with active status by default and will be available for customer assignments.
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="card border-0 shadow-sm">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <small class="text-muted">
            <i class="bi bi-info-circle me-1"></i>
            All fields marked with <span class="text-danger">*</span> are required
          </small>
        </div>
        <div class="d-flex gap-2">
          <%= link_to admin_brokers_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-x-lg me-1"></i>
            Cancel
          <% end %>
          <%= form.submit "Create Broker", class: "btn btn-primary px-4" do %>
            <i class="bi bi-plus-lg me-1"></i>
            Create Broker
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% end %>

<style>
.form-control-lg, .form-select-lg {
  border-radius: 12px;
  border: 2px solid #e9ecef;
  padding: 12px 16px;
  font-size: 16px;
  transition: all 0.3s ease;
}

.form-control-lg:focus, .form-select-lg:focus {
  border-color: #0d6efd;
  box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.1);
  transform: translateY(-2px);
}

.card {
  border-radius: 16px;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1) !important;
}

.card-header {
  border-radius: 16px 16px 0 0 !important;
  background: linear-gradient(135deg, rgba(13, 110, 253, 0.05) 0%, rgba(13, 110, 253, 0.1) 100%) !important;
}

.btn {
  border-radius: 10px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.alert {
  border-radius: 12px;
  border: none;
}

.form-label {
  font-weight: 600;
  color: #495057;
  margin-bottom: 8px;
}

.form-text {
  font-size: 13px;
}

.invalid-feedback {
  font-size: 13px;
  margin-top: 4px;
}

/* Enhanced focus styles */
.form-control-lg:focus {
  border-color: #0d6efd !important;
  box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15) !important;
}

/* Animated placeholder */
.form-control-lg::placeholder {
  color: #6c757d;
  opacity: 0.7;
  transition: all 0.3s ease;
}

.form-control-lg:focus::placeholder {
  opacity: 0.5;
  transform: translateX(10px);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Bootstrap form validation
  const forms = document.querySelectorAll('.needs-validation');

  Array.from(forms).forEach(function(form) {
    form.addEventListener('submit', function(event) {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add('was-validated');
    });
  });

  // Focus on first input with enhanced animation
  const firstInput = document.querySelector('input[type="text"]');
  if (firstInput) {
    setTimeout(() => {
      firstInput.focus();
      firstInput.select();
    }, 300);
  }

  // Real-time validation
  const nameInput = document.querySelector('#broker_name');
  if (nameInput) {
    nameInput.addEventListener('input', function() {
      if (this.value.length >= 2) {
        this.classList.add('is-valid');
        this.classList.remove('is-invalid');
      } else {
        this.classList.add('is-invalid');
        this.classList.remove('is-valid');
      }
    });
  }
});
</script>