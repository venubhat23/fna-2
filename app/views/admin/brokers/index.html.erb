<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Broker Management</h2>
    <p class="text-muted mb-0">Manage and track all brokers in the system</p>
  </div>
  <div class="d-flex gap-2">
    <div class="dropdown">
      <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
        <i class="bi bi-download me-1"></i>
        Export
      </button>
      <ul class="dropdown-menu">
        <li><a href="#" class="dropdown-item">Export as CSV</a></li>
        <li><a href="#" class="dropdown-item">Export as Excel</a></li>
      </ul>
    </div>
    <%= link_to new_admin_broker_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Add New Broker
    <% end %>
  </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Total Brokers</h6>
            <h3 class="mb-0 text-primary"><%= number_with_delimiter(@total_brokers) %></h3>
          </div>
          <div class="bg-primary bg-opacity-10 rounded p-3">
            <i class="bi bi-briefcase text-primary fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Active Brokers</h6>
            <h3 class="mb-0 text-success"><%= number_with_delimiter(@active_brokers) %></h3>
          </div>
          <div class="bg-success bg-opacity-10 rounded p-3">
            <i class="bi bi-check-circle text-success fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-4 col-md-6 mb-3">
    <div class="card h-100 border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="text-muted mb-2">Inactive Brokers</h6>
            <h3 class="mb-0 text-warning"><%= number_with_delimiter(@inactive_brokers) %></h3>
          </div>
          <div class="bg-warning bg-opacity-10 rounded p-3">
            <i class="bi bi-x-circle text-warning fs-4"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Search and Filters -->
<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: admin_brokers_path, method: :get, local: true, class: "d-flex flex-wrap gap-3 align-items-end", id: "search_form" do |form| %>
      <!-- Search -->
      <div class="flex-grow-1 min-width-250">
        <%= form.text_field :search, placeholder: "Search by broker name... (min 3 characters)",
                           value: params[:search],
                           class: "form-control",
                           id: "search_input",
                           data: { min_length: 3 } %>
      </div>

      <!-- Actions -->
      <div class="d-flex gap-2">
        <%= link_to "Clear", admin_brokers_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<style>
.min-width-250 {
  min-width: 250px;
}
</style>

<div id="brokers-table">
  <%= render 'brokers_table', brokers: @brokers, total_filtered_count: @total_filtered_count %>
</div>

<style>
.table-responsive {
  border-radius: 8px;
  overflow: hidden;
}

.table th {
  background-color: #f8f9fa;
  border: none;
  font-weight: 600;
  color: #495057;
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  padding: 1rem 0.75rem;
}

.table td {
  border: none;
  border-bottom: 1px solid #f1f3f4;
  padding: 1rem 0.75rem;
  vertical-align: middle;
}

.table tbody tr:hover {
  background-color: #f8f9fa;
}

.badge {
  font-weight: 500;
  font-size: 0.75rem;
  padding: 0.375rem 0.75rem;
}

.btn-sm {
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
}

/* Pagination styling */
.pagination-wrapper .pagination {
  margin-bottom: 0;
}

.pagination-wrapper .pagination .page-link {
  border-radius: 6px;
  margin: 0 2px;
  border: 1px solid #dee2e6;
  color: #6c757d;
  font-size: 0.875rem;
}

.pagination-wrapper .pagination .page-item.active .page-link {
  background-color: #0d6efd;
  border-color: #0d6efd;
}

.pagination-wrapper .pagination .page-link:hover {
  background-color: #f8f9fa;
  border-color: #dee2e6;
  color: #0d6efd;
}

@media (max-width: 576px) {
  .pagination-wrapper .pagination {
    justify-content: center;
    font-size: 0.8rem;
  }

  .card-footer .d-flex {
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('search_input');
  const searchForm = document.getElementById('search_form');
  let searchTimeout;

  // Auto-search on typing after 3 characters
  if (searchInput) {
    searchInput.addEventListener('input', function() {
      clearTimeout(searchTimeout);
      const searchValue = this.value;

      searchTimeout = setTimeout(() => {
        if (searchValue.length >= 3 || searchValue.length === 0) {
          searchForm.submit();
        }
      }, 500); // 500ms delay after typing stops
    });
  }
});
</script>