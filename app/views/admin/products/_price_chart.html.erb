<!-- Price Chart Sidebar -->
<div class="price-chart-sidebar">
  <div class="card border-0 shadow-lg h-100">
    <div class="card-header bg-gradient-primary text-white">
      <div class="d-flex align-items-center">
        <div class="price-chart-icon">
          <i class="bi bi-graph-up-arrow fs-4"></i>
        </div>
        <div class="ms-3">
          <h5 class="mb-0 fw-bold">Price Tracking</h5>
          <small class="opacity-75">Real-time price monitoring</small>
        </div>
      </div>
    </div>

    <div class="card-body p-0">
      <!-- Current Price Display -->
      <div class="price-display-section">
        <div class="current-price-container">
          <div class="price-main">
            <span class="currency-symbol">₹</span>
            <span class="price-value"><%= @product.today_price || @product.price %></span>
          </div>
          <div class="price-label">Current Price</div>
        </div>

        <% if @product.yesterday_price.present? %>
          <div class="price-change-indicator">
            <div class="change-badge <%= @product.price_trend == 'up' ? 'price-up' : (@product.price_trend == 'down' ? 'price-down' : 'price-stable') %>">
              <i class="bi <%= @product.price_trend_icon %> me-1"></i>
              <span class="change-amount"><%= @product.formatted_price_change %></span>
              <span class="change-percentage">(<%= @product.price_change_percentage_formatted %>)</span>
            </div>
            <small class="change-timeframe">Since yesterday</small>
          </div>
        <% else %>
          <div class="price-change-indicator">
            <div class="change-badge price-stable">
              <i class="bi bi-dash me-1"></i>
              <span class="change-amount">No change data</span>
            </div>
            <small class="change-timeframe">Price tracking started</small>
          </div>
        <% end %>
      </div>

      <!-- Price Comparison Table -->
      <div class="price-comparison-section">
        <h6 class="section-title">
          <i class="bi bi-bar-chart-line me-2"></i>
          Price Comparison
        </h6>

        <div class="comparison-table">
          <div class="comparison-row">
            <div class="comparison-label">
              <div class="label-icon today"></div>
              <span>Today's Price</span>
            </div>
            <div class="comparison-value">
              <span class="price-amount"><%= @product.formatted_today_price %></span>
            </div>
          </div>

          <div class="comparison-row">
            <div class="comparison-label">
              <div class="label-icon yesterday"></div>
              <span>Yesterday's Price</span>
            </div>
            <div class="comparison-value">
              <span class="price-amount">
                <%= @product.yesterday_price.present? ? @product.formatted_yesterday_price : 'N/A' %>
              </span>
            </div>
          </div>

          <% if @product.yesterday_price.present? %>
            <div class="comparison-row highlight">
              <div class="comparison-label">
                <div class="label-icon change"></div>
                <span>Price Change</span>
              </div>
              <div class="comparison-value">
                <span class="price-amount <%= @product.price_trend_class %>">
                  <%= @product.formatted_price_change %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Mini Price Chart -->
      <% if @product.get_price_history_array.length > 1 %>
        <div class="mini-chart-section">
          <h6 class="section-title">
            <i class="bi bi-graph-up me-2"></i>
            Price Trend (Last 7 Days)
          </h6>

          <div class="mini-chart-container">
            <canvas id="price-chart-<%= @product.id %>" width="280" height="120"></canvas>
          </div>

          <div class="chart-stats">
            <div class="stat-item">
              <small class="stat-label">Trend</small>
              <div class="stat-value <%= @product.price_trend_class %>">
                <i class="bi <%= @product.price_trend_icon %> me-1"></i>
                <%= @product.price_trend.humanize %>
              </div>
            </div>
            <div class="stat-item">
              <small class="stat-label">Change</small>
              <div class="stat-value <%= @product.price_trend_class %>">
                <%= @product.price_change_percentage_formatted %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="mini-chart-section">
          <h6 class="section-title">
            <i class="bi bi-graph-up me-2"></i>
            Price Trend
          </h6>

          <div class="no-data-message">
            <div class="no-data-icon">
              <i class="bi bi-graph-up text-muted"></i>
            </div>
            <p class="text-muted mb-0">
              Not enough data to show price trend.<br>
              <small>Chart will appear after a few price updates.</small>
            </p>
          </div>
        </div>
      <% end %>

      <!-- Price Insights -->
      <div class="price-insights-section">
        <h6 class="section-title">
          <i class="bi bi-lightbulb me-2"></i>
          Price Insights
        </h6>

        <div class="insights-list">
          <% if @product.discounted? %>
            <div class="insight-item discount">
              <div class="insight-icon">
                <i class="bi bi-tag-fill"></i>
              </div>
              <div class="insight-content">
                <div class="insight-title">Active Discount</div>
                <div class="insight-desc"><%= @product.discount_percentage.round(0) %>% off original price</div>
              </div>
            </div>
          <% end %>

          <% if @product.yesterday_price.present? %>
            <% if @product.price_trend == 'up' %>
              <div class="insight-item price-increase">
                <div class="insight-icon">
                  <i class="bi bi-arrow-up-circle"></i>
                </div>
                <div class="insight-content">
                  <div class="insight-title">Price Increased</div>
                  <div class="insight-desc">Price went up by <%= @product.price_change_percentage_formatted %></div>
                </div>
              </div>
            <% elsif @product.price_trend == 'down' %>
              <div class="insight-item price-decrease">
                <div class="insight-icon">
                  <i class="bi bi-arrow-down-circle"></i>
                </div>
                <div class="insight-content">
                  <div class="insight-title">Price Dropped</div>
                  <div class="insight-desc">Great time to buy! Down <%= @product.price_change_percentage_formatted %></div>
                </div>
              </div>
            <% else %>
              <div class="insight-item price-stable">
                <div class="insight-icon">
                  <i class="bi bi-dash-circle"></i>
                </div>
                <div class="insight-content">
                  <div class="insight-title">Price Stable</div>
                  <div class="insight-desc">No price change since yesterday</div>
                </div>
              </div>
            <% end %>
          <% end %>

          <% if @product.stock <= 5 && @product.stock > 0 %>
            <div class="insight-item low-stock">
              <div class="insight-icon">
                <i class="bi bi-exclamation-triangle"></i>
              </div>
              <div class="insight-content">
                <div class="insight-title">Low Stock Alert</div>
                <div class="insight-desc">Only <%= @product.stock %> items remaining</div>
              </div>
            </div>
          <% elsif @product.stock == 0 %>
            <div class="insight-item out-of-stock">
              <div class="insight-icon">
                <i class="bi bi-x-circle"></i>
              </div>
              <div class="insight-content">
                <div class="insight-title">Out of Stock</div>
                <div class="insight-desc">Product currently unavailable</div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="card-footer bg-light border-0">
      <div class="footer-stats">
        <small class="text-muted">
          <i class="bi bi-clock me-1"></i>
          Last updated: <%= @product.last_price_update ? time_ago_in_words(@product.last_price_update) + ' ago' : 'Never' %>
        </small>
      </div>
    </div>
  </div>
</div>

