  .price-display-section, .price-comparison-section, .mini-chart-section, .price-insights-section {
    padding: 16px 20px;
  }

  .price-value {
    font-size: 28px;
  }

  .comparison-row {
    padding: 10px 12px;
  }
}
</style>

<% if @product.get_price_history_array.length > 1 %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('price-chart-<%= @product.id %>').getContext('2d');
    const priceHistory = <%= @product.get_price_history_array.to_json.html_safe %>;

    if (priceHistory.length > 1) {
      // Get last 7 days of data
      const last7Days = priceHistory.slice(-7);

      const labels = last7Days.map(item => {
        const date = new Date(item.date);
        return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
      });

      const data = last7Days.map(item => item.price);

      const chart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: labels,
          datasets: [{
            label: 'Price',
            data: data,
            borderColor: '#667eea',
            backgroundColor: 'rgba(102, 126, 234, 0.1)',
            borderWidth: 3,
            fill: true,
            tension: 0.4,
            pointBackgroundColor: '#667eea',
            pointBorderColor: '#ffffff',
            pointBorderWidth: 2,
            pointRadius: 4,
            pointHoverRadius: 6
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false
            }
          },
          scales: {
            x: {
              grid: {
                display: false
              },
              ticks: {
                font: {
                  size: 10
                },
                color: '#6b7280'
              }
            },
            y: {
              grid: {
                color: 'rgba(107, 114, 128, 0.1)'
              },
              ticks: {
                font: {
                  size: 10
                },
                color: '#6b7280',
                callback: function(value) {
                  return '₹' + value;
                }
              }
            }
          },
          elements: {
            point: {
              hoverBackgroundColor: '#667eea'
            }
          }
        }
      });
    }
  });
  </script>
<% end %>