<style>
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(8px);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease-in-out;
}

.loading-overlay.show {
  opacity: 1;
}

.loading-container {
  text-align: center;
  padding: 3rem 2rem;
  background: white;
  border-radius: 20px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  border: 1px solid #e9ecef;
  max-width: 400px;
  width: 90%;
  animation: slideUp 0.5s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(50px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.loading-animation {
  position: relative;
  margin-bottom: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120px;
}

.loading-spinner {
  position: absolute;
  width: 100px;
  height: 100px;
}

.spinner-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 3px solid transparent;
  border-radius: 50%;
  animation: spin 2s linear infinite;
}

.spinner-ring:nth-child(1) {
  border-top-color: #0d6efd;
  animation-delay: 0s;
  width: 100px;
  height: 100px;
}

.spinner-ring:nth-child(2) {
  border-top-color: #198754;
  animation-delay: -0.4s;
  width: 80px;
  height: 80px;
  top: 10px;
  left: 10px;
}

.spinner-ring:nth-child(3) {
  border-top-color: #fd7e14;
  animation-delay: -0.8s;
  width: 60px;
  height: 60px;
  top: 20px;
  left: 20px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 2.5rem;
  color: #0d6efd;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.8;
  }
}

.loading-content {
  margin-top: 1rem;
}

.loading-title {
  color: #212529;
  font-weight: 600;
  margin-bottom: 0.5rem;
  font-size: 1.5rem;
