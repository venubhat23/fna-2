<script>
document.addEventListener('DOMContentLoaded', function() {
  // Auto-select category from URL parameter
  const urlParams = new URLSearchParams(window.location.search);
  const categoryId = urlParams.get('category_id');

  if (categoryId) {
    const categorySelect = document.getElementById('product_category_id');
    if (categorySelect) {
      // Set the selected option
      categorySelect.value = categoryId;

      // Trigger change event if needed for any listeners
      categorySelect.dispatchEvent(new Event('change'));

      // Also update the visual appearance if using custom styling
      const selectedOption = categorySelect.querySelector(`option[value="${categoryId}"]`);
      if (selectedOption) {
        console.log(`Category "${selectedOption.text}" automatically selected from URL parameter`);
      }
    }
  }

  const form = document.querySelector('form[data-remote]') || document.querySelector('form');
  const loadingOverlay = document.getElementById('loading-overlay');
  const progressBar = loadingOverlay.querySelector('.progress-bar');

  if (form && loadingOverlay) {
    form.addEventListener('submit', function(e) {
      // Show loading overlay
      loadingOverlay.style.display = 'flex';
      setTimeout(() => loadingOverlay.classList.add('show'), 10);

      // Animate progress bar
      let progress = 0;
      const progressInterval = setInterval(() => {
        progress += Math.random() * 15;
        if (progress > 90) {
          progress = 90; // Keep at 90% until actual completion
          clearInterval(progressInterval);
        }
        progressBar.style.width = progress + '%';
      }, 200);

      // Optional: If you want to hide loading on form errors (for non-AJAX forms)
      // This will only work if the form redirects on success
      setTimeout(() => {
        // If we're still on the same page after 10 seconds, something might be wrong
        if (loadingOverlay.classList.contains('show')) {
          progressBar.style.width = '100%';
          setTimeout(() => {
            loadingOverlay.classList.remove('show');
            setTimeout(() => {
              loadingOverlay.style.display = 'none';
              progressBar.style.width = '0%';
            }, 300);
          }, 500);
        }
      }, 10000);
    });
  }

  // Hide loading on page unload (for successful submissions)
  window.addEventListener('beforeunload', function() {
    if (progressBar) {
      progressBar.style.width = '100%';
    }
  });
});
</script>