<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Edit Insurance Company</h2>
    <p class="text-muted mb-0">Update <%= @insurance_company.name %> information</p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to admin_insurance_company_path(@insurance_company), class: "btn btn-outline-info" do %>
      <i class="bi bi-eye me-1"></i>
      View Details
    <% end %>
    <%= link_to admin_insurance_companies_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Companies
    <% end %>
  </div>
</div>

<!-- Error Display -->
<% if @insurance_company.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <div class="d-flex align-items-center">
      <i class="bi bi-exclamation-triangle-fill me-2"></i>
      <div>
        <h6 class="mb-1"><%= pluralize(@insurance_company.errors.count, "error") %> prohibited this insurance company from being updated:</h6>
        <ul class="mb-0">
          <% @insurance_company.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<%= form_with model: [:admin, @insurance_company], local: true, class: "needs-validation", novalidate: true do |form| %>
  <div class="row">
    <div class="col-lg-8">
      <!-- Basic Information -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0">
          <div class="d-flex align-items-center">
            <i class="bi bi-info-circle me-2 text-primary"></i>
            <h5 class="mb-0">Company Information</h5>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-8 mb-3">
              <%= form.label :name, class: "form-label" do %>
                Company Name <span class="text-danger">*</span>
              <% end %>
              <%= form.text_field :name,
                  class: "form-control #{'is-invalid' if @insurance_company.errors[:name].any?}",
                  placeholder: "Enter company name",
                  required: true %>
              <% if @insurance_company.errors[:name].any? %>
                <div class="invalid-feedback">
                  <%= @insurance_company.errors[:name].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-4 mb-3">
              <%= form.label :code, "Company Code", class: "form-label" %>
              <%= form.text_field :code,
                  class: "form-control #{'is-invalid' if @insurance_company.errors[:code].any?}",
                  placeholder: "e.g., LIC, HDFC" %>
              <% if @insurance_company.errors[:code].any? %>
                <div class="invalid-feedback">
                  <%= @insurance_company.errors[:code].first %>
                </div>
              <% end %>
              <small class="form-text text-muted">Optional short code for the company</small>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :contact_person, "Contact Person", class: "form-label" %>
              <%= form.text_field :contact_person,
                  class: "form-control #{'is-invalid' if @insurance_company.errors[:contact_person].any?}",
                  placeholder: "Enter contact person name" %>
              <% if @insurance_company.errors[:contact_person].any? %>
                <div class="invalid-feedback">
                  <%= @insurance_company.errors[:contact_person].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-6 mb-3">
              <div class="form-check form-switch mt-4">
                <%= form.check_box :status, { class: "form-check-input" }, "true", "false" %>
                <%= form.label :status, "Active Status", class: "form-check-label" %>
              </div>
              <small class="form-text text-muted">Enable this company for policy creation</small>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0">
          <div class="d-flex align-items-center">
            <i class="bi bi-telephone me-2 text-primary"></i>
            <h5 class="mb-0">Contact Information</h5>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :email, "Email Address", class: "form-label" %>
              <%= form.email_field :email,
                  class: "form-control #{'is-invalid' if @insurance_company.errors[:email].any?}",
                  placeholder: "contact@company.com" %>
              <% if @insurance_company.errors[:email].any? %>
                <div class="invalid-feedback">
                  <%= @insurance_company.errors[:email].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :mobile, "Mobile Number", class: "form-label" %>
              <%= form.telephone_field :mobile,
                  class: "form-control #{'is-invalid' if @insurance_company.errors[:mobile].any?}",
                  placeholder: "Enter mobile number" %>
              <% if @insurance_company.errors[:mobile].any? %>
                <div class="invalid-feedback">
                  <%= @insurance_company.errors[:mobile].first %>
                </div>
              <% end %>
            </div>

            <div class="col-12 mb-3">
              <%= form.label :address, "Company Address", class: "form-label" %>
              <%= form.text_area :address,
                  class: "form-control #{'is-invalid' if @insurance_company.errors[:address].any?}",
                  rows: 3,
                  placeholder: "Enter complete company address" %>
              <% if @insurance_company.errors[:address].any? %>
                <div class="invalid-feedback">
                  <%= @insurance_company.errors[:address].first %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <%= link_to admin_insurance_company_path(@insurance_company),
                  method: :delete,
                  class: "btn btn-outline-danger",
                  confirm: "Are you sure you want to delete this insurance company? This action cannot be undone.",
                  data: {
                    confirm: "Are you sure you want to delete #{@insurance_company.name}? This action cannot be undone."
                  } do %>
                <i class="bi bi-trash me-1"></i>
                Delete Company
              <% end %>
            </div>
            <div class="d-flex gap-2">
              <%= link_to "Cancel", admin_insurance_company_path(@insurance_company), class: "btn btn-outline-secondary" %>
              <%= form.submit "Update Insurance Company", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <!-- Company Stats -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0">
          <h6 class="mb-0">
            <i class="bi bi-bar-chart me-2"></i>
            Company Statistics
          </h6>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-6 mb-3">
              <div class="border-end">
                <h4 class="text-primary mb-1">★★★★</h4>
                <small class="text-muted">Rating</small>
              </div>
            </div>
            <div class="col-6 mb-3">
              <h4 class="text-success mb-1">
                <%= @insurance_company.status ? 'Active' : 'Inactive' %>
              </h4>
              <small class="text-muted">Current Status</small>
            </div>
          </div>

          <hr>

          <div class="small">
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">Partnership Type:</span>
              <span class="fw-semibold">Full Service</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">Service Level:</span>
              <span class="fw-semibold">Premium</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">Response Time:</span>
              <span class="fw-semibold">24 Hours</span>
            </div>
            <div class="d-flex justify-content-between">
              <span class="text-muted">Support:</span>
              <span class="fw-semibold">24/7</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Activity (placeholder) -->
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent border-0">
          <h6 class="mb-0">
            <i class="bi bi-clock-history me-2"></i>
            Company Information
          </h6>
        </div>
        <div class="card-body">
          <div class="small">
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">Created:</span>
              <span class="fw-semibold"><%= @insurance_company.created_at.strftime('%b %d, %Y') %></span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">Last Updated:</span>
              <span class="fw-semibold"><%= @insurance_company.updated_at.strftime('%b %d, %Y') %></span>
            </div>
            <div class="d-flex justify-content-between">
              <span class="text-muted">Company ID:</span>
              <span class="fw-semibold">#<%= @insurance_company.id %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Form validation
  const forms = document.querySelectorAll('.needs-validation');

  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }

      form.classList.add('was-validated');
    }, false);
  });
});
</script>