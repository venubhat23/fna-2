<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1"><%= @insurance_company.name %></h2>
    <p class="text-muted mb-0">Insurance Company Details</p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to edit_admin_insurance_company_path(@insurance_company), class: "btn btn-primary" do %>
      <i class="bi bi-pencil me-1"></i>
      Edit Company
    <% end %>
    <%= link_to admin_insurance_companies_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to List
    <% end %>
  </div>
</div>

<!-- Company Details -->
<div class="row">
  <div class="col-lg-8">
    <!-- Basic Information -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <div class="d-flex align-items-center">
          <i class="bi bi-info-circle me-2 text-primary"></i>
          <h5 class="mb-0">Company Information</h5>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="text-muted small">Company Name</label>
            <p class="mb-0 fw-semibold"><%= @insurance_company.name %></p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="text-muted small">Company Code</label>
            <p class="mb-0">
              <% if @insurance_company.code.present? %>
                <span class="badge bg-secondary-subtle text-secondary"><%= @insurance_company.code %></span>
              <% else %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="text-muted small">Contact Person</label>
            <p class="mb-0"><%= @insurance_company.contact_person || 'Not specified' %></p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="text-muted small">Status</label>
            <p class="mb-0">
              <% if @insurance_company.status %>
                <span class="badge bg-success-subtle text-success">
                  <i class="bi bi-check-circle me-1"></i>
                  Active
                </span>
              <% else %>
                <span class="badge bg-danger-subtle text-danger">
                  <i class="bi bi-x-circle me-1"></i>
                  Inactive
                </span>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <div class="d-flex align-items-center">
          <i class="bi bi-telephone me-2 text-primary"></i>
          <h5 class="mb-0">Contact Information</h5>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="text-muted small">Email Address</label>
            <p class="mb-0">
              <% if @insurance_company.email.present? %>
                <a href="mailto:<%= @insurance_company.email %>" class="text-decoration-none">
                  <i class="bi bi-envelope me-1"></i>
                  <%= @insurance_company.email %>
                </a>
              <% else %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </p>
          </div>
          <div class="col-md-6 mb-3">
            <label class="text-muted small">Mobile Number</label>
            <p class="mb-0">
              <% if @insurance_company.mobile.present? %>
                <a href="tel:<%= @insurance_company.mobile %>" class="text-decoration-none">
                  <i class="bi bi-telephone me-1"></i>
                  <%= @insurance_company.mobile %>
                </a>
              <% else %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </p>
          </div>
          <div class="col-12 mb-3">
            <label class="text-muted small">Address</label>
            <p class="mb-0">
              <% if @insurance_company.address.present? %>
                <i class="bi bi-geo-alt me-1"></i>
                <%= @insurance_company.address %>
              <% else %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Company Notes -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0">
        <div class="d-flex align-items-center">
          <i class="bi bi-file-text me-2 text-primary"></i>
          <h5 class="mb-0">Company Notes</h5>
        </div>
      </div>
      <div class="card-body">
        <div class="text-muted">
          <p class="mb-3">
            <i class="bi bi-info-circle me-2"></i>
            Partnership established with <%= @insurance_company.name %> for comprehensive insurance solutions.
          </p>

          <div class="row text-center">
            <div class="col-4">
              <div class="border-end">
                <h6 class="text-primary mb-1">Active</h6>
                <small class="text-muted">Status</small>
              </div>
            </div>
            <div class="col-4">
              <div class="border-end">
                <h6 class="text-success mb-1">Verified</h6>
                <small class="text-muted">Partnership</small>
              </div>
            </div>
            <div class="col-4">
              <h6 class="text-info mb-1">Ready</h6>
              <small class="text-muted">For Business</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="col-lg-4">
    <!-- Actions -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0">Quick Actions</h6>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to edit_admin_insurance_company_path(@insurance_company), class: "btn btn-primary" do %>
            <i class="bi bi-pencil me-2"></i>
            Edit Company Details
          <% end %>

          <button class="btn btn-outline-info">
            <i class="bi bi-telephone me-2"></i>
            Contact Company
          </button>

          <button class="btn btn-outline-success">
            <i class="bi bi-file-earmark-text me-2"></i>
            Generate Report
          </button>

          <hr class="my-3">

          <%= link_to admin_insurance_company_path(@insurance_company),
              method: :delete,
              class: "btn btn-outline-danger",
              confirm: "Are you sure you want to delete this insurance company? This action cannot be undone.",
              data: {
                confirm: "Are you sure you want to delete #{@insurance_company.name}? This action cannot be undone."
              } do %>
            <i class="bi bi-trash me-2"></i>
            Delete Company
          <% end %>
        </div>
      </div>
    </div>

    <!-- Company Statistics -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0">Company Statistics</h6>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <div class="d-flex justify-content-between align-items-center mb-1">
            <small class="text-muted">Partnership Rating</small>
            <small class="fw-semibold">★★★★☆</small>
          </div>
          <div class="progress" style="height: 4px;">
            <div class="progress-bar bg-warning" style="width: 80%;"></div>
          </div>
        </div>

        <div class="mb-3">
          <div class="d-flex justify-content-between align-items-center mb-1">
            <small class="text-muted">Service Quality</small>
            <small class="fw-semibold text-success">Excellent</small>
          </div>
          <div class="progress" style="height: 4px;">
            <div class="progress-bar bg-success" style="width: 90%;"></div>
          </div>
        </div>

        <div class="small text-muted">
          <i class="bi bi-info-circle me-1"></i>
          Company added on <%= @insurance_company.created_at.strftime('%B %d, %Y') %>
        </div>
      </div>
    </div>
  </div>
</div>