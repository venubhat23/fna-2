<!-- Life Insurance Import Modal -->
<div class="modal fade" id="lifeInsuranceImportModal" tabindex="-1" aria-labelledby="lifeInsuranceImportModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-warning text-white">
        <h5 class="modal-title" id="lifeInsuranceImportModalLabel">
          <i class="fas fa-shield-alt me-2"></i>
          Import Life Insurance Policies
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with url: admin_import_life_insurances_path, method: :post, multipart: true, local: true, class: "import-form" do |form| %>
        <div class="modal-body">
          <div class="alert alert-warning" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Life Insurance Import Requirements:</strong>
            <ul class="mb-0 mt-2">
              <li>Customer must exist (link by email)</li>
              <li>Required: policy_number, term details, premiums</li>
              <li>Multi-year GST calculation support</li>
              <li>Complex commission structures</li>
            </ul>
          </div>

          <div class="mb-3">
            <label for="lifeInsuranceFile" class="form-label fw-bold">
              <i class="fas fa-file-upload me-1"></i>
              Select Life Insurance Data File
            </label>
            <%= form.file_field :file,
                                id: "lifeInsuranceFile",
                                class: "form-control",
                                accept: ".csv,.xlsx,.xls",
                                required: true %>
            <div class="form-text">
              Supported formats: CSV, Excel (.xlsx, .xls). Maximum size: 10MB
            </div>
          </div>

          <!-- Sample Data Preview -->
          <div class="border rounded p-3 bg-light">
            <h6 class="text-muted mb-2">
              <i class="fas fa-eye me-1"></i>
              Sample Data Format:
            </h6>
            <div class="table-responsive">
              <table class="table table-sm table-bordered">
                <thead class="table-dark">
                  <tr>
                    <th>customer_email</th>
                    <th>policy_number</th>
                    <th>insurance_company</th>
                    <th>sum_insured</th>
                    <th>policy_term</th>
                    <th>plan_name</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>john@example.com</td>
                    <td>LIC001234</td>
                    <td>ICICI Prudential</td>
                    <td>1000000</td>
                    <td>20</td>
                    <td>iProtect Smart</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times me-1"></i>
            Cancel
          </button>
          <%= link_to download_template_admin_imports_path(template_type: 'life_insurances'),
                      class: "btn btn-outline-warning",
                      target: "_blank" do %>
            <i class="fas fa-download me-1"></i> Download Template
          <% end %>
          <%= form.submit "Import Life Insurance", class: "btn btn-warning text-white" do %>
            <i class="fas fa-upload me-1"></i>
            Import Life Insurance
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>