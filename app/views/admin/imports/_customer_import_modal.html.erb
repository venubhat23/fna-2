<!-- Customer Import Modal -->
<div class="modal fade" id="customerImportModal" tabindex="-1" aria-labelledby="customerImportModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="customerImportModalLabel">
          <i class="fas fa-users me-2"></i>
          Import Customers
        </h5>
        <button type="button" class="btn-close btn-close-white" onclick="closeModal('customerImportModal')" aria-label="Close"></button>
      </div>

      <%= form_with url: admin_import_customers_path, method: :post, multipart: true, local: true, class: "import-form" do |form| %>
        <div class="modal-body">
          <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Customer Import Requirements:</strong>
            <ul class="mb-0 mt-2">
              <li>Customer Type: 'individual' or 'corporate'</li>
              <li>Individual: first_name, email, mobile required</li>
              <li>Corporate: company_name, email, mobile required</li>
              <li>Duplicate detection on email and mobile</li>
            </ul>
          </div>

          <div class="mb-3">
            <label for="customerFile" class="form-label fw-bold">
              <i class="fas fa-file-upload me-1"></i>
              Select Customer Data File
            </label>
            <%= form.file_field :file,
                                id: "customerFile",
                                class: "form-control",
                                accept: ".csv,.xlsx,.xls",
                                required: true %>
            <div class="form-text">
              Supported formats: CSV, Excel (.xlsx, .xls). Maximum size: 10MB
            </div>
          </div>

          <!-- Sample Data Preview -->
          <div class="border rounded p-3 bg-light">
            <h6 class="text-muted mb-2">
              <i class="fas fa-eye me-1"></i>
              Sample Data Format:
            </h6>
            <div class="table-responsive">
              <table class="table table-sm table-bordered">
                <thead class="table-dark">
                  <tr>
                    <th>customer_type</th>
                    <th>first_name</th>
                    <th>last_name</th>
                    <th>email</th>
                    <th>mobile</th>
                    <th>city</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>individual</td>
                    <td>John</td>
                    <td>Doe</td>
                    <td>john@example.com</td>
                    <td>9876543210</td>
                    <td>Mumbai</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closeModal('customerImportModal')">
            <i class="fas fa-times me-1"></i>
            Cancel
          </button>
          <%= link_to download_template_admin_imports_path(template_type: 'customers'),
                      class: "btn btn-outline-primary",
                      target: "_blank" do %>
            <i class="fas fa-download me-1"></i> Download Template
          <% end %>
          <%= form.submit "Import Customers", class: "btn btn-primary" do %>
            <i class="fas fa-upload me-1"></i>
            Import Customers
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>