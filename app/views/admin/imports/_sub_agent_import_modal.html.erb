<!-- Sub-Agent Import Modal -->
<div class="modal fade" id="subAgentImportModal" tabindex="-1" aria-labelledby="subAgentImportModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title" id="subAgentImportModalLabel">
          <i class="fas fa-user-tie me-2"></i>
          Import Sub-Agents
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with url: admin_import_sub_agents_path, method: :post, multipart: true, local: true, class: "import-form" do |form| %>
        <div class="modal-body">
          <div class="alert alert-success" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Sub-Agent Import Requirements:</strong>
            <ul class="mb-0 mt-2">
              <li>Required: first_name, last_name, email, mobile</li>
              <li>Bank details for commission payments</li>
              <li>Default password will be set if not provided</li>
              <li>Duplicate detection on email and mobile</li>
            </ul>
          </div>

          <div class="mb-3">
            <label for="subAgentFile" class="form-label fw-bold">
              <i class="fas fa-file-upload me-1"></i>
              Select Sub-Agent Data File
            </label>
            <%= form.file_field :file,
                                id: "subAgentFile",
                                class: "form-control",
                                accept: ".csv,.xlsx,.xls",
                                required: true %>
            <div class="form-text">
              Supported formats: CSV, Excel (.xlsx, .xls). Maximum size: 10MB
            </div>
          </div>

          <!-- Sample Data Preview -->
          <div class="border rounded p-3 bg-light">
            <h6 class="text-muted mb-2">
              <i class="fas fa-eye me-1"></i>
              Sample Data Format:
            </h6>
            <div class="table-responsive">
              <table class="table table-sm table-bordered">
                <thead class="table-dark">
                  <tr>
                    <th>first_name</th>
                    <th>last_name</th>
                    <th>email</th>
                    <th>mobile</th>
                    <th>bank_name</th>
                    <th>account_no</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Agent</td>
                    <td>Smith</td>
                    <td>agent@example.com</td>
                    <td>9876543210</td>
                    <td>SBI</td>
                    <td>1234567890</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times me-1"></i>
            Cancel
          </button>
          <%= link_to download_template_admin_imports_path(template_type: 'sub_agents'),
                      class: "btn btn-outline-success",
                      target: "_blank" do %>
            <i class="fas fa-download me-1"></i> Download Template
          <% end %>
          <%= form.submit "Import Sub-Agents", class: "btn btn-success" do %>
            <i class="fas fa-upload me-1"></i>
            Import Sub-Agents
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>