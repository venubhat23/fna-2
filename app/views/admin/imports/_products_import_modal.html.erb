<!-- Products Import Modal -->
<div class="modal fade" id="productsImportModal" tabindex="-1" aria-labelledby="productsImportModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-gradient-teal text-white">
        <h5 class="modal-title" id="productsImportModalLabel">
          <i class="fas fa-boxes me-2"></i>
          Import Products
        </h5>
        <button type="button" class="btn-close btn-close-white" onclick="closeModal('productsImportModal')" aria-label="Close"></button>
      </div>

      <%= form_with url: admin_import_products_path, local: true, multipart: true, id: 'productsImportForm', class: 'import-form' do |form| %>
        <div class="modal-body">
          <!-- Validation Results Container -->
          <div id="productsValidationResults" class="validation-results" style="display: none;">
            <!-- Results will be populated by JavaScript -->
          </div>

          <!-- File Upload Section -->
          <div class="row mb-4">
            <div class="col-12">
              <div class="upload-area">
                <div class="text-center p-4 border rounded bg-light">
                  <i class="fas fa-cloud-upload-alt fa-3x text-teal mb-3"></i>
                  <h5>Upload Products CSV File</h5>
                  <p class="text-muted mb-3">Select a CSV file containing product catalog data</p>

                  <div class="mb-3">
                    <%= form.file_field :file,
                        class: "form-control",
                        accept: ".csv,.xlsx,.xls",
                        required: true,
                        data: {
                          import_type: 'products',
                          validate_url: validate_csv_admin_imports_path
                        } %>
                    <div class="form-text">
                      Supported formats: CSV, Excel (.xlsx, .xls). Maximum size: 10MB
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Preview Section -->
          <div id="productsPreview" class="preview-section" style="display: none;">
            <h6 class="text-teal mb-3">
              <i class="fas fa-eye me-2"></i>
              Data Preview
            </h6>
            <div class="table-responsive">
              <table class="table table-sm table-bordered" id="productsPreviewTable">
                <thead class="table-light">
                  <!-- Headers will be populated by JavaScript -->
                </thead>
                <tbody>
                  <!-- Data will be populated by JavaScript -->
                </tbody>
              </table>
            </div>
          </div>

          <!-- Template Download Section -->
          <div class="row">
            <div class="col-12">
              <div class="alert alert-info" role="alert">
                <div class="d-flex align-items-center">
                  <i class="fas fa-info-circle me-2"></i>
                  <div class="flex-grow-1">
                    <strong>Template Required:</strong>
                    Use the provided template to ensure proper data formatting and successful import.
                  </div>
                  <%= link_to download_template_admin_imports_path(template_type: 'products'),
                             class: "btn btn-outline-info btn-sm",
                             target: "_blank" do %>
                    <i class="fas fa-download me-1"></i> Download Template
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <!-- Requirements Section -->
          <div class="row">
            <div class="col-md-6">
              <h6 class="text-teal">Required Fields:</h6>
              <ul class="list-unstyled small">
                <li><i class="fas fa-check text-success me-1"></i> Product Name</li>
                <li><i class="fas fa-check text-success me-1"></i> Price</li>
                <li><i class="fas fa-check text-success me-1"></i> Category Name</li>
                <li><i class="fas fa-check text-success me-1"></i> Status</li>
              </ul>
            </div>
            <div class="col-md-6">
              <h6 class="text-teal">Auto-Generated:</h6>
              <ul class="list-unstyled small">
                <li><i class="fas fa-cog text-info me-1"></i> SKU (if not provided)</li>
                <li><i class="fas fa-cog text-info me-1"></i> GST Calculations</li>
                <li><i class="fas fa-cog text-info me-1"></i> Category Creation</li>
                <li><i class="fas fa-cog text-info me-1"></i> Price Tracking</li>
              </ul>
            </div>
          </div>

          <!-- Product Types Info -->
          <div class="row">
            <div class="col-12">
              <div class="alert alert-light border-teal" role="alert">
                <h6 class="text-teal mb-2">
                  <i class="fas fa-tags me-1"></i> Product Types Supported:
                </h6>
                <div class="row">
                  <div class="col-md-6">
                    <strong>One-time Purchase:</strong>
                    <br><small class="text-muted">Regular products sold individually</small>
                  </div>
                  <div class="col-md-6">
                    <strong>Subscription Products:</strong>
                    <br><small class="text-muted">Recurring delivery products (e.g., milk, groceries)</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-outline-teal" id="validateProductsBtn">
            <i class="fas fa-check-circle me-1"></i> Validate File
          </button>
          <button type="submit" class="btn btn-teal" id="importProductsBtn" disabled>
            <i class="fas fa-upload me-1"></i> Import Products
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  setupImportModal('products', 'products');
});
</script>

<style>
.text-teal {
  color: #17a2b8 !important;
}

.border-teal {
  border-color: #17a2b8 !important;
}

#productsImportModal .upload-area .border {
  border: 2px dashed #17a2b8 !important;
}

#productsImportModal .upload-area:hover .border {
  border-color: #138496 !important;
  background-color: #f0fbfc !important;
}
</style>