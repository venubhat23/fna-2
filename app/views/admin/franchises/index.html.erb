<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Franchise Management</h2>
    <p class="text-muted mb-0">Manage and track all your franchises</p>
  </div>
  <div>
    <%= link_to new_admin_franchise_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>
      Add New Franchise
    <% end %>
  </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Total Franchises</h6>
            <h4 class="mb-0"><%= @franchises.count %></h4>
          </div>
          <div class="text-primary">
            <i class="bi bi-shop fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Active Franchises</h6>
            <h4 class="mb-0"><%= @franchises.where(status: true).count %></h4>
          </div>
          <div class="text-success">
            <i class="bi bi-shop-window fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">Inactive Franchises</h6>
            <h4 class="mb-0"><%= @franchises.where(status: false).count %></h4>
          </div>
          <div class="text-danger">
            <i class="bi bi-x-circle fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <h6 class="text-muted mb-1">This Month</h6>
            <h4 class="mb-0"><%= @franchises.where('created_at >= ?', 1.month.ago).count %></h4>
          </div>
          <div class="text-info">
            <i class="bi bi-calendar-plus fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Franchises Table -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-transparent border-0">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Franchise List</h5>
      <div class="d-flex gap-2">
        <div class="position-relative">
          <input type="text" class="form-control" placeholder="Search franchises..." id="searchInput">
          <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-3"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @franchises.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th class="border-0 fw-semibold">Franchise</th>
              <th class="border-0 fw-semibold">Business Info</th>
              <th class="border-0 fw-semibold">Contact Info</th>
              <th class="border-0 fw-semibold">Login Credentials</th>
              <th class="border-0 fw-semibold">Territory</th>
              <th class="border-0 fw-semibold">Status</th>
              <th class="border-0 fw-semibold">Joined</th>
              <th class="border-0 fw-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @franchises.each do |franchise| %>
              <tr>
                <td class="align-middle">
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-shop text-primary"></i>
                    </div>
                    <div>
                      <h6 class="mb-0"><%= franchise.name %></h6>
                      <small class="text-muted">ID: #<%= franchise.id %></small>
                    </div>
                  </div>
                </td>
                <td class="align-middle">
                  <div>
                    <% if franchise.business_type.present? %>
                      <div class="fw-semibold"><%= franchise.business_type %></div>
                    <% end %>
                    <% if franchise.contact_person_name.present? %>
                      <small class="text-muted">Contact: <%= franchise.contact_person_name %></small>
                    <% end %>
                  </div>
                </td>
                <td class="align-middle">
                  <div>
                    <% if franchise.email.present? %>
                      <div class="small">
                        <i class="bi bi-envelope text-muted me-1"></i>
                        <%= franchise.email %>
                      </div>
                    <% end %>
                    <% if franchise.mobile.present? %>
                      <div class="small">
                        <i class="bi bi-telephone text-muted me-1"></i>
                        <%= franchise.mobile %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="align-middle">
                  <div class="login-credentials">
                    <div class="small">
                      <i class="bi bi-person-circle text-muted me-1"></i>
                      <strong>Username:</strong> <%= franchise.email %>
                    </div>
                    <div class="small mt-1">
                      <i class="bi bi-key text-muted me-1"></i>
                      <strong>Password:</strong>
                      <span class="password-display" onclick="showPassword('<%= franchise.auto_generated_password || 'Not Set' %>')">
                        <span class="password-hidden">••••••••</span>
                        <button type="button" class="btn btn-link btn-sm p-0 ms-1" title="Click to view password">
                          <i class="bi bi-eye text-muted"></i>
                        </button>
                      </span>
                    </div>
                  </div>
                </td>
                <td class="align-middle">
                  <% if franchise.territory.present? %>
                    <span class="badge bg-info-subtle text-info">
                      <i class="bi bi-geo-alt me-1"></i>
                      <%= franchise.territory %>
                    </span>
                  <% else %>
                    <span class="text-muted">-</span>
                  <% end %>
                </td>
                <td class="align-middle">
                  <span class="badge bg-<%= franchise.status? ? 'success' : 'danger' %>-subtle text-<%= franchise.status? ? 'success' : 'danger' %>">
                    <i class="bi bi-<%= franchise.status? ? 'check-circle' : 'x-circle' %> me-1"></i>
                    <%= franchise.status? ? 'Active' : 'Inactive' %>
                  </span>
                </td>
                <td class="align-middle">
                  <%= franchise.created_at.strftime("%b %d, %Y") %>
                </td>
                <td class="align-middle">
                  <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to admin_franchise_path(franchise), class: "dropdown-item" do %>
                          <i class="bi bi-eye me-2"></i>
                          View Details
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_admin_franchise_path(franchise), class: "dropdown-item" do %>
                          <i class="bi bi-pencil me-2"></i>
                          Edit Franchise
                        <% end %>
                      </li>
                      <li>
                        <%= link_to toggle_status_admin_franchise_path(franchise), method: :patch,
                            class: "dropdown-item" do %>
                          <i class="bi bi-<%= franchise.status? ? 'x-circle' : 'check-circle' %> me-2"></i>
                          <%= franchise.status? ? 'Deactivate' : 'Activate' %>
                        <% end %>
                      </li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to admin_franchise_path(franchise), method: :delete,
                            class: "dropdown-item text-danger",
                            confirm: "Are you sure you want to delete this franchise?",
                            data: {
                              confirm: "Are you sure you want to delete #{franchise.name}? This action cannot be undone."
                            } do %>
                          <i class="bi bi-trash me-2"></i>
                          Delete Franchise
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-shop fs-1 text-muted"></i>
        </div>
        <h5 class="text-muted mb-3">No Franchises Found</h5>
        <p class="text-muted mb-4">Start building your franchise network by adding your first franchise.</p>
        <%= link_to "Add Franchise", new_admin_franchise_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Search functionality
  const searchInput = document.getElementById('searchInput');
  const tableRows = document.querySelectorAll('tbody tr');

  searchInput?.addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();

    tableRows.forEach(row => {
      const franchiseName = row.cells[0]?.textContent.toLowerCase() || '';
      const businessInfo = row.cells[1]?.textContent.toLowerCase() || '';
      const contactInfo = row.cells[2]?.textContent.toLowerCase() || '';
      const territory = row.cells[4]?.textContent.toLowerCase() || '';

      if (franchiseName.includes(searchTerm) ||
          businessInfo.includes(searchTerm) ||
          contactInfo.includes(searchTerm) ||
          territory.includes(searchTerm)) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  });

  // Password display functionality
  window.showPassword = function(password) {
    if (password && password !== 'Not Set') {
      alert(`Franchise Password: ${password}\n\nPlease keep this information secure!`);
    } else {
      alert('No password set for this franchise.');
    }
  };
});
</script>

<style>
.login-credentials {
  min-width: 180px;
  font-size: 0.85rem;
}

.password-display {
  cursor: pointer;
  transition: all 0.2s ease;
}

.password-display:hover {
  background-color: #f8f9fa;
  border-radius: 3px;
  padding: 2px 4px;
}

.password-hidden {
  font-family: monospace;
  letter-spacing: 1px;
  color: #6c757d;
}

.btn-link {
  text-decoration: none !important;
}

.btn-link:hover {
  color: #0d6efd !important;
}

/* Fix dropdown menu visibility */
.dropdown {
  position: relative;
}

.dropdown-menu {
  position: absolute !important;
  z-index: 1050 !important;
  min-width: 150px;
}

/* Ensure the last row's dropdown opens upward if needed */
tbody tr:last-child .dropdown-menu,
tbody tr:nth-last-child(2) .dropdown-menu {
  bottom: 100%;
  top: auto;
}

/* Make the credentials column more compact but readable */
.login-credentials strong {
  color: #495057;
  font-size: 0.8rem;
}

.login-credentials .small {
  line-height: 1.3;
}

/* Custom styling for franchise cards */
.avatar-sm {
  width: 40px;
  height: 40px;
}

.bi-shop {
  font-size: 1.25rem;
}

/* Primary subtle colors for franchises */
.bg-primary-subtle {
  background-color: rgba(13, 110, 253, 0.1) !important;
}

.text-primary {
  color: #0d6efd !important;
}
</style>