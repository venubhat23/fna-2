<div class="card border-0 shadow-sm">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0">
      <i class="bi bi-shop me-2"></i>
      <%= @franchise.new_record? ? 'Create New Franchise' : 'Edit Franchise' %>
    </h5>
  </div>

  <div class="card-body">
    <%= form_with model: [:admin, @franchise], local: true do |f| %>
      <% if @franchise.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @franchise.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <!-- Basic Information -->
        <div class="col-md-6">
          <h6 class="text-muted mb-3">Basic Information</h6>

          <div class="mb-3">
            <%= f.label :name, "Franchise Name", class: "form-label required" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :contact_person_name, "Company Name", class: "form-label" %>
            <%= f.text_field :contact_person_name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label required" %>
            <%= f.email_field :email, class: "form-control", required: true %>
            <small class="text-muted">This will be used as username for login</small>
          </div>

          <div class="mb-3">
            <%= f.label :mobile, "Phone Number", class: "form-label required" %>
            <%= f.text_field :mobile, class: "form-control", required: true %>
          </div>
        </div>

        <!-- Address Information -->
        <div class="col-md-6">
          <h6 class="text-muted mb-3">Address Information</h6>

          <div class="mb-3">
            <%= f.label :address, class: "form-label required" %>
            <%= f.text_area :address, class: "form-control", rows: 3, required: true %>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :city, class: "form-label" %>
              <%= f.text_field :city, class: "form-control" %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :state, class: "form-label" %>
              <%= f.text_field :state, class: "form-control" %>
            </div>
          </div>

          <div class="mb-3">
            <div class="form-check form-switch">
              <%= f.check_box :status, class: "form-check-input", checked: @franchise.new_record? ? true : @franchise.status %>
              <%= f.label :status, "Active Status", class: "form-check-label" %>
            </div>
          </div>
        </div>
      </div>

      <% if @franchise.new_record? %>
        <!-- Account Generation Info -->
        <div class="alert alert-info mt-4">
          <h6 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Automatic Account Generation</h6>
          <p class="mb-2">A user account will be automatically created with:</p>
          <ul class="mb-0">
            <li><strong>Username:</strong> The email address entered above</li>
            <li><strong>Password:</strong> Auto-generated secure password (will be displayed after creation)</li>
          </ul>
        </div>
      <% else %>
        <!-- Show existing credentials -->
        <div class="alert alert-secondary mt-4">
          <h6 class="alert-heading"><i class="bi bi-key me-2"></i>Login Credentials</h6>
          <p class="mb-2"><strong>Username:</strong> <%= @franchise.email %></p>
          <p class="mb-0"><strong>Password:</strong> <%= @franchise.auto_generated_password || 'Not set' %></p>
        </div>
      <% end %>

      <!-- Form Actions -->
      <div class="d-flex justify-content-between mt-4">
        <%= link_to "Cancel", admin_franchises_path, class: "btn btn-outline-secondary" %>
        <%= f.submit @franchise.new_record? ? "Create Franchise" : "Update Franchise", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<style>
.required::after {
  content: " *";
  color: #dc3545;
}
</style>