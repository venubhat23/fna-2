<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1"><%= @franchise.display_name %></h2>
    <p class="text-muted mb-0">Detailed franchise information and overview</p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to edit_admin_franchise_path(@franchise), class: "btn btn-primary" do %>
      <i class="bi bi-pencil me-1"></i>
      Edit Franchise
    <% end %>
    <%= link_to admin_franchises_path, class: "btn btn-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Franchises
    <% end %>
  </div>
</div>

<!-- Status Badge -->
<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex align-items-center gap-3">
      <% if @franchise.active? %>
        <span class="badge bg-success-subtle text-success fs-6">
          <i class="bi bi-check-circle me-1"></i>
          Active Franchise
        </span>
      <% else %>
        <span class="badge bg-danger-subtle text-danger fs-6">
          <i class="bi bi-x-circle me-1"></i>
          Inactive Franchise
        </span>
      <% end %>

      <span class="badge bg-info-subtle text-info">
        <i class="bi bi-percent me-1"></i>
        <%= number_to_percentage(@franchise.commission_percentage || 0, precision: 1) %> Commission
      </span>

      <small class="text-muted">
        <i class="bi bi-calendar me-1"></i>
        Created on <%= @franchise.created_at.strftime("%B %d, %Y") %>
      </small>
    </div>
  </div>
</div>

<div class="row">
  <!-- Main Content -->
  <div class="col-lg-8">
    <!-- Basic Information -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">
          <i class="bi bi-shop me-2 text-primary"></i>
          Basic Information
        </h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="info-group mb-3">
              <label class="form-label fw-semibold text-muted">Franchise Name</label>
              <div class="fs-6"><%= @franchise.name %></div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-group mb-3">
              <label class="form-label fw-semibold text-muted">Contact Person</label>
              <div class="fs-6"><%= @franchise.contact_person_name %></div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-group mb-3">
              <label class="form-label fw-semibold text-muted">Email Address</label>
              <div class="fs-6">
                <i class="bi bi-envelope text-muted me-2"></i>
                <a href="mailto:<%= @franchise.email %>"><%= @franchise.email %></a>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-group mb-3">
              <label class="form-label fw-semibold text-muted">Mobile Number</label>
              <div class="fs-6">
                <i class="bi bi-telephone text-muted me-2"></i>
                <a href="tel:<%= @franchise.mobile %>"><%= @franchise.mobile %></a>
              </div>
            </div>
          </div>
          <% if @franchise.whatsapp_number.present? %>
            <div class="col-md-6">
              <div class="info-group mb-3">
                <label class="form-label fw-semibold text-muted">WhatsApp Number</label>
                <div class="fs-6">
                  <i class="bi bi-whatsapp text-success me-2"></i>
                  <a href="https://wa.me/<%= @franchise.whatsapp_number.gsub(/\D/, '') %>"><%= @franchise.whatsapp_number %></a>
                </div>
              </div>
            </div>
          <% end %>
          <div class="col-md-6">
            <div class="info-group mb-3">
              <label class="form-label fw-semibold text-muted">Business Type</label>
              <div class="fs-6">
                <span class="badge bg-secondary-subtle text-secondary">
                  <%= @franchise.business_type.humanize %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Address Information -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">
          <i class="bi bi-geo-alt me-2 text-primary"></i>
          Address Information
        </h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-12">
            <div class="info-group mb-3">
              <label class="form-label fw-semibold text-muted">Full Address</label>
              <div class="fs-6"><%= @franchise.address %></div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="info-group mb-3">
              <label class="form-label fw-semibold text-muted">City</label>
              <div class="fs-6"><%= @franchise.city %></div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="info-group mb-3">
              <label class="form-label fw-semibold text-muted">State</label>
              <div class="fs-6"><%= @franchise.state %></div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="info-group mb-3">
              <label class="form-label fw-semibold text-muted">Pincode</label>
              <div class="fs-6"><%= @franchise.pincode %></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Business Details -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">
          <i class="bi bi-building me-2 text-primary"></i>
          Business Details
        </h5>
      </div>
      <div class="card-body">
        <div class="row">
          <% if @franchise.pan_no.present? %>
            <div class="col-md-6">
              <div class="info-group mb-3">
                <label class="form-label fw-semibold text-muted">PAN Number</label>
                <div class="fs-6">
                  <code><%= @franchise.pan_no %></code>
                </div>
              </div>
            </div>
          <% end %>
          <% if @franchise.gst_no.present? %>
            <div class="col-md-6">
              <div class="info-group mb-3">
                <label class="form-label fw-semibold text-muted">GST Number</label>
                <div class="fs-6">
                  <code><%= @franchise.gst_no %></code>
                </div>
              </div>
            </div>
          <% end %>
          <% if @franchise.license_no.present? %>
            <div class="col-md-6">
              <div class="info-group mb-3">
                <label class="form-label fw-semibold text-muted">License Number</label>
                <div class="fs-6">
                  <code><%= @franchise.license_no %></code>
                </div>
              </div>
            </div>
          <% end %>
          <% if @franchise.establishment_date.present? %>
            <div class="col-md-6">
              <div class="info-group mb-3">
                <label class="form-label fw-semibold text-muted">Establishment Date</label>
                <div class="fs-6"><%= @franchise.establishment_date.strftime("%B %d, %Y") %></div>
              </div>
            </div>
          <% end %>
          <% if @franchise.territory.present? %>
            <div class="col-md-6">
              <div class="info-group mb-3">
                <label class="form-label fw-semibold text-muted">Territory</label>
                <div class="fs-6">
                  <span class="badge bg-info-subtle text-info"><%= @franchise.territory %></span>
                </div>
              </div>
            </div>
          <% end %>
          <% if @franchise.franchise_fee.present? && @franchise.franchise_fee > 0 %>
            <div class="col-md-6">
              <div class="info-group mb-3">
                <label class="form-label fw-semibold text-muted">Franchise Fee</label>
                <div class="fs-6">
                  <span class="text-success fw-semibold">₹<%= number_with_delimiter(@franchise.franchise_fee) %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Login Credentials -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-0">
          <i class="bi bi-key me-2 text-primary"></i>
          Login Credentials
        </h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="info-group mb-3">
              <label class="form-label fw-semibold text-muted">Login Email</label>
              <div class="fs-6">
                <i class="bi bi-person-circle text-muted me-2"></i>
                <%= @franchise.email %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-group mb-3">
              <label class="form-label fw-semibold text-muted">Password</label>
              <div class="fs-6">
                <span class="password-display" onclick="showPassword('<%= @franchise.auto_generated_password || 'Not Set' %>')">
                  <span class="password-hidden">••••••••••••</span>
                  <button type="button" class="btn btn-link btn-sm p-0 ms-2" title="Click to view password">
                    <i class="bi bi-eye text-muted"></i>
                    View Password
                  </button>
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="alert alert-info">
          <i class="bi bi-info-circle me-2"></i>
          <strong>Security Notice:</strong> Please ensure login credentials are kept secure and changed regularly.
        </div>
      </div>
    </div>

    <!-- Additional Information -->
    <% if @franchise.notes.present? %>
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0">
          <h5 class="mb-0">
            <i class="bi bi-chat-text me-2 text-primary"></i>
            Additional Notes
          </h5>
        </div>
        <div class="card-body">
          <p class="mb-0"><%= simple_format(@franchise.notes) %></p>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Sidebar -->
  <div class="col-lg-4">
    <!-- Quick Actions -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h6>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to edit_admin_franchise_path(@franchise), class: "btn btn-primary btn-sm" do %>
            <i class="bi bi-pencil me-2"></i>Edit Franchise
          <% end %>

          <%= link_to toggle_status_admin_franchise_path(@franchise), method: :patch, class: "btn btn-#{@franchise.active? ? 'warning' : 'success'} btn-sm" do %>
            <i class="bi bi-toggle-<%= @franchise.active? ? 'off' : 'on' %> me-2"></i>
            <%= @franchise.active? ? 'Deactivate' : 'Activate' %>
          <% end %>

          <hr class="my-2">

          <%= link_to admin_franchise_path(@franchise), method: :delete,
              class: "btn btn-danger btn-sm",
              confirm: "Are you sure?",
              data: {
                confirm: "Are you sure you want to delete #{@franchise.display_name}? This action cannot be undone."
              } do %>
            <i class="bi bi-trash me-2"></i>Delete Franchise
          <% end %>
        </div>
      </div>
    </div>

    <!-- Franchise Statistics -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Statistics</h6>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-6">
            <div class="border-end">
              <div class="fs-4 fw-bold text-success">
                <%= number_to_percentage(@franchise.commission_percentage || 0, precision: 1) %>
              </div>
              <div class="small text-muted">Commission Rate</div>
            </div>
          </div>
          <div class="col-6">
            <div class="fs-4 fw-bold text-info">
              <%= @franchise.active? ? 'Active' : 'Inactive' %>
            </div>
            <div class="small text-muted">Status</div>
          </div>
        </div>

        <hr class="my-3">

        <div class="row text-center">
          <div class="col-6">
            <div class="border-end">
              <div class="fs-5 fw-bold text-primary">
                <%= time_ago_in_words(@franchise.created_at) %>
              </div>
              <div class="small text-muted">Active Since</div>
            </div>
          </div>
          <div class="col-6">
            <div class="fs-5 fw-bold text-warning">
              <% if @franchise.franchise_fee.present? && @franchise.franchise_fee > 0 %>
                ₹<%= number_with_delimiter(@franchise.franchise_fee) %>
              <% else %>
                Free
              <% end %>
            </div>
            <div class="small text-muted">Setup Fee</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i>Contact Info</h6>
      </div>
      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <div class="avatar-sm bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
            <i class="bi bi-person text-primary"></i>
          </div>
          <div>
            <div class="fw-semibold"><%= @franchise.contact_person_name %></div>
            <div class="small text-muted">Contact Person</div>
          </div>
        </div>

        <div class="d-flex align-items-center mb-3">
          <div class="avatar-sm bg-success-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
            <i class="bi bi-envelope text-success"></i>
          </div>
          <div>
            <div class="fw-semibold"><%= @franchise.email %></div>
            <div class="small text-muted">Email Address</div>
          </div>
        </div>

        <div class="d-flex align-items-center mb-3">
          <div class="avatar-sm bg-info-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
            <i class="bi bi-telephone text-info"></i>
          </div>
          <div>
            <div class="fw-semibold"><%= @franchise.mobile %></div>
            <div class="small text-muted">Mobile Number</div>
          </div>
        </div>

        <div class="d-flex align-items-center">
          <div class="avatar-sm bg-warning-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
            <i class="bi bi-geo-alt text-warning"></i>
          </div>
          <div>
            <div class="fw-semibold"><%= @franchise.city %>, <%= @franchise.state %></div>
            <div class="small text-muted">Location</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Business Summary -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0">
        <h6 class="mb-0"><i class="bi bi-building me-2"></i>Business Summary</h6>
      </div>
      <div class="card-body">
        <ul class="list-unstyled mb-0">
          <li class="mb-2">
            <i class="bi bi-shop text-primary me-2"></i>
            <strong>Type:</strong> <%= @franchise.business_type.humanize %>
          </li>
          <% if @franchise.territory.present? %>
            <li class="mb-2">
              <i class="bi bi-map text-success me-2"></i>
              <strong>Territory:</strong> <%= @franchise.territory %>
            </li>
          <% end %>
          <% if @franchise.establishment_date.present? %>
            <li class="mb-2">
              <i class="bi bi-calendar text-info me-2"></i>
              <strong>Established:</strong> <%= @franchise.establishment_date.strftime("%Y") %>
            </li>
          <% end %>
          <% if @franchise.pan_no.present? %>
            <li class="mb-2">
              <i class="bi bi-credit-card text-warning me-2"></i>
              <strong>PAN:</strong> <code><%= @franchise.pan_no %></code>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Password display functionality
  window.showPassword = function(password) {
    if (password && password !== 'Not Set') {
      alert(`Franchise Password: ${password}\n\nPlease keep this information secure!`);
    } else {
      alert('No password set for this franchise.');
    }
  };
});
</script>

<style>
.info-group {
  position: relative;
}

.info-group label {
  font-size: 0.85rem;
  margin-bottom: 0.25rem;
}

.avatar-sm {
  width: 36px;
  height: 36px;
}

.password-display {
  cursor: pointer;
  transition: all 0.2s ease;
}

.password-display:hover {
  background-color: #f8f9fa;
  border-radius: 4px;
  padding: 2px 4px;
}

.password-hidden {
  font-family: monospace;
  letter-spacing: 1px;
  color: #6c757d;
}

.btn-link {
  text-decoration: none !important;
  font-size: 0.875rem;
}

.btn-link:hover {
  color: #0d6efd !important;
}
</style>