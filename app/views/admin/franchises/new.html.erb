<div class="container-fluid px-4">
  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to "Admin", admin_root_path, class: "text-decoration-none" %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "Franchises", admin_franchises_path, class: "text-decoration-none" %>
      </li>
      <li class="breadcrumb-item active" aria-current="page">New Franchise</li>
    </ol>
  </nav>

  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-1">Create New Franchise</h1>
          <p class="text-muted mb-0">Add a new franchise partner to your network</p>
        </div>
        <div>
          <%= link_to admin_franchises_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-arrow-left me-2"></i>
            Back to List
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="row">
    <div class="col-12">
      <%= render 'form', franchise: @franchise %>
    </div>
  </div>
</div>

<style>
.breadcrumb {
  background: none;
  padding: 0;
}

.breadcrumb-item + .breadcrumb-item::before {
  color: #6c757d;
}

.container-fluid {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-top: 2rem;
  padding-bottom: 2rem;
}
</style>