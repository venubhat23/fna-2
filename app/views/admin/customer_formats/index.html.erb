</style>

<!-- Import from Master Subscription Modal - Standard Bootstrap Modal -->
<div class="modal fade" id="importSubscriptionModal" tabindex="-1" aria-labelledby="importSubscriptionModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title" id="importSubscriptionModalLabel">
          <i class="bi bi-download me-2"></i>Import from Master Subscription
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
    <div class="modal-body">
      <div id="importModalLoading" class="text-center py-5" style="display: none;">
        <div class="spinner-border text-success" role="status">
          <span class="visually-hidden">Processing...</span>
        </div>
        <p class="mt-3 text-muted">Processing import request...</p>
      </div>

      <div id="importModalContent">
        <%= form_with url: import_from_master_admin_customer_formats_path, method: :post, local: false, html: { id: "importSubscriptionForm" } do |form| %>
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="card border-success">
                <div class="card-header bg-success text-white">
                  <h6 class="mb-0"><i class="bi bi-calendar-month"></i> Select Month</h6>
                </div>
                <div class="card-body">
                  <%= form.select :month,
                      options_for_select([
                        ['January', 1], ['February', 2], ['March', 3], ['April', 4],
                        ['May', 5], ['June', 6], ['July', 7], ['August', 8],
                        ['September', 9], ['October', 10], ['November', 11], ['December', 12]
                      ], Date.current.month),
                      {},
                      { class: "form-select", id: "import_month", required: true } %>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                  <h6 class="mb-0"><i class="bi bi-calendar-year"></i> Select Year</h6>
                </div>
                <div class="card-body">
                  <%= form.select :year,
                      options_for_select((Date.current.year..(Date.current.year + 2)).map { |year| [year, year] }, Date.current.year),
                      {},
                      { class: "form-select", id: "import_year", required: true } %>
                </div>
              </div>
            </div>
          </div>

          <div class="card border-info mb-4">
            <div class="card-header bg-info text-white">
              <h6 class="mb-0"><i class="bi bi-info-circle"></i> Import Process Information</h6>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <h6 class="text-primary">What will be created:</h6>
                  <ul class="small">
                    <li>Monthly subscriptions for selected period</li>
                    <li>Daily tasks based on delivery patterns</li>
                    <li>Customer-specific delivery schedules</li>
                  </ul>
                </div>
                <div class="col-md-6">
                  <h6 class="text-warning">Important Notes:</h6>
                  <ul class="small">
                    <li>Only active customer formats will be processed</li>
                    <li>Process runs in background (~10 minutes)</li>
                    <li>Duplicates are automatically prevented</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <div class="card border-secondary">
            <div class="card-header bg-secondary text-white">
              <h6 class="mb-0"><i class="bi bi-list-check"></i> Current Active Formats</h6>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <div class="text-center">
                    <h4 class="text-primary"><%= @stats[:active] rescue 0 %></h4>
                    <small class="text-muted">Active Formats</small>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="text-center">
                    <h4 class="text-success"><%= Customer.joins(:customer_formats).where(customer_formats: { status: 'active' }).distinct.count rescue 0 %></h4>
                    <small class="text-muted">Customers</small>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="text-center">
                    <h4 class="text-warning"><%= Product.joins(:customer_formats).where(customer_formats: { status: 'active' }).distinct.count rescue 0 %></h4>
                    <small class="text-muted">Products</small>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="text-center">
                    <h4 class="text-info"><%= @stats[:pattern_counts].keys.count rescue 0 %></h4>
                    <small class="text-muted">Patterns</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success btn-lg" id="importSubmitBtn" onclick="processImport()">
          <i class="bi bi-gear me-2" id="importBtnIcon"></i>
          <span class="spinner-border spinner-border-sm me-2 d-none" id="importSpinner"></span>
          <span id="importBtnText">Copy to This Month</span>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
// Import Modal JavaScript - Bootstrap modal integration
document.addEventListener('DOMContentLoaded', function() {
  // Initialize Bootstrap modal
  const importModal = document.getElementById('importSubscriptionModal');
  if (importModal) {
    importModal.addEventListener('hidden.bs.modal', function() {
      resetImportModal();
    });
  }
});

// Reset import modal when closed
function resetImportModal() {
  const modalLoading = document.getElementById('importModalLoading');
  const modalContent = document.getElementById('importModalContent');
  const importForm = document.getElementById('importSubscriptionForm');
  const importBtn = document.getElementById('importSubmitBtn');
  const importBtnText = document.getElementById('importBtnText');
  const importSpinner = document.getElementById('importSpinner');
  const importBtnIcon = document.getElementById('importBtnIcon');

  if (modalLoading) modalLoading.style.display = 'none';
  if (modalContent) modalContent.style.display = 'block';

  // Reset form and button state
  if (importForm) importForm.reset();
  if (importBtn) importBtn.disabled = false;
  if (importBtnText) importBtnText.textContent = 'Copy to This Month';
  if (importSpinner) importSpinner.classList.add('d-none');
  if (importBtnIcon) importBtnIcon.classList.remove('d-none');
}

// Process import function
function processImport() {
  console.log('processImport() called');
  console.log('Processing import...');

  const importForm = document.getElementById('importSubscriptionForm');
  const importBtn = document.getElementById('importSubmitBtn');
  const importBtnText = document.getElementById('importBtnText');
  const importSpinner = document.getElementById('importSpinner');
  const importBtnIcon = document.getElementById('importBtnIcon');
  const modalLoading = document.getElementById('importModalLoading');
  const modalContent = document.getElementById('importModalContent');

  if (!importForm) {
    console.error('Import form not found');
    showAlert('danger', 'Form not found. Please refresh the page and try again.');
    return;
  }

  if (!importForm.action) {
    console.error('Form action not set');
    showAlert('danger', 'Form configuration error. Please contact support.');
    return;
  }

  // Show loading state
  importBtn.disabled = true;
  importBtnText.textContent = 'Processing...';
  importSpinner.classList.remove('d-none');
  importBtnIcon.classList.add('d-none');

  // Show loading modal content
  modalContent.style.display = 'none';
  modalLoading.style.display = 'block';
  modalLoading.innerHTML = `
    <div class="spinner-border text-success" role="status">
      <span class="visually-hidden">Processing...</span>
    </div>
    <p class="mt-3 text-muted">Starting import process...</p>
  `;

  // Get form data
  const formData = new FormData(importForm);

  // Get CSRF token safely
  const csrfTokenMeta = document.querySelector('meta[name="csrf-token"]');
  const csrfToken = csrfTokenMeta ? csrfTokenMeta.getAttribute('content') : '';

  fetch(importForm.action, {
    method: 'POST',
    body: formData,
    headers: {
      'X-Requested-With': 'XMLHttpRequest',
      'X-CSRF-Token': csrfToken
    }
  })
  .then(response => {
    console.log('Response status:', response.status);
    console.log('Response headers:', response.headers);

    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }

    return response.json();
  })
  .then(data => {
    console.log('Response data:', data);
    if (data.success) {
      // Show success in modal loading area
      modalLoading.innerHTML = `
        <div class="text-center py-5">
          <i class="bi bi-check-circle text-success display-1"></i>
          <h4 class="text-success mt-3">Import Started Successfully!</h4>
          <p class="text-muted">${data.message}</p>
          <button class="btn btn-success mt-3" data-bs-dismiss="modal">
            <i class="bi bi-check"></i> Close
          </button>
        </div>
      `;

      // Show success alert on page
      showAlert('success', data.message);

      // Auto-close modal after 3 seconds
      setTimeout(() => {
        const modal = bootstrap.Modal.getInstance(document.getElementById('importSubscriptionModal'));
        if (modal) modal.hide();
      }, 3000);
    } else {
      throw new Error(data.message || 'Import failed');
    }
  })
  .catch(error => {
    console.error('Import error:', error);

    // Show error in modal
    modalLoading.innerHTML = `
      <div class="text-center py-5">
        <i class="bi bi-exclamation-triangle text-danger display-1"></i>
        <h4 class="text-danger mt-3">Import Failed</h4>
        <p class="text-muted">${error.message}</p>
        <button class="btn btn-primary mt-3" onclick="processImport()">
          <i class="bi bi-arrow-clockwise"></i> Retry
        </button>
        <button class="btn btn-secondary mt-3 ms-2" data-bs-dismiss="modal">
          <i class="bi bi-x"></i> Close
        </button>
      </div>
    `;

    // Show error alert on page
    showAlert('danger', error.message);
  })
  .finally(() => {
    // Reset button state (will be hidden anyway due to loading screen)
    importBtn.disabled = false;
    importBtnText.textContent = 'Copy to This Month';
    importSpinner.classList.add('d-none');
    importBtnIcon.classList.remove('d-none');
  });
}

// Show alert function (following subscription modal style)
function showAlert(type, message) {
  const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
  const iconClass = type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle';
  const strongText = type === 'success' ? 'Success!' : 'Error!';

  const alertDiv = document.createElement('div');
  alertDiv.className = `alert ${alertClass} alert-dismissible fade show position-fixed`;
  alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999;';
  alertDiv.innerHTML = `
    <i class="${iconClass} me-2"></i>
    <strong>${strongText}</strong> ${message}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  `;

  document.body.appendChild(alertDiv);

  // Auto-remove alert after 10 seconds
  setTimeout(() => {
    alertDiv.remove();
  }, 10000);
}
</script>
