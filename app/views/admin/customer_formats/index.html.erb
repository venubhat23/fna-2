<% content_for :title, "Customer Formats" %>

<div class="container-fluid">
  <!-- Page Header -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
      <i class="bi bi-clipboard-data text-primary"></i>
      Customer Formats Management
    </h1>
    <div class="btn-group">
      <%= link_to new_admin_customer_format_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-circle"></i> Create Format
      <% end %>
      <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#importSubscriptionModal">
        <i class="bi bi-download"></i> Import from Master Subscription
      </button>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Formats</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @stats[:total] %></div>
            </div>
            <div class="col-auto">
              <i class="bi bi-clipboard-data fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Active Formats</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @stats[:active] %></div>
            </div>
            <div class="col-auto">
              <i class="bi bi-check-circle fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Inactive Formats</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @stats[:inactive] %></div>
            </div>
            <div class="col-auto">
              <i class="bi bi-pause-circle fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Top Pattern</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                <%= @stats[:pattern_counts].max_by { |k, v| v }&.first&.humanize || 'None' %>
              </div>
            </div>
            <div class="col-auto">
              <i class="bi bi-graph-up fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filter Card -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">
        <i class="bi bi-funnel"></i> Filters & Search
      </h6>
    </div>
    <div class="card-body">
      <%= form_with url: admin_customer_formats_path, method: :get, local: true, class: "row g-3" do |form| %>
        <div class="col-md-3">
          <%= form.select :status,
              options_for_select([['All Status', ''], ['Active', 'active'], ['Inactive', 'not_active']], params[:status]),
              {},
              { class: "form-select", onchange: "this.form.submit()" } %>
        </div>
        <div class="col-md-3">
          <%= form.select :customer_id,
              options_for_select([['All Customers', '']] + @customers, params[:customer_id]),
              {},
              { class: "form-select", onchange: "this.form.submit()" } %>
        </div>
        <div class="col-md-3">
          <%= form.select :product_id,
              options_for_select([['All Products', '']] + @products, params[:product_id]),
              {},
              { class: "form-select", onchange: "this.form.submit()" } %>
        </div>
        <div class="col-md-3">
          <%= form.select :delivery_person_id,
              options_for_select([['All Delivery People', '']] + @delivery_people, params[:delivery_person_id]),
              {},
              { class: "form-select", onchange: "this.form.submit()" } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Customer Formats Table -->
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
      <h6 class="m-0 font-weight-bold text-primary">
        <i class="bi bi-table"></i> Customer Formats List
      </h6>
      <small class="text-muted">Total: <%= @customer_formats.respond_to?(:total_count) ? @customer_formats.total_count : @customer_formats.count %> formats</small>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-striped" id="customer-formats-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Customer</th>
              <th>Product</th>
              <th>Pattern</th>
              <th>Quantity</th>
              <th>Delivery Person</th>
              <th>Status</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @customer_formats.each do |format| %>
              <tr>
                <td><%= format.id %></td>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="mr-3">
                      <div class="icon-circle bg-primary">
                        <i class="bi bi-person text-white"></i>
                      </div>
                    </div>
                    <div>
                      <div class="font-weight-bold"><%= "#{format.customer.first_name} #{format.customer.last_name}" %></div>
                      <div class="small text-gray-600"><%= format.customer.email %></div>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="font-weight-bold"><%= format.product.name %></span>
                </td>
                <td>
                  <span class="badge bg-info text-white"><%= format.pattern.humanize %></span>
                </td>
                <td>
                  <span class="font-weight-bold text-primary"><%= format.quantity %></span>
                </td>
                <td>
                  <% if format.delivery_person %>
                    <div class="d-flex align-items-center">
                      <div class="mr-2">
                        <div class="icon-circle bg-success">
                          <i class="bi bi-person-badge text-white"></i>
                        </div>
                      </div>
                      <div>
                        <div class="font-weight-bold"><%= "#{format.delivery_person.first_name} #{format.delivery_person.last_name}" %></div>
                      </div>
                    </div>
                  <% else %>
                    <span class="text-muted">Not Assigned</span>
                  <% end %>
                </td>
                <td>
                  <% if format.status == 'active' %>
                    <span class="badge bg-success">Active</span>
                  <% else %>
                    <span class="badge bg-secondary">Inactive</span>
                  <% end %>
                </td>
                <td>
                  <span class="text-gray-900"><%= format.created_at.strftime('%d %b %Y') %></span>
                  <div class="small text-gray-600"><%= format.created_at.strftime('%I:%M %p') %></div>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to admin_customer_format_path(format), class: "btn btn-sm btn-outline-primary", title: "View Details" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_customer_format_path(format), class: "btn btn-sm btn-outline-info", title: "Edit" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= link_to [:toggle_status, :admin, format], method: :patch, class: "btn btn-sm btn-outline-#{format.status == 'active' ? 'warning' : 'success'}", title: "#{format.status == 'active' ? 'Deactivate' : 'Activate'}" do %>
                      <i class="bi bi-#{format.status == 'active' ? 'pause' : 'play'}-circle"></i>
                    <% end %>
                    <%= link_to admin_customer_format_path(format), method: :delete,
                        confirm: "Are you sure you want to delete this customer format?",
                        class: "btn btn-sm btn-outline-danger",
                        title: "Delete" do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% if @customer_formats.empty? %>
          <div class="text-center py-5">
            <i class="bi bi-clipboard-x text-gray-400" style="font-size: 3rem;"></i>
            <h5 class="mt-3 text-gray-600">No Customer Formats Found</h5>
            <p class="text-gray-500">Create your first customer format to get started.</p>
            <%= link_to new_admin_customer_format_path, class: "btn btn-primary" do %>
              <i class="bi bi-plus-circle"></i> Create First Format
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) && @customer_formats.respond_to?(:total_pages) %>
        <div class="d-flex justify-content-between align-items-center mt-4">
          <div>
            <small class="text-muted">
              Showing <%= @customer_formats.offset_value + 1 %> - <%= [@customer_formats.offset_value + @customer_formats.length, @customer_formats.total_count].min %> of <%= @customer_formats.total_count %> customer formats
            </small>
          </div>
          <div>
            <%= paginate @customer_formats %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

