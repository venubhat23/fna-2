<% content_for :title, "Franchise Login - Atma Nirbhar Farm" %>

<div class="min-vh-100 d-flex align-items-center bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0">
          <div class="card-body p-5">
            <!-- Logo and Title -->
            <div class="text-center mb-4">
              <div class="mb-3">
                <i class="fas fa-seedling text-success" style="font-size: 3rem;"></i>
              </div>
              <h3 class="fw-bold text-dark">Atma Nirbhar Farm</h3>
              <p class="text-muted">Franchise Portal Login</p>
            </div>

            <!-- Login Form -->
            <%= form_with(model: @franchise, url: franchise_login_path, local: true, class: "needs-validation", novalidate: true) do |form| %>
              <div class="mb-3">
                <%= form.label :email, "Email Address", class: "form-label fw-semibold" %>
                <div class="input-group">
                  <span class="input-group-text bg-light">
                    <i class="fas fa-envelope text-muted"></i>
                  </span>
                  <%= form.email_field :email, class: "form-control form-control-lg",
                      placeholder: "Enter your email address", required: true, autofocus: true %>
                </div>
              </div>

              <div class="mb-4">
                <%= form.label :password, "Password", class: "form-label fw-semibold" %>
                <div class="input-group">
                  <span class="input-group-text bg-light">
                    <i class="fas fa-lock text-muted"></i>
                  </span>
                  <%= form.password_field :password, class: "form-control form-control-lg",
                      placeholder: "Enter your password", required: true %>
                </div>
              </div>

              <div class="mb-3">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="remember_me" name="remember_me">
                  <label class="form-check-label text-muted" for="remember_me">
                    Remember me on this device
                  </label>
                </div>
              </div>

              <div class="d-grid">
                <%= form.submit "Sign In", class: "btn btn-primary btn-lg fw-semibold",
                    style: "background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;" %>
              </div>
            <% end %>

            <!-- Additional Links -->
            <div class="text-center mt-4">
              <p class="text-muted mb-0">
                Need help accessing your account?
                <br>
                <small>Contact: <a href="mailto:support@dhanvantarifarm.com" class="text-decoration-none">support@dhanvantarifarm.com</a></small>
              </p>
            </div>

            <!-- Footer -->
            <div class="text-center mt-4 pt-3 border-top">
              <small class="text-muted">
                Â© <%= Date.current.year %> Atma Nirbhar Farm. All rights reserved.
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .bg-gradient {
    background-attachment: fixed;
  }

  .card {
    border-radius: 15px;
  }

  .form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
  }

  .input-group-text {
    border-right: none;
  }

  .form-control {
    border-left: none;
  }
</style>