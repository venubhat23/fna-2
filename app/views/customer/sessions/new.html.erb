<% content_for :title, 'Customer Login' %>

<div class="text-center mb-4">
  <h3 class="fw-bold">Welcome Back!</h3>
  <p class="text-muted">Sign in to your account</p>
</div>

<%= form_with url: customer_login_path, method: :post, local: true, class: "needs-validation", novalidate: true do |f| %>
  <div class="mb-3">
    <%= f.label :email_or_mobile, "Email or Mobile Number", class: "form-label" %>
    <div class="input-group">
      <span class="input-group-text"><i class="bi bi-person"></i></span>
      <%= f.text_field :email_or_mobile,
                      class: "form-control",
                      placeholder: "Enter email or mobile number",
                      required: true,
                      autofocus: true %>
      <div class="invalid-feedback">
        Please enter your email or mobile number.
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :password, "Password", class: "form-label" %>
    <div class="input-group">
      <span class="input-group-text"><i class="bi bi-lock"></i></span>
      <%= f.password_field :password,
                          class: "form-control",
                          placeholder: "Enter your password",
                          required: true %>
      <div class="invalid-feedback">
        Please enter your password.
      </div>
    </div>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :remember_me, class: "form-check-input" %>
    <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
  </div>

  <div class="d-grid gap-2 mb-3">
    <%= f.submit "Sign In", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class="text-center">
  <p class="mb-2">
    <%= link_to "Forgot your password?", customer_forgot_password_path, class: "text-decoration-none" %>
  </p>
  <p>
    Don't have an account?
    <%= link_to "Sign up here", customer_register_path, class: "text-decoration-none fw-bold" %>
  </p>
</div>

<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>