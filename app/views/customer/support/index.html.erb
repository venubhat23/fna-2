<% content_for :title, "Support - Dhanvantri Naturals" %>

<div class="support-page">
  <div class="page-header mb-4">
    <h2 class="page-title">
      <i class="fas fa-headset me-2 text-primary"></i>
      Customer Support
    </h2>
    <p class="text-muted">We're here to help you with any questions or concerns</p>
  </div>

  <div class="row g-4">
    <!-- Contact Information -->
    <div class="col-lg-6">
      <div class="card h-100">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-phone me-2"></i>
            Contact Information
          </h5>
        </div>
        <div class="card-body">
          <div class="contact-item mb-3">
            <strong>Phone:</strong>
            <p class="mb-0">+91 9900503118</p>
          </div>
          <div class="contact-item mb-3">
            <strong>Email:</strong>
            <p class="mb-0">support@dhanvantri-naturals.com</p>
          </div>
          <div class="contact-item mb-3">
            <strong>Business Hours:</strong>
            <p class="mb-0">Monday - Friday: 9:00 AM - 6:00 PM</p>
            <p class="mb-0">Saturday: 9:00 AM - 4:00 PM</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Help -->
    <div class="col-lg-6">
      <div class="card h-100">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-question-circle me-2"></i>
            Quick Help
          </h5>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            <a href="#" class="list-group-item list-group-item-action">
              <i class="fas fa-truck me-2"></i>
              Track Your Order
            </a>
            <a href="#" class="list-group-item list-group-item-action">
              <i class="fas fa-undo me-2"></i>
              Return Policy
            </a>
            <a href="#" class="list-group-item list-group-item-action">
              <i class="fas fa-credit-card me-2"></i>
              Payment Issues
            </a>
            <a href="#" class="list-group-item list-group-item-action">
              <i class="fas fa-sync me-2"></i>
              Subscription Help
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="row mt-5">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-question me-2"></i>
            Frequently Asked Questions
          </h5>
        </div>
        <div class="card-body">
          <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                  How do I track my order?
                </button>
              </h2>
              <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                <div class="accordion-body">
                  You can track your order by visiting the "My Orders" section in your dashboard. Each order will show its current status and tracking information.
                </div>
              </div>
            </div>

            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                  How do I cancel or modify my subscription?
                </button>
              </h2>
              <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                <div class="accordion-body">
                  Go to the "Subscriptions" section in your dashboard where you can pause, resume, or cancel your subscriptions as needed.
                </div>
              </div>
            </div>

            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                  What is your return policy?
                </button>
              </h2>
              <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                <div class="accordion-body">
                  We accept returns within 7 days of delivery for non-perishable items. Please contact our support team to initiate a return.
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>