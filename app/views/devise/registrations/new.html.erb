<!DOCTYPE html>
<html>
<head>
  <title>Sign Up - Atma Nirbhar Farm</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Poppins Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Simple Login CSS -->
  <%= stylesheet_link_tag "simple_login", "data-turbo-track": "reload" %>

  <style>
    /* Override for signup form to make it much wider */
    .simple-login-container {
      max-width: 950px !important;
    }

    .simple-login-card {
      max-width: 900px !important;
      width: 100% !important;
      padding: 60px 55px !important;
    }

    /* Hide all sidebars and navigation elements */
    .policy-sidebar,
    .sidebar,
    .side-panel,
    .terms-sidebar,
    .policy-panel,
    .modern-sidebar,
    #sidebar,
    .main-content,
    nav.sidebar-nav,
    .sidebar-nav {
      display: none !important;
      visibility: hidden !important;
    }

    /* Ensure full width for signup page */
    body {
      margin: 0 !important;
      padding: 0 !important;
    }

    .simple-login-wrapper {
      margin-left: 0 !important;
      width: 100vw !important;
    }

    /* Remove any main content margins */
    .main-content {
      margin-left: 0 !important;
      margin-top: 0 !important;
    }

    .form-row {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .form-row .form-group {
      flex: 1;
      margin-bottom: 0;
    }

    @media (max-width: 576px) {
      .form-row {
        flex-direction: column;
        gap: 0;
      }

      .form-row .form-group {
        margin-bottom: 1rem;
      }
    }

    .form-group {
      margin-bottom: 1rem;
    }

    .simple-subtitle {
      font-size: 14px !important;
      line-height: 1.4 !important;
    }
  </style>
</head>
<body>

<!-- Simple Centered Signup Page -->
<div class="simple-login-wrapper">
  <div class="simple-login-container">
    <div class="simple-login-card">
      <!-- Flash Messages -->
      <% if notice %>
        <div class="alert alert-success mb-3">
          <i class="fas fa-check-circle me-2"></i><%= notice %>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger mb-3">
          <i class="fas fa-exclamation-triangle me-2"></i><%= alert %>
        </div>
      <% end %>

      <!-- Logo Section -->
      <div class="text-center mb-4">
        <div class="simple-logo">
          <i class="fas fa-shield-alt"></i>
        </div>
        <h2 class="simple-title">Atma Nirbhar Farm</h2>
        <p class="simple-subtitle">Create your account to join our insurance platform</p>
      </div>

      <!-- Error Messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Simple Signup Form -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <!-- Name Fields Row -->
        <div class="form-row">
          <div class="form-group">
            <%= f.label :first_name, "First Name", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-user"></i>
              </span>
              <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", required: true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :last_name, "Last Name", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-user"></i>
              </span>
              <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: true %>
            </div>
          </div>
        </div>

        <!-- Email Field -->
        <div class="form-group">
          <%= f.label :email, "Email Address", class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text">
              <i class="fas fa-envelope"></i>
            </span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "your@email.com" %>
          </div>
        </div>

        <!-- Mobile Field -->
        <div class="form-group">
          <%= f.label :mobile, "Mobile Number", class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text">
              <i class="fas fa-phone"></i>
            </span>
            <%= f.telephone_field :mobile, class: "form-control", placeholder: "Mobile Number", required: true %>
          </div>
        </div>

        <!-- User Type and Role Row -->
        <div class="form-row">
          <div class="form-group">
            <%= f.label :user_type, "User Type", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-users"></i>
              </span>
              <%= f.select :user_type,
                  options_for_select([
                    ['Agent', 'agent'],
                    ['Affiliate', 'sub_agent'],
                    ['Customer', 'customer']
                  ], 'agent'),
                  { prompt: 'Select User Type' },
                  { class: "form-control", required: true } %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :role, "Role", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-award"></i>
              </span>
              <%= f.select :role,
                  options_for_select([
                    ['Manager', 'manager'],
                    ['Agent', 'agent_role']
                  ], 'agent_role'),
                  { prompt: 'Select Role' },
                  { class: "form-control", required: true } %>
            </div>
          </div>
        </div>

        <!-- Password Fields Row -->
        <div class="form-row">
          <div class="form-group">
            <%= f.label :password, "Password", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-lock"></i>
              </span>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password (6+ chars)" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-lock"></i>
              </span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
            </div>
          </div>
        </div>

        <!-- Active Status -->
        <div class="form-group">
          <div class="form-check">
            <%= f.check_box :status, { checked: true, class: "form-check-input" }, "true", "false" %>
            <%= f.label :status, "Active Status", class: "form-check-label" %>
          </div>
        </div>

        <%= f.submit "Create Account", class: "btn btn-primary w-100 py-3 fs-5 fw-semibold" %>
      <% end %>

      <div class="text-center mt-4">
        <span class="text-muted">Already have an account? </span>
        <%= link_to "Sign in", new_session_path(resource_name), class: "text-primary text-decoration-none fw-semibold" %>
      </div>
    </div>
  </div>
</div>

</body>
</html>